---
/**
 * Step component - Individual step in a Steps timeline
 */
interface Props {
  title: string;
  class?: string;
}

const { title, class: className } = Astro.props;
---

<div class:list={["docs-step relative pl-10 pb-8", className]}>
  <span class="absolute left-0 top-0 w-7 h-7 rounded-full bg-base-content/8 border border-base-content/15 text-base-content text-center text-sm font-bold leading-[26px] docs-step-number"></span>
  <div class="docs-step-line absolute left-[13px] top-10 w-px h-[calc(100%-2.5rem)] bg-base-content/20"></div>
  <div class="docs-step-title mb-2 leading-7">{title}</div>
  <div class="docs-step-content">
    <slot />
  </div>
</div>

<style>
  .docs-step-number::before {
    content: counter(docs-steps-counter);
  }

  .docs-step-content :global(p) {
    margin-bottom: 0.75rem;
  }

  .docs-step-content :global(p:last-child) {
    margin-bottom: 0;
  }

  .docs-step:last-child {
    padding-bottom: 0;
  }

  .docs-step:last-child .docs-step-line {
    display: none;
  }
</style>
