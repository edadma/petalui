---
/**
 * CodeBlock component - Code with window chrome styling like Starlight
 * Uses scoped styles to avoid DaisyUI conflicts
 */
import { Code } from 'astro:components';

interface Props {
  code: string;
  lang?: string;
  filename?: string;
  class?: string;
}

const { code, lang = 'tsx', filename, class: className } = Astro.props;
---

<div class:list={["code-block", className]}>
  <div class="code-header">
    <div class="window-dots">
      <span class="dot dot-red"></span>
      <span class="dot dot-yellow"></span>
      <span class="dot dot-green"></span>
    </div>
    {filename && <span class="filename">{filename}</span>}
    <button class="copy-btn" data-code={code} aria-label="Copy code">
      <svg class="copy-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
      </svg>
      <svg class="check-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor" style="display: none;">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
      </svg>
    </button>
  </div>
  <div class="code-content">
    <Code code={code} lang={lang} themes={{ light: 'github-light', dark: 'github-dark' }} defaultColor={false} />
  </div>
</div>

<style>
  .code-block {
    border-radius: 0.5rem;
    overflow: hidden;
    border: 1px solid oklch(var(--bc) / 0.1);
    background: oklch(var(--n) / 0.05);
  }

  .code-header {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 0.75rem;
    background: oklch(var(--bc) / 0.03);
    border-bottom: 1px solid oklch(var(--bc) / 0.05);
  }

  .window-dots {
    display: flex;
    gap: 0.25rem;
  }

  .dot {
    width: 0.5rem;
    height: 0.5rem;
    border-radius: 50%;
  }

  .dot-red,
  .dot-yellow,
  .dot-green {
    background: oklch(var(--bc) / 0.2);
  }

  .filename {
    font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, monospace;
    font-size: 0.8125rem;
    color: oklch(var(--bc) / 0.6);
  }

  .copy-btn {
    margin-left: auto;
    padding: 0.25rem;
    border: none;
    background: transparent;
    color: oklch(var(--bc) / 0.5);
    cursor: pointer;
    border-radius: 0.25rem;
    transition: color 0.15s, background 0.15s;
  }

  .copy-btn:hover {
    color: oklch(var(--bc) / 0.8);
    background: oklch(var(--bc) / 0.1);
  }

  .copy-icon,
  .check-icon {
    width: 1rem;
    height: 1rem;
  }

  .check-icon {
    color: oklch(var(--su));
  }

  .code-content {
    overflow-x: auto;
  }

  .code-content :global(pre) {
    margin: 0 !important;
    padding: 1rem !important;
    border-radius: 0 !important;
    background: transparent !important;
  }

  .code-content :global(code) {
    font-size: 0.875rem;
    line-height: 1.6;
  }
</style>

<script>
  document.querySelectorAll('.code-block .copy-btn').forEach(btn => {
    btn.addEventListener('click', async () => {
      const code = btn.getAttribute('data-code');
      if (code) {
        await navigator.clipboard.writeText(code);
        const copyIcon = btn.querySelector('.copy-icon') as HTMLElement;
        const checkIcon = btn.querySelector('.check-icon') as HTMLElement;
        if (copyIcon && checkIcon) {
          copyIcon.style.display = 'none';
          checkIcon.style.display = 'block';
          setTimeout(() => {
            copyIcon.style.display = 'block';
            checkIcon.style.display = 'none';
          }, 2000);
        }
      }
    });
  });
</script>
