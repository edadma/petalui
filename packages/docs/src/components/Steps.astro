---
/**
 * Steps component - Timeline-style numbered steps like Starlight
 */
interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<div class:list={["docs-steps", className]} style="counter-reset: docs-steps-counter;">
  <slot />
</div>

<style is:global>
  .docs-steps > .docs-step {
    counter-increment: docs-steps-counter;
  }
</style>
