---
import LandingLayout from '../layouts/LandingLayout.astro';
import { Code } from 'astro:components';

const features = [
  {
    title: 'Developer-Friendly',
    description: 'Intuitive API patterns you already know. Form.Item, Table columns, Modal, and more.'
  },
  {
    title: 'DaisyUI v5 Styling',
    description: 'Beautiful, themeable components with 30+ DaisyUI themes out of the box.'
  },
  {
    title: 'Test-Friendly',
    description: 'Built-in data-testid, data-state attributes, and ARIA roles for reliable testing.'
  },
  {
    title: 'TypeScript First',
    description: 'Full type safety with comprehensive prop types and IntelliSense support.'
  },
  {
    title: '90+ Components',
    description: 'Forms, tables, modals, navigation, charts, and everything you need.'
  },
  {
    title: 'Lightweight',
    description: 'Fully tree-shakable. Import only what you use.'
  }
];

const prereqCommand = `npm install -D tailwindcss @tailwindcss/vite daisyui`;

const installCommand = `npm install asterui`;

const viteConfigCode = `import { defineConfig } from 'vite'
import react from '@vitejs/plugin-react'
import tailwindcss from '@tailwindcss/vite'

export default defineConfig({
  plugins: [react(), tailwindcss()],
})`;

const cssConfigCode = `@import "tailwindcss";
@plugin "daisyui";
@source "../node_modules/asterui";`;

const usageExample = `import { Form, Input, Checkbox, Button, Modal, Card, Space, Flex, Typography } from 'asterui'

const { Link, Paragraph } = Typography

export default function App() {
  const handleSubmit = (values: { email: string; password: string; remember: boolean }) => {
    Modal.success({
      title: 'Login Successful',
      content: <pre className="text-left">{JSON.stringify(values, null, 2)}</pre>,
    })
  }

  return (
    <Flex justify="center" align="center" minHeight="screen" className="bg-base-200 p-4">
      <Card title="Sign In" className="w-full max-w-md">
        <Form onFinish={handleSubmit} initialValues={{ remember: false }}>
          <Form.Item name="email" label="Email" rules={[{ required: true }, { type: 'email' }]}>
            <Input placeholder="you@example.com" />
          </Form.Item>
          <Form.Item
            name="password"
            label="Password"
            rules={[
              { required: true },
              { min: 8, message: 'Password must be at least 8 characters' },
              { pattern: /[A-Z]/, message: 'Must contain an uppercase letter' },
              { pattern: /[a-z]/, message: 'Must contain a lowercase letter' },
              { pattern: /[0-9]/, message: 'Must contain a number' },
              { pattern: /[!@#$%^&*.?]/, message: 'Must contain a special character' },
            ]}
          >
            <Input type="password" placeholder="Enter your password" />
          </Form.Item>
          <Space justify="between" align="center" className="mb-4">
            <Form.Item name="remember" valuePropName="checked" inline>
              <Checkbox>Remember me</Checkbox>
            </Form.Item>
            <Link size="sm">Forgot password?</Link>
          </Space>
          <Button color="primary" htmlType="submit" shape="block">
            Sign In
          </Button>
          <Divider>or</Divider>
          <Paragraph align="center" size="sm">
            Don't have an account? <Link>Sign up</Link>
          </Paragraph>
        </Form>
      </Card>
    </Flex>
  )
}`;

---

<LandingLayout title="AsterUI - React Components for DaisyUI">
  <article itemscope itemtype="https://schema.org/SoftwareApplication" class="px-4 lg:px-8 max-w-6xl mx-auto">
    <section class="text-center py-16">
      <h1 class="text-5xl font-bold mb-4" itemprop="name">AsterUI</h1>
      <p class="text-xl text-base-content/70 max-w-2xl mx-auto" itemprop="description">
        React component library built on <a href="https://daisyui.com" class="link">DaisyUI v5</a> with enterprise-level developer convenience.
        Production-ready, test-friendly, and fully typed.
      </p>

      <div class="flex gap-4 justify-center mt-8">
        <a href="/getting-started" class="btn btn-primary">Get Started</a>
        <a href="https://github.com/edadma/asterui" class="btn btn-outline gap-2">
          <svg class="h-5 w-5" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
          GitHub
        </a>
      </div>
    </section>

    <section class="py-12">
      <h2 class="text-3xl font-bold text-center mb-8">Why AsterUI?</h2>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {features.map(feature => (
          <div class="card bg-base-200">
            <div class="card-body">
              <h3 class="card-title">{feature.title}</h3>
              <p>{feature.description}</p>
            </div>
          </div>
        ))}
      </div>
    </section>

    <section class="py-12">
      <h2 class="text-3xl font-bold text-center mb-8">Installation</h2>
      <div class="max-w-3xl mx-auto space-y-8">

        <!-- Step 1: Prerequisites -->
        <div class="card bg-base-200">
          <div class="card-body">
            <h3 class="card-title">
              <span class="badge badge-primary mr-2">1</span>
              Prerequisites
            </h3>
            <p class="text-base-content/70 mb-4">
              AsterUI requires <a href="https://tailwindcss.com" class="link">Tailwind CSS v4</a> and <a href="https://daisyui.com" class="link">DaisyUI v5</a> to be configured in your project.
            </p>
            <div class="relative border border-base-300 rounded-lg overflow-hidden [&_pre]:!m-0 [&_pre]:!rounded-none">
              <button class="copy-btn absolute top-2 right-2 btn btn-xs btn-ghost z-10" data-code={prereqCommand}>
                <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
                </svg>
              </button>
              <div class="[&_pre]:!p-4 [&_pre]:!rounded-none [&_pre]:!m-0 text-sm">
                <Code code={prereqCommand} lang="bash" themes={{ light: 'github-light', dark: 'github-dark' }} defaultColor={false} />
              </div>
            </div>
          </div>
        </div>

        <!-- Step 2: Configure Vite -->
        <div class="card bg-base-200">
          <div class="card-body">
            <h3 class="card-title">
              <span class="badge badge-primary mr-2">2</span>
              Configure Vite
            </h3>
            <p class="text-base-content/70 mb-4">
              Add the Tailwind plugin to your <code class="bg-base-300 px-1 rounded">vite.config.ts</code>:
            </p>
            <div class="relative border border-base-300 rounded-lg overflow-hidden [&_pre]:!m-0 [&_pre]:!rounded-none">
              <button class="copy-btn absolute top-2 right-2 btn btn-xs btn-ghost z-10" data-code={viteConfigCode}>
                <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
                </svg>
              </button>
              <div class="[&_pre]:!p-4 [&_pre]:!rounded-none [&_pre]:!m-0 text-sm">
                <Code code={viteConfigCode} lang="ts" themes={{ light: 'github-light', dark: 'github-dark' }} defaultColor={false} />
              </div>
            </div>
          </div>
        </div>

        <!-- Step 3: Configure CSS -->
        <div class="card bg-base-200">
          <div class="card-body">
            <h3 class="card-title">
              <span class="badge badge-primary mr-2">3</span>
              Configure CSS
            </h3>
            <p class="text-base-content/70 mb-4">
              Add these directives to your CSS file (e.g., <code class="bg-base-300 px-1 rounded">src/index.css</code>):
            </p>
            <div class="relative border border-base-300 rounded-lg overflow-hidden [&_pre]:!m-0 [&_pre]:!rounded-none">
              <button class="copy-btn absolute top-2 right-2 btn btn-xs btn-ghost z-10" data-code={cssConfigCode}>
                <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
                </svg>
              </button>
              <div class="[&_pre]:!p-4 [&_pre]:!rounded-none [&_pre]:!m-0 text-sm">
                <Code code={cssConfigCode} lang="css" themes={{ light: 'github-light', dark: 'github-dark' }} defaultColor={false} />
              </div>
            </div>
            <p class="text-sm text-base-content/60 mt-2">
              The <code class="bg-base-300 px-1 rounded">@source</code> directive tells Tailwind to scan AsterUI for classes.
            </p>
          </div>
        </div>

        <!-- Step 4: Install AsterUI -->
        <div class="card bg-base-200">
          <div class="card-body">
            <h3 class="card-title">
              <span class="badge badge-primary mr-2">4</span>
              Install AsterUI
            </h3>
            <div class="relative border border-base-300 rounded-lg overflow-hidden [&_pre]:!m-0 [&_pre]:!rounded-none">
              <button class="copy-btn absolute top-2 right-2 btn btn-xs btn-ghost z-10" data-code={installCommand}>
                <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
                </svg>
              </button>
              <div class="[&_pre]:!p-4 [&_pre]:!rounded-none [&_pre]:!m-0 text-sm">
                <Code code={installCommand} lang="bash" themes={{ light: 'github-light', dark: 'github-dark' }} defaultColor={false} />
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <section class="py-12">
      <h2 class="text-3xl font-bold text-center mb-8">Quick Example</h2>
      <div class="max-w-5xl mx-auto">
        <p class="text-center text-base-content/70 mb-6">
          A complete login form with validation, layout, and feedback:
        </p>
        <div class="relative border border-base-300 rounded-lg overflow-hidden [&_pre]:!m-0 [&_pre]:!rounded-none">
          <button class="copy-btn absolute top-2 right-2 btn btn-xs btn-ghost z-10" data-code={usageExample}>
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
            </svg>
          </button>
          <div class="[&_pre]:!p-4 [&_pre]:!rounded-none [&_pre]:!m-0 text-sm">
            <Code code={usageExample} lang="tsx" themes={{ light: 'github-light', dark: 'github-dark' }} defaultColor={false} />
          </div>
        </div>
      </div>
    </section>

    <section class="py-8">
      <p class="text-center">
        <a href="/llms.txt" target="_blank" class="text-sm font-mono text-base-content/60 hover:text-base-content transition-colors">llms.txt</a>
      </p>
    </section>
  </article>
</LandingLayout>

<script>
  // Copy button functionality
  document.querySelectorAll('.copy-btn').forEach(btn => {
    btn.addEventListener('click', async () => {
      const code = btn.getAttribute('data-code');
      if (code) {
        await navigator.clipboard.writeText(code);
        const originalHTML = btn.innerHTML;
        btn.innerHTML = '<svg class="w-4 h-4 text-success" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>';
        setTimeout(() => {
          btn.innerHTML = originalHTML;
        }, 2000);
      }
    });
  });
</script>
