---
import ComponentLayout from '../../layouts/ComponentLayout.astro';
import Example from '../../components/Example.astro';
import {
  BasicDemo,
  SizesDemo,
  AnimatedDemo,
  ColorsDemo,
} from '../../components/StatusDemo';
import StatusDemoSource from '../../components/StatusDemo.tsx?raw';

const api = [
  { property: 'type', description: 'Status color type', type: "'neutral' | 'primary' | 'secondary' | 'accent' | 'info' | 'success' | 'warning' | 'error'", default: "'neutral'" },
  { property: 'size', description: 'Status size', type: "'xs' | 'sm' | 'md' | 'lg' | 'xl'", default: "'md'" },
  { property: 'ping', description: 'Ping animation effect', type: 'boolean', default: 'false' },
  { property: 'bounce', description: 'Bounce animation effect', type: 'boolean', default: 'false' },
  { property: 'label', description: 'Accessibility label', type: 'string', default: '-' },
  { property: 'className', description: 'Additional CSS classes', type: 'string', default: '-' },
];
---

<ComponentLayout
  name="Status"
  description="Small indicator dot to show status like online, offline, error, etc."
  api={api}
>
  <Example title="Basic" description="Simple status indicators for different states." source={StatusDemoSource} fn="BasicDemo">
    <BasicDemo client:load slot="demo" />
  </Example>

  <Example title="Sizes" description="Available size variants." source={StatusDemoSource} fn="SizesDemo">
    <SizesDemo client:load slot="demo" />
  </Example>

  <Example title="Animated" description="Ping and bounce animation effects." source={StatusDemoSource} fn="AnimatedDemo">
    <AnimatedDemo client:load slot="demo" />
  </Example>

  <Example title="All Colors" description="All available color types." source={StatusDemoSource} fn="ColorsDemo">
    <ColorsDemo client:load slot="demo" />
  </Example>

  <section slot="accessibility" class="mb-8">
    <h2 class="text-2xl font-bold mb-4">Accessibility</h2>
    <ul class="list-disc list-inside space-y-2 text-base-content/80">
      <li>Use the <code class="bg-base-content/20 px-1 rounded">label</code> prop to provide an accessible name</li>
      <li>Consider pairing with text for screen reader users</li>
      <li>Ping animation draws attention to important status changes</li>
    </ul>
  </section>
</ComponentLayout>
