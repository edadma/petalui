---
import ComponentLayout from '../../layouts/ComponentLayout.astro';
import Example from '../../components/Example.astro';
import {
  BasicDemo,
  TypesDemo,
  SizesDemo,
  ColorsDemo,
} from '../../components/LoadingDemo';
import LoadingDemoSource from '../../components/LoadingDemo.tsx?raw';

const api = [
  {
    property: 'size',
    description: 'Loading indicator size',
    type: "'xs' | 'sm' | 'md' | 'lg'",
    default: "'md'",
  },
  {
    property: 'type',
    description: 'Loading animation type',
    type: "'spinner' | 'dots' | 'ring' | 'ball' | 'bars' | 'infinity'",
    default: "'spinner'",
  },
  {
    property: 'color',
    description: 'Loading indicator color',
    type: "'primary' | 'secondary' | 'accent' | 'neutral' | 'info' | 'success' | 'warning' | 'error'",
    default: "'primary'",
  },
  {
    property: 'className',
    description: 'Additional CSS classes',
    type: 'string',
  },
];
---

<ComponentLayout
  name="Loading"
  description="Display loading states with various animated indicators to show ongoing processes."
  api={api}
>
  <Example title="Basic Loading" description="Default loading spinner." source={LoadingDemoSource} fn="BasicDemo">
    <BasicDemo client:load slot="demo" />
  </Example>

  <Example title="Loading Types" description="Different animation types for loading indicators." source={LoadingDemoSource} fn="TypesDemo">
    <TypesDemo client:load slot="demo" />
  </Example>

  <Example title="Sizes" description="Control loading indicator size." source={LoadingDemoSource} fn="SizesDemo">
    <SizesDemo client:load slot="demo" />
  </Example>

  <Example title="Colors" description="Different color variants for loading indicators." source={LoadingDemoSource} fn="ColorsDemo">
    <ColorsDemo client:load slot="demo" />
  </Example>

  <section slot="accessibility" class="mb-8">
    <h2 class="text-2xl font-bold mb-4">Accessibility</h2>
    <ul class="list-disc list-inside space-y-2 text-base-content/80">
      <li>Uses <code class="bg-base-content/20 px-1 rounded">aria-label</code> to describe loading state</li>
      <li>Animation can be paused by users who prefer reduced motion</li>
      <li>Ensure loading indicators are paired with text for screen readers when possible</li>
    </ul>
  </section>
</ComponentLayout>
