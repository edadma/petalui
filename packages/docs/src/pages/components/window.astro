---
import ComponentLayout from '../../layouts/ComponentLayout.astro';
import Example from '../../components/Example.astro';
import {
  BasicDemo,
  WithCodeDemo,
  MultiLineDemo,
  WithPrefixDemo,
  StyledDemo,
  ContentDemo,
} from '../../components/WindowDemo';
import WindowDemoSource from '../../components/WindowDemo.tsx?raw';

const api = [
  { property: 'children', description: 'Window content', type: 'React.ReactNode', default: '-' },
  { property: 'className', description: 'Additional CSS classes for the window', type: 'string', default: '-' },
  { property: 'contentClassName', description: 'Additional CSS classes for the content area', type: 'string', default: '-' },
];
---

<ComponentLayout
  name="Window"
  description="OS-style window mockup component for showcasing code or content."
  api={api}
>
  <Example title="Basic Window" description="Simple window mockup with content." source={WindowDemoSource} fn="BasicDemo">
    <BasicDemo client:load slot="demo" />
  </Example>

  <Example title="With Code" description="Window containing code display." source={WindowDemoSource} fn="WithCodeDemo">
    <WithCodeDemo client:load slot="demo" />
  </Example>

  <Example title="Multi-line Code" description="Window with multiple lines of code." source={WindowDemoSource} fn="MultiLineDemo">
    <MultiLineDemo client:load slot="demo" />
  </Example>

  <Example title="With Prefix" description="Code lines with command prefixes." source={WindowDemoSource} fn="WithPrefixDemo">
    <WithPrefixDemo client:load slot="demo" />
  </Example>

  <Example title="Styled Window" description="Custom styled window with different background." source={WindowDemoSource} fn="StyledDemo">
    <StyledDemo client:load slot="demo" />
  </Example>

  <Example title="Custom Content" description="Window with custom content styling." source={WindowDemoSource} fn="ContentDemo">
    <ContentDemo client:load slot="demo" />
  </Example>

  <section slot="accessibility" class="mb-8">
    <h2 class="text-2xl font-bold mb-4">Accessibility</h2>
    <ul class="list-disc list-inside space-y-2 text-base-content/80">
      <li>Window chrome is decorative and marked as presentational</li>
      <li>Content area maintains proper reading order</li>
      <li>Code blocks are readable by screen readers</li>
      <li>Traffic light buttons are non-interactive decorations</li>
    </ul>
  </section>
</ComponentLayout>
