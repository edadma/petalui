---
import ComponentLayout from '../../layouts/ComponentLayout.astro';
import Example from '../../components/Example.astro';
import {
  BasicDemo,
  WithInputsDemo,
  DisabledDemo,
} from '../../components/FieldsetDemo';
import FieldsetDemoSource from '../../components/FieldsetDemo.tsx?raw';

const api = [
  { title: 'Fieldset', data: [
    { property: 'children', description: 'Content of the fieldset', type: 'React.ReactNode' },
    { property: 'disabled', description: 'Disables all form controls within', type: 'boolean', default: 'false' },
    { property: 'className', description: 'Additional CSS classes', type: 'string' },
  ]},
  { title: 'Fieldset.Legend', data: [
    { property: 'children', description: 'Legend text or content', type: 'React.ReactNode' },
    { property: 'className', description: 'Additional CSS classes', type: 'string' },
  ]},
  { title: 'Fieldset.Label', data: [
    { property: 'children', description: 'Label text or content', type: 'React.ReactNode' },
    { property: 'htmlFor', description: 'ID of the form element the label is for', type: 'string' },
    { property: 'className', description: 'Additional CSS classes', type: 'string' },
  ]},
];
---

<ComponentLayout
  name="Fieldset"
  description="Group related form controls with an optional legend and disabled state."
  api={api}
>
  <Example title="Basic Fieldset" description="Simple fieldset with legend." source={FieldsetDemoSource} fn="BasicDemo">
    <BasicDemo client:load slot="demo" />
  </Example>

  <Example title="With Form Inputs" description="Fieldset containing form inputs with labels." source={FieldsetDemoSource} fn="WithInputsDemo">
    <WithInputsDemo client:load slot="demo" />
  </Example>

  <Example title="Disabled Fieldset" description="All form controls within are disabled." source={FieldsetDemoSource} fn="DisabledDemo">
    <DisabledDemo client:load slot="demo" />
  </Example>
</ComponentLayout>
