---
import ComponentLayout from '../../layouts/ComponentLayout.astro';
import Example from '../../components/Example.astro';
import {
  BasicDemo,
  ValuesDemo,
  ColorsDemo,
  SizesDemo,
  ThicknessDemo,
  CustomContentDemo,
  NoValueDemo,
  BackgroundDemo,
} from '../../components/RadialProgressDemo';
import RadialProgressDemoSource from '../../components/RadialProgressDemo.tsx?raw';

const api = [
  { property: 'value', description: 'Progress value (0-100)', type: 'number', default: '-' },
  { property: 'size', description: 'Size in rem units or CSS string', type: 'string | number', default: '5rem' },
  { property: 'thickness', description: 'Ring thickness in pixels or CSS string', type: 'string | number', default: '10% of size' },
  { property: 'color', description: 'Progress color', type: "'primary' | 'secondary' | 'accent' | 'success' | 'warning' | 'error' | 'info' | 'neutral'", default: '-' },
  { property: 'showValue', description: 'Show percentage text', type: 'boolean', default: 'true' },
  { property: 'children', description: 'Custom content to display', type: 'React.ReactNode', default: '-' },
  { property: 'className', description: 'Additional CSS classes', type: 'string', default: '-' },
];
---

<ComponentLayout
  name="Radial Progress"
  description="Circular progress indicator with customizable appearance."
  api={api}
>
  <Example title="Basic" description="Simple radial progress with value." source={RadialProgressDemoSource} fn="BasicDemo">
    <BasicDemo client:load slot="demo" />
  </Example>

  <Example title="Different Values" description="Radial progress with various completion percentages." source={RadialProgressDemoSource} fn="ValuesDemo">
    <ValuesDemo client:load slot="demo" />
  </Example>

  <Example title="Colors" description="Radial progress with different colors." source={RadialProgressDemoSource} fn="ColorsDemo">
    <ColorsDemo client:load slot="demo" />
  </Example>

  <Example title="Custom Size" description="Adjust size using the size prop." source={RadialProgressDemoSource} fn="SizesDemo">
    <SizesDemo client:load slot="demo" />
  </Example>

  <Example title="Custom Thickness" description="Adjust ring thickness." source={RadialProgressDemoSource} fn="ThicknessDemo">
    <ThicknessDemo client:load slot="demo" />
  </Example>

  <Example title="Custom Content" description="Display custom content instead of percentage." source={RadialProgressDemoSource} fn="CustomContentDemo">
    <CustomContentDemo client:load slot="demo" />
  </Example>

  <Example title="No Value Display" description="Hide the percentage text." source={RadialProgressDemoSource} fn="NoValueDemo">
    <NoValueDemo client:load slot="demo" />
  </Example>

  <Example title="With Background" description="Add background and border styling." source={RadialProgressDemoSource} fn="BackgroundDemo">
    <BackgroundDemo client:load slot="demo" />
  </Example>

  <section slot="accessibility" class="mb-8">
    <h2 class="text-2xl font-bold mb-4">Accessibility</h2>
    <ul class="list-disc list-inside space-y-2 text-base-content/80">
      <li>Uses <code class="bg-base-content/20 px-1 rounded">role="progressbar"</code> with proper ARIA attributes</li>
      <li>Value is announced as percentage to screen readers</li>
      <li>Custom content can include additional accessible labels</li>
    </ul>
  </section>
</ComponentLayout>
