---
import ComponentLayout from '../../layouts/ComponentLayout.astro';
import Example from '../../components/Example.astro';
import {
  BasicDemo,
  ImageDemo,
  ActionsDemo,
  UnborderedDemo,
  SizesDemo,
  SideDemo,
  OverlayDemo,
  ColorsDemo,
  AlignmentDemo,
  ExtraDemo,
  HoverableDemo,
  LoadingDemo,
  MetaDemo,
  AvatarPropsDemo,
} from '../../components/CardDemo';
import CardDemoSource from '../../components/CardDemo.tsx?raw';

const api = [
  { property: 'children', description: 'Card body content', type: 'React.ReactNode' },
  { property: 'title', description: 'Card title', type: 'React.ReactNode' },
  { property: 'extra', description: 'Content in the top-right corner of the header', type: 'React.ReactNode' },
  { property: 'cover', description: 'Cover image or media element', type: 'React.ReactNode' },
  { property: 'actions', description: 'Action buttons or elements', type: 'React.ReactNode' },
  { property: 'size', description: 'Card size', type: "'xs' | 'sm' | 'md' | 'lg' | 'xl'" },
  { property: 'bordered', description: 'Add border and shadow to card', type: 'boolean', default: 'true' },
  { property: 'side', description: 'Place cover beside content (horizontal layout)', type: 'boolean', default: 'false' },
  { property: 'imageFull', description: 'Make cover image a full background overlay', type: 'boolean', default: 'false' },
  { property: 'actionsJustify', description: 'Horizontal alignment of actions', type: "'start' | 'center' | 'end'", default: "'end'" },
  { property: 'loading', description: 'Show skeleton loading state', type: 'boolean', default: 'false' },
  { property: 'hoverable', description: 'Enable hover shadow effect', type: 'boolean', default: 'false' },
  { property: 'avatar', description: 'Avatar element (for inline meta layout)', type: 'React.ReactNode' },
  { property: 'description', description: 'Description text (for inline meta layout)', type: 'React.ReactNode' },
  { property: 'className', description: 'Additional CSS classes', type: 'string' },
  { property: 'bodyClassName', description: 'Additional CSS classes for the card-body element', type: 'string' },
  { property: 'style', description: 'Inline styles', type: 'React.CSSProperties' },
];
---

<ComponentLayout
  name="Card"
  description="Container component for grouping related content with optional images, titles, and actions."
  api={api}
>
  <Example title="Basic Card" description="Simple card with title and content." source={CardDemoSource} fn="BasicDemo">
    <BasicDemo client:load slot="demo" />
  </Example>

  <Example title="Card with Image" description="Card with a cover image at the top." source={CardDemoSource} fn="ImageDemo">
    <ImageDemo client:load slot="demo" />
  </Example>

  <Example title="Card with Actions" description="Card with action buttons." source={CardDemoSource} fn="ActionsDemo">
    <ActionsDemo client:load slot="demo" />
  </Example>

  <Example title="Unbordered Card" description="Card without border (cards have borders by default)." source={CardDemoSource} fn="UnborderedDemo">
    <UnborderedDemo client:load slot="demo" />
  </Example>

  <Example title="Card Sizes" description="Cards in different sizes." source={CardDemoSource} fn="SizesDemo">
    <SizesDemo client:load slot="demo" />
  </Example>

  <Example title="Side Layout" description="Horizontal card with image on the side." source={CardDemoSource} fn="SideDemo">
    <SideDemo client:load slot="demo" />
  </Example>

  <Example title="Full Background Image" description="Card with image as full background overlay." source={CardDemoSource} fn="OverlayDemo">
    <OverlayDemo client:load slot="demo" />
  </Example>

  <Example title="Custom Colors" description="Card with custom background colors using className." source={CardDemoSource} fn="ColorsDemo">
    <ColorsDemo client:load slot="demo" />
  </Example>

  <Example title="Action Alignment" description="Different action button alignments." source={CardDemoSource} fn="AlignmentDemo">
    <AlignmentDemo client:load slot="demo" />
  </Example>

  <Example title="Extra Content" description="Card with extra content in the top-right corner." source={CardDemoSource} fn="ExtraDemo">
    <ExtraDemo client:load slot="demo" />
  </Example>

  <Example title="Hoverable" description="Card with hover effect." source={CardDemoSource} fn="HoverableDemo">
    <HoverableDemo client:load slot="demo" />
  </Example>

  <Example title="Loading State" description="Card showing skeleton placeholders while loading." source={CardDemoSource} fn="LoadingDemo">
    <LoadingDemo client:load slot="demo" />
  </Example>

  <Example title="Card.Meta" description="Use Card.Meta for avatar with title and description layout." source={CardDemoSource} fn="MetaDemo">
    <MetaDemo client:load slot="demo" />
  </Example>

  <Example title="Card with Avatar Props" description="Alternative inline avatar layout using Card props directly." source={CardDemoSource} fn="AvatarPropsDemo">
    <AvatarPropsDemo client:load slot="demo" />
  </Example>

  <section slot="accessibility" class="mb-8">
    <div class="alert alert-info">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="stroke-current shrink-0 w-6 h-6"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
      <div>
        <strong>Usage Tips:</strong>
        <ul class="list-disc list-inside mt-2 space-y-1">
          <li>Pass content directly as children</li>
          <li>Use <code class="bg-base-content/20 px-1 rounded">title</code> prop for card headings</li>
          <li>Use <code class="bg-base-content/20 px-1 rounded">cover</code> prop for images or media</li>
          <li>Use <code class="bg-base-content/20 px-1 rounded">actions</code> prop for buttons or action elements</li>
          <li>Combine with Tailwind utility classes via <code class="bg-base-content/20 px-1 rounded">className</code> for custom styling</li>
        </ul>
      </div>
    </div>
  </section>
</ComponentLayout>
