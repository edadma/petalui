---
import ComponentLayout from '../../layouts/ComponentLayout.astro';
import Example from '../../components/Example.astro';
import {
  SwapDemo,
  CustomThemesDemo,
  SwapCallbackDemo,
  DropdownDemo,
  DropdownDefaultDemo,
  DropdownCallbackDemo,
  ToggleDemo,
  ToggleSizesDemo,
} from '../../components/ThemeControllerDemo';
import ThemeControllerDemoSource from '../../components/ThemeControllerDemo.tsx?raw';

const swapApi = [
  { property: 'lightTheme', description: 'Theme name for light mode', type: 'string', default: "'light'" },
  { property: 'darkTheme', description: 'Theme name for dark mode', type: 'string', default: "'dark'" },
  { property: 'defaultChecked', description: 'Initially checked (dark theme)', type: 'boolean', default: '-' },
  { property: 'onChange', description: 'Callback when theme changes', type: '(theme: string) => void', default: '-' },
  { property: 'className', description: 'Additional CSS classes', type: 'string', default: '-' },
];

const dropdownApi = [
  { property: 'themes', description: 'Array of available theme names', type: 'string[]', default: '-' },
  { property: 'defaultTheme', description: 'Initially selected theme', type: 'string', default: '-' },
  { property: 'onChange', description: 'Callback when theme changes', type: '(theme: string) => void', default: '-' },
  { property: 'className', description: 'Additional CSS classes', type: 'string', default: '-' },
];

const toggleApi = [
  { property: 'lightTheme', description: 'Theme name for light mode', type: 'string', default: "'light'" },
  { property: 'darkTheme', description: 'Theme name for dark mode', type: 'string', default: "'dark'" },
  { property: 'defaultChecked', description: 'Initially checked (dark theme)', type: 'boolean', default: '-' },
  { property: 'onChange', description: 'Callback when theme changes', type: '(theme: string) => void', default: '-' },
  { property: 'size', description: 'Toggle size', type: "'xs' | 'sm' | 'md' | 'lg'", default: "'md'" },
  { property: 'className', description: 'Additional CSS classes', type: 'string', default: '-' },
];

const api = [
  ...swapApi,
  ...toggleApi,
  ...dropdownApi,
];
---

<ComponentLayout
  name="ThemeController"
  description="Components for switching between daisyUI themes."
  api={api}
>
  <Example title="Swap (Sun/Moon)" description="Toggle between light and dark themes with animated icons." source={ThemeControllerDemoSource} fn="SwapDemo">
    <SwapDemo client:only="react" slot="demo" />
  </Example>

  <Example title="Custom Themes" description="Use custom theme names for light and dark modes." source={ThemeControllerDemoSource} fn="CustomThemesDemo">
    <CustomThemesDemo client:only="react" slot="demo" />
  </Example>

  <Example title="With onChange Callback" description="Handle theme changes with a callback." source={ThemeControllerDemoSource} fn="SwapCallbackDemo">
    <SwapCallbackDemo client:only="react" slot="demo" />
  </Example>

  <Example title="Dropdown (Multiple Themes)" description="Select from multiple themes using a dropdown menu." source={ThemeControllerDemoSource} fn="DropdownDemo">
    <DropdownDemo client:only="react" slot="demo" />
  </Example>

  <Example title="Dropdown with Default Theme" description="Set a default selected theme for the dropdown." source={ThemeControllerDemoSource} fn="DropdownDefaultDemo">
    <DropdownDefaultDemo client:only="react" slot="demo" />
  </Example>

  <Example title="Dropdown with onChange" description="Handle theme selection changes." source={ThemeControllerDemoSource} fn="DropdownCallbackDemo">
    <DropdownCallbackDemo client:only="react" slot="demo" />
  </Example>

  <Example title="Toggle Switch" description="Simple toggle switch for light/dark theme." source={ThemeControllerDemoSource} fn="ToggleDemo">
    <ToggleDemo client:only="react" slot="demo" />
  </Example>

  <Example title="Toggle Sizes" description="Toggle switches in different sizes." source={ThemeControllerDemoSource} fn="ToggleSizesDemo">
    <ToggleSizesDemo client:only="react" slot="demo" />
  </Example>

  <section slot="accessibility" class="mb-8">
    <h2 class="text-2xl font-bold mb-4">Accessibility</h2>
    <ul class="list-disc list-inside space-y-2 text-base-content/80">
      <li>Swap uses checkbox pattern with animated sun/moon icons</li>
      <li>Toggle uses checkbox with aria-label for screen readers</li>
      <li>Dropdown uses radio inputs with aria-label for each theme option</li>
      <li>Theme changes are immediately visible across all components</li>
      <li>All variants are keyboard accessible</li>
    </ul>
  </section>
</ComponentLayout>
