---
import ComponentLayout from '../../layouts/ComponentLayout.astro';
import Example from '../../components/Example.astro';
import {
  BasicPhoneDemo,
  ImagePhoneDemo,
  ColorPhoneDemo,
  AppPhoneDemo,
  ChatPhoneDemo,
} from '../../components/PhoneDemo';
import PhoneDemoSource from '../../components/PhoneDemo.tsx?raw';

const api = [
  { property: 'children', description: 'Content inside the phone screen', type: 'React.ReactNode', default: '-' },
  { property: 'color', description: 'Custom frame color', type: 'string', default: '-' },
  { property: 'className', description: 'Classes for phone container', type: 'string', default: '-' },
  { property: 'displayClassName', description: 'Classes for display area', type: 'string', default: '-' },
];
---

<ComponentLayout
  name="Phone"
  description="Display content in an iPhone-style phone frame mockup."
  api={api}
>
  <Example title="Basic Phone" description="Simple phone mockup with centered content." source={PhoneDemoSource} fn="BasicPhoneDemo">
    <BasicPhoneDemo client:load slot="demo" />
  </Example>

  <Example title="With Image" description="Display an image as wallpaper." source={PhoneDemoSource} fn="ImagePhoneDemo">
    <ImagePhoneDemo client:load slot="demo" />
  </Example>

  <Example title="Custom Color" description="Customize the phone frame color." source={PhoneDemoSource} fn="ColorPhoneDemo">
    <ColorPhoneDemo client:load slot="demo" />
  </Example>

  <Example title="App Interface" description="Mock up a mobile app layout." source={PhoneDemoSource} fn="AppPhoneDemo">
    <AppPhoneDemo client:load slot="demo" />
  </Example>

  <Example title="Chat Interface" description="Mock up a chat app layout." source={PhoneDemoSource} fn="ChatPhoneDemo">
    <ChatPhoneDemo client:load slot="demo" />
  </Example>

  <section slot="accessibility" class="mb-8">
    <h2 class="text-2xl font-bold mb-4">Accessibility</h2>
    <ul class="list-disc list-inside space-y-2 text-base-content/80">
      <li>Phone mockup is decorative - content inside should be accessible</li>
      <li>Images inside should have appropriate <code class="bg-base-content/20 px-1 rounded">alt</code> text</li>
      <li>Interactive elements inside remain fully accessible</li>
    </ul>
  </section>
</ComponentLayout>
