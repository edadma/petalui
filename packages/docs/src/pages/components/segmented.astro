---
import ComponentLayout from '../../layouts/ComponentLayout.astro';
import Example from '../../components/Example.astro';
import {
  BasicDemo,
  DisabledItemsDemo,
  SizesDemo,
  BlockDemo,
  DisabledDemo,
  WithIconsDemo,
} from '../../components/SegmentedDemo';
import SegmentedDemoSource from '../../components/SegmentedDemo.tsx?raw';

const api = [
  { property: 'value', description: 'Currently selected value (controlled)', type: 'string | number', default: '-' },
  { property: 'defaultValue', description: 'Default selected value (uncontrolled)', type: 'string | number', default: '-' },
  { property: 'onChange', description: 'Callback when selection changes', type: '(value: string | number) => void', default: '-' },
  { property: 'size', description: 'Size of the control', type: "'xs' | 'sm' | 'md' | 'lg'", default: "'md'" },
  { property: 'block', description: 'Take full width of container', type: 'boolean', default: 'false' },
  { property: 'disabled', description: 'Disable all options', type: 'boolean', default: 'false' },
  { property: 'className', description: 'Additional CSS class', type: 'string', default: '-' },
  { property: 'children', description: 'Segmented.Item components', type: 'ReactNode', default: '-' },
];

const itemApi = [
  { property: 'value', description: 'Option value (required)', type: 'string | number', default: '-' },
  { property: 'disabled', description: 'Disable this option', type: 'boolean', default: 'false' },
  { property: 'icon', description: 'Icon before label', type: 'ReactNode', default: '-' },
  { property: 'children', description: 'Label content', type: 'ReactNode', default: '-' },
  { property: 'className', description: 'Additional CSS class', type: 'string', default: '-' },
];
---

<ComponentLayout
  name="Segmented"
  description="Inline toggle for switching between mutually exclusive options."
  api={[
    { title: 'Segmented', data: api },
    { title: 'Segmented.Item', data: itemApi }
  ]}
>
  <Example title="Basic Usage" description="Simple segmented control for view switching." source={SegmentedDemoSource} fn="BasicDemo">
    <BasicDemo client:load slot="demo" />
  </Example>

  <Example title="Disabled Items" description="Individual items can be disabled." source={SegmentedDemoSource} fn="DisabledItemsDemo">
    <DisabledItemsDemo client:load slot="demo" />
  </Example>

  <Example title="Sizes" description="Four size options available." source={SegmentedDemoSource} fn="SizesDemo">
    <SizesDemo client:load slot="demo" />
  </Example>

  <Example title="Block Mode" description="Full width with equally sized options." source={SegmentedDemoSource} fn="BlockDemo">
    <BlockDemo client:load slot="demo" />
  </Example>

  <Example title="Disabled" description="Disabled state for the entire control." source={SegmentedDemoSource} fn="DisabledDemo">
    <DisabledDemo client:load slot="demo" />
  </Example>

  <Example title="With Icons" description="Options with icons and labels." source={SegmentedDemoSource} fn="WithIconsDemo">
    <WithIconsDemo client:load slot="demo" />
  </Example>

  <section slot="accessibility" class="mb-8">
    <h2 class="text-2xl font-bold mb-4">When to Use</h2>
    <ul class="list-disc list-inside space-y-2 text-base-content/80">
      <li><strong>View toggles</strong>: Switch between List/Grid/Table views</li>
      <li><strong>Time periods</strong>: Day/Week/Month/Year filters</li>
      <li><strong>Size selectors</strong>: S/M/L/XL options</li>
      <li><strong>Alignment</strong>: Left/Center/Right controls</li>
      <li><strong>Mode switches</strong>: Light/Dark theme toggles</li>
    </ul>
  </section>

  <section slot="accessibility" class="mb-8">
    <h2 class="text-2xl font-bold mb-4">Segmented vs Radio.Group</h2>
    <div class="overflow-x-auto">
      <table class="table">
        <thead>
          <tr>
            <th>Segmented</th>
            <th>Radio.Group</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>Immediate UI state changes</td>
            <td>Form field values</td>
          </tr>
          <tr>
            <td>Compact, button-like appearance</td>
            <td>Traditional radio buttons</td>
          </tr>
          <tr>
            <td>Always visible options</td>
            <td>Can have many options</td>
          </tr>
          <tr>
            <td>2-5 options typically</td>
            <td>Any number of options</td>
          </tr>
        </tbody>
      </table>
    </div>
  </section>
</ComponentLayout>
