---
import Layout from '../../layouts/Layout.astro';
import ApiTable from '../../components/ApiTable.astro';
import { Code } from 'astro:components';

const floatButtonApi = [
  { property: 'icon', description: 'Icon to display in the button', type: 'React.ReactNode' },
  { property: 'description', description: 'Description text below icon', type: 'React.ReactNode' },
  { property: 'type', description: 'Button type/color', type: "'default' | 'primary'", default: "'default'" },
  { property: 'shape', description: 'Button shape', type: "'circle' | 'square'", default: "'circle'" },
  { property: 'tooltip', description: 'Tooltip text on hover', type: 'string' },
  { property: 'tooltipPlacement', description: 'Tooltip position', type: "'left' | 'right' | 'top' | 'bottom'", default: "'left'" },
  { property: 'badge', description: 'Badge content to show', type: 'number | React.ReactNode' },
  { property: 'href', description: 'Link URL (renders as anchor)', type: 'string' },
  { property: 'target', description: 'Link target', type: 'string' },
  { property: 'onClick', description: 'Click event handler', type: '() => void' },
  { property: 'className', description: 'Additional CSS classes', type: 'string' },
];

const floatButtonGroupApi = [
  { property: 'children', description: 'FloatButton components to group', type: 'React.ReactNode' },
  { property: 'flower', description: 'Arrange buttons in quarter-circle (radial) layout', type: 'boolean', default: 'false' },
  { property: 'shape', description: 'Button shape for children', type: "'circle' | 'square'", default: "'circle'" },
  { property: 'icon', description: 'Main trigger button icon', type: 'React.ReactNode' },
  { property: 'mainAction', description: 'Main action button icon (replaces trigger when open)', type: 'React.ReactNode' },
  { property: 'onMainAction', description: 'Click handler for main action button', type: '() => void' },
  { property: 'showClose', description: 'Show close button when open', type: 'boolean', default: 'false' },
  { property: 'type', description: 'Button type/color', type: "'default' | 'primary'", default: "'default'" },
  { property: 'position', description: 'Position on screen', type: "'bottom-right' | 'bottom-left' | 'top-right' | 'top-left'", default: "'bottom-right'" },
  { property: 'offset', description: 'Distance from edge in pixels', type: 'number', default: '24' },
];

const floatButtonBackTopApi = [
  { property: 'visibilityHeight', description: 'Scroll distance before button appears (pixels)', type: 'number', default: '400' },
  { property: 'target', description: 'Scroll target element', type: '() => HTMLElement | Window' },
  { property: 'onClick', description: 'Click event handler (called before scrolling)', type: '() => void' },
  { property: 'icon', description: 'Custom icon', type: 'React.ReactNode' },
  { property: 'duration', description: 'Scroll animation duration in ms', type: 'number', default: '450' },
  { property: 'position', description: 'Position on screen', type: "'bottom-right' | 'bottom-left'", default: "'bottom-right'" },
  { property: 'offset', description: 'Distance from edge in pixels', type: 'number', default: '24' },
];

const examples = [
  {
    id: 'basic',
    title: 'Basic',
    description: 'Simple floating action button.',
    code: `import React from 'react'
import { FloatButton, Modal } from 'asterui'
import { PlusIcon } from '@aster-ui/icons'

const App: React.FC = () => (
  <FloatButton
    icon={<PlusIcon />}
    onClick={() => Modal.info({ title: 'FloatButton', content: 'Button clicked!' })}
  />
)

export default App`,
  },
  {
    id: 'with-tooltip',
    title: 'With Tooltip',
    description: 'Float button with tooltip on hover.',
    code: `import React from 'react'
import { FloatButton, Modal } from 'asterui'
import { PlusIcon } from '@aster-ui/icons'

const App: React.FC = () => (
  <FloatButton
    icon={<PlusIcon />}
    tooltip="Add new item"
    type="primary"
    onClick={() => Modal.info({ title: 'Add Item', content: 'Add clicked!' })}
  />
)

export default App`,
  },
  {
    id: 'types',
    title: 'Types',
    description: 'Default and primary button types.',
    code: `import React from 'react'
import { FloatButton, Modal } from 'asterui'
import { PlusIcon, HeartIcon } from '@aster-ui/icons'

const App: React.FC = () => (
  <>
    <FloatButton
      icon={<PlusIcon />}
      type="default"
      onClick={() => Modal.info({ title: 'Default', content: 'Default type' })}
    />
    <FloatButton
      icon={<HeartIcon />}
      type="primary"
      onClick={() => Modal.info({ title: 'Primary', content: 'Primary type' })}
    />
  </>
)

export default App`,
  },
  {
    id: 'shapes',
    title: 'Shapes',
    description: 'Circle and square button shapes.',
    code: `import React from 'react'
import { FloatButton } from 'asterui'
import { PlusIcon } from '@aster-ui/icons'

const App: React.FC = () => (
  <>
    <FloatButton icon={<PlusIcon />} shape="circle" />
    <FloatButton icon={<PlusIcon />} shape="square" />
  </>
)

export default App`,
  },
  {
    id: 'badge',
    title: 'With Badge',
    description: 'Float button with notification badge.',
    code: `import React from 'react'
import { FloatButton, Modal } from 'asterui'
import { ChatBubbleLeftRightIcon } from '@aster-ui/icons'

const App: React.FC = () => (
  <FloatButton
    icon={<ChatBubbleLeftRightIcon />}
    badge={5}
    onClick={() => Modal.info({ title: 'Messages', content: 'You have 5 unread messages' })}
  />
)

export default App`,
  },
  {
    id: 'group',
    title: 'Float Button Group',
    description: 'Group of float buttons that expand on click.',
    code: `import React from 'react'
import { FloatButton, Modal } from 'asterui'
import { PlusIcon, QuestionMarkCircleIcon, ChatBubbleLeftRightIcon, ArrowPathIcon } from '@aster-ui/icons'

const App: React.FC = () => (
  <FloatButton.Group icon={<PlusIcon />}>
    <FloatButton
      icon={<QuestionMarkCircleIcon />}
      onClick={() => Modal.info({ title: 'Help', content: 'Help section' })}
    />
    <FloatButton
      icon={<ChatBubbleLeftRightIcon />}
      onClick={() => Modal.info({ title: 'Support', content: 'Contact support' })}
    />
    <FloatButton
      icon={<ArrowPathIcon />}
      onClick={() => Modal.info({ title: 'Refresh', content: 'Refreshing...' })}
    />
  </FloatButton.Group>
)

export default App`,
  },
  {
    id: 'flower',
    title: 'Flower Layout',
    description: 'Radial quarter-circle arrangement using the flower prop. The mainAction button replaces the trigger when open.',
    code: `import React from 'react'
import { FloatButton, Modal } from 'asterui'
import { PlusIcon, HeartIcon, CameraIcon, PhotoIcon, MicrophoneIcon } from '@aster-ui/icons'

const App: React.FC = () => (
  <FloatButton.Group
    flower
    icon={<PlusIcon />}
    mainAction={<HeartIcon />}
    onMainAction={() => Modal.info({ title: 'Main Action', content: 'Main action clicked!' })}
  >
    <FloatButton
      icon={<CameraIcon />}
      onClick={() => Modal.info({ title: 'Camera', content: 'Open camera' })}
    />
    <FloatButton
      icon={<PhotoIcon />}
      onClick={() => Modal.info({ title: 'Gallery', content: 'Open gallery' })}
    />
    <FloatButton
      icon={<MicrophoneIcon />}
      onClick={() => Modal.info({ title: 'Voice', content: 'Record voice' })}
    />
  </FloatButton.Group>
)

export default App`,
  },
  {
    id: 'back-top',
    title: 'Back to Top',
    description: 'Scroll to top button that appears after scrolling down.',
    code: `import React from 'react'
import { FloatButton } from 'asterui'

const App: React.FC = () => (
  <FloatButton.BackTop visibilityHeight={400} />
)

export default App`,
  },
];
---

<Layout title="FloatButton - AsterUI">
  <div>
    <!-- Header -->
    <div class="mb-8">
      <nav class="text-sm breadcrumbs mb-4">
        <ul>
          <li><a href="/">Home</a></li>
          <li><a href="/components">Components</a></li>
          <li>FloatButton</li>
        </ul>
      </nav>
      <h1 class="text-4xl font-bold mb-2">FloatButton</h1>
      <p class="text-base-content/70 text-lg">
        Floating action button that stays fixed on the page for quick access to common actions.
      </p>
    </div>

    <!-- Import -->
    <section class="mb-8">
      <h2 class="text-2xl font-bold mb-4">Import</h2>
      <div class="border border-base-300 rounded-lg overflow-hidden [&_pre]:!m-0 [&_pre]:!rounded-none">
        <Code code="import { FloatButton } from 'asterui'" lang="tsx" themes={{ light: 'github-light', dark: 'github-dark' }} defaultColor={false} />
      </div>
    </section>

    <!-- Examples -->
    <section class="mb-12">
      <h2 class="text-2xl font-bold mb-6">Examples</h2>

      <div class="columns-1 lg:columns-2 gap-6">
      {examples.map((example, i) => (
        <div class="example-card mb-6 border border-base-300 rounded-lg break-inside-avoid">
          <div class="p-4 bg-base-100 rounded-t-lg">
            <h3 class="text-lg font-semibold mb-1">{example.title}</h3>
            <p class="text-sm text-base-content/70 mb-4">{example.description}</p>
            <div class="demo-container" data-example={example.id}></div>
          </div>
          <div class="border-t border-base-300 flex justify-center bg-base-200 rounded-b-lg">
            <div class="tooltip tooltip-top" data-tip="Show code">
              <button class="toggle-code btn btn-ghost btn-sm font-mono">
                &lt;&#8201;&gt;
              </button>
            </div>
          </div>
          <div class="code-panel relative" aria-hidden="true">
              <button class="copy-btn absolute top-2 right-2 btn btn-xs btn-ghost z-10" data-code={example.code}>
                <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
                </svg>
              </button>
              <div class="[&_pre]:!p-4 [&_pre]:!rounded-none [&_pre]:!m-0 text-sm">
                <Code code={example.code} lang="tsx" themes={{ light: 'github-light', dark: 'github-dark' }} defaultColor={false} />
              </div>
          </div>
        </div>
      ))}
      </div>
    </section>

    <!-- API -->
    <section class="mb-12">
      <h2 class="text-2xl font-bold mb-6">API</h2>
      <ApiTable title="FloatButton" data={floatButtonApi} />
      <div class="mt-6">
        <ApiTable title="FloatButton.Group" data={floatButtonGroupApi} />
      </div>
      <div class="mt-6">
        <ApiTable title="FloatButton.BackTop" data={floatButtonBackTopApi} />
      </div>
    </section>

    <!-- Accessibility -->
    <section class="mb-8">
      <h2 class="text-2xl font-bold mb-4">Accessibility</h2>
      <ul class="list-disc list-inside space-y-2 text-base-content/80">
        <li>Uses native <code class="bg-base-content/20 px-1 rounded">&lt;button&gt;</code> element for proper keyboard support</li>
        <li>Supports <code class="bg-base-content/20 px-1 rounded">href</code> prop to render as anchor for link functionality</li>
        <li>Tooltips provide context for screen readers when present</li>
        <li>Focus states are clearly visible for keyboard navigation</li>
        <li>Group expansion is keyboard accessible</li>
        <li>BackTop button appears/disappears based on scroll position</li>
      </ul>
    </section>
  </div>
</Layout>

<style>
  .code-panel {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.3s ease-out;
  }
  .example-card.open .code-panel {
    max-height: 2000px;
  }
</style>

<script>
  import '../../scripts/floatbuttonDemos';

  // Toggle code visibility
  document.querySelectorAll('.toggle-code').forEach(btn => {
    btn.addEventListener('click', () => {
      const card = btn.closest('.example-card');
      if (card) {
        card.classList.toggle('open');
        const panel = card.querySelector('.code-panel');
        const tooltip = btn.closest('.tooltip');
        if (card.classList.contains('open')) {
          panel?.setAttribute('aria-hidden', 'false');
          tooltip?.setAttribute('data-tip', 'Hide code');
        } else {
          panel?.setAttribute('aria-hidden', 'true');
          tooltip?.setAttribute('data-tip', 'Show code');
        }
      }
    });
  });
</script>
