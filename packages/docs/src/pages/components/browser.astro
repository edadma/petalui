---
import ComponentLayout from '../../layouts/ComponentLayout.astro';
import Example from '../../components/Example.astro';
import {
  BasicDemo,
  PreviewDemo,
  GradientDemo,
  DashboardDemo,
} from '../../components/BrowserDemo';
import BrowserDemoSource from '../../components/BrowserDemo.tsx?raw';

const api = [
  { property: 'children', description: 'Content inside the browser viewport', type: 'React.ReactNode' },
  { property: 'url', description: 'URL shown in address bar', type: 'string', default: "'https://example.com'" },
  { property: 'className', description: 'Classes for browser container', type: 'string' },
  { property: 'contentClassName', description: 'Classes for content area', type: 'string' },
];
---

<ComponentLayout
  name="Browser"
  description="Display content in a browser window mockup with address bar."
  api={api}
>
  <Example title="Basic Browser" description="Browser window with URL bar." source={BrowserDemoSource} fn="BasicDemo">
    <BasicDemo client:load slot="demo" />
  </Example>

  <Example title="Website Preview" description="Preview a website layout." source={BrowserDemoSource} fn="PreviewDemo">
    <PreviewDemo client:load slot="demo" />
  </Example>

  <Example title="With Background" description="Custom background color." source={BrowserDemoSource} fn="GradientDemo">
    <GradientDemo client:load slot="demo" />
  </Example>

  <Example title="Dashboard Preview" description="Mock up a dashboard UI." source={BrowserDemoSource} fn="DashboardDemo">
    <DashboardDemo client:load slot="demo" />
  </Example>
</ComponentLayout>
