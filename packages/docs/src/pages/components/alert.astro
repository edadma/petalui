---
import ComponentLayout from '../../layouts/ComponentLayout.astro';
import Example from '../../components/Example.astro';
import {
  BasicDemo,
  TypesDemo,
  ActionDemo,
  OutlineDemo,
} from '../../components/AlertDemo';
import AlertDemoSource from '../../components/AlertDemo.tsx?raw';

const api = [
  { property: 'children', description: 'Alert content', type: 'React.ReactNode' },
  { property: 'type', description: 'Alert color variant', type: "'info' | 'success' | 'warning' | 'error'" },
  { property: 'outline', description: 'Outline style', type: 'boolean', default: 'false' },
  { property: 'dash', description: 'Dash outline style', type: 'boolean', default: 'false' },
  { property: 'soft', description: 'Soft style', type: 'boolean', default: 'false' },
  { property: 'vertical', description: 'Vertical layout', type: 'boolean', default: 'false' },
  { property: 'className', description: 'Additional CSS classes', type: 'string' },
];
---

<ComponentLayout
  name="Alert"
  description="Display important messages and notifications to users."
  api={api}
>
  <Example title="Basic Alert" description="Simple alert with icon and text." source={AlertDemoSource} fn="BasicDemo">
    <BasicDemo client:load slot="demo" />
  </Example>

  <Example title="Alert Types" description="Different color variants for context." source={AlertDemoSource} fn="TypesDemo">
    <TypesDemo client:load slot="demo" />
  </Example>

  <Example title="With Action Button" description="Alert with dismissal or action button." source={AlertDemoSource} fn="ActionDemo">
    <ActionDemo client:load slot="demo" />
  </Example>

  <Example title="Outline Style" description="Alert with outline variant." source={AlertDemoSource} fn="OutlineDemo">
    <OutlineDemo client:load slot="demo" />
  </Example>

  <section slot="accessibility" class="mb-8">
    <h2 class="text-2xl font-bold mb-4">Accessibility</h2>
    <ul class="list-disc list-inside space-y-2 text-base-content/80">
      <li>Uses <code class="bg-base-content/20 px-1 rounded">role="alert"</code> for screen readers</li>
      <li>Color is not the only indicator - icons provide additional context</li>
      <li>Action buttons are keyboard accessible</li>
    </ul>
  </section>
</ComponentLayout>
