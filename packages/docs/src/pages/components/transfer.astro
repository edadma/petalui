---
import ComponentLayout from '../../layouts/ComponentLayout.astro';
import Example from '../../components/Example.astro';
import {
  BasicTransferDemo,
  SearchTransferDemo,
  CustomRenderTransferDemo,
  DisabledItemsTransferDemo,
  TitlesTransferDemo,
} from '../../components/TransferDemo';
import TransferDemoSource from '../../components/TransferDemo.tsx?raw';

const api = [
  { property: 'dataSource', description: 'Data source array', type: 'TransferItem[]', default: '[]' },
  { property: 'targetKeys', description: 'Keys of items in the right column', type: 'string[]', default: '[]' },
  { property: 'onChange', description: 'Callback when items are transferred', type: '(targetKeys: string[]) => void', default: '-' },
  { property: 'render', description: 'Custom render function for items', type: '(item: TransferItem) => React.ReactNode', default: '-' },
  { property: 'showSearch', description: 'Show search input', type: 'boolean', default: 'false' },
  { property: 'titles', description: 'Titles for left and right columns', type: '[string, string]', default: "['Source', 'Target']" },
  { property: 'className', description: 'Additional CSS classes', type: 'string', default: '-' },
];

const transferItemApi = [
  { property: 'key', description: 'Unique identifier', type: 'string', default: '-' },
  { property: 'title', description: 'Display title', type: 'string', default: '-' },
  { property: 'description', description: 'Optional description', type: 'string', default: '-' },
  { property: 'disabled', description: 'Whether item is disabled', type: 'boolean', default: 'false' },
];
---

<ComponentLayout
  name="Transfer"
  description="Two-column transfer component for moving items between lists."
  api={[
    { title: 'Transfer', data: api },
    { title: 'TransferItem', data: transferItemApi }
  ]}
>
  <Example title="Basic Transfer" description="Move items between two columns." source={TransferDemoSource} fn="BasicTransferDemo">
    <BasicTransferDemo client:load slot="demo" />
  </Example>

  <Example title="With Search" description="Filter items with search input." source={TransferDemoSource} fn="SearchTransferDemo">
    <SearchTransferDemo client:load slot="demo" />
  </Example>

  <Example title="Custom Render" description="Custom item rendering with title and description." source={TransferDemoSource} fn="CustomRenderTransferDemo">
    <CustomRenderTransferDemo client:load slot="demo" />
  </Example>

  <Example title="Disabled Items" description="Some items can be disabled." source={TransferDemoSource} fn="DisabledItemsTransferDemo">
    <DisabledItemsTransferDemo client:load slot="demo" />
  </Example>

  <Example title="Custom Titles" description="Customize column headers." source={TransferDemoSource} fn="TitlesTransferDemo">
    <TitlesTransferDemo client:load slot="demo" />
  </Example>

  <section slot="accessibility" class="mb-8">
    <h2 class="text-2xl font-bold mb-4">Accessibility</h2>
    <ul class="list-disc list-inside space-y-2 text-base-content/80">
      <li>Uses checkbox inputs for item selection</li>
      <li>Keyboard navigation between items</li>
      <li>Transfer buttons are keyboard accessible</li>
      <li>Disabled items are properly announced</li>
    </ul>
  </section>
</ComponentLayout>
