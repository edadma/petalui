---
import ComponentLayout from '../../layouts/ComponentLayout.astro';
import Example from '../../components/Example.astro';
import {
  BasicDemo,
  StyledDemo,
  GapDemo,
  ScrollCallbackDemo,
  VariableHeightDemo,
} from '../../components/VirtualListDemo';
import VirtualListDemoSource from '../../components/VirtualListDemo.tsx?raw';

const api = [
  {
    property: 'items',
    description: 'Array of items to render',
    type: 'T[]',
    default: '-',
  },
  {
    property: 'height',
    description: 'Height of the scrollable container',
    type: 'number | string',
    default: '-',
  },
  {
    property: 'itemHeight',
    description: 'Fixed height, or function returning estimated height per item for variable heights',
    type: 'number | ((item: T, index: number) => number)',
    default: '-',
  },
  {
    property: 'renderItem',
    description: 'Render function for each item',
    type: '(item: T, index: number) => ReactNode',
    default: '-',
  },
  {
    property: 'overscan',
    description: 'Number of items to render outside visible area',
    type: 'number',
    default: '5',
  },
  {
    property: 'gap',
    description: 'Gap between items in pixels',
    type: 'number',
    default: '0',
  },
  {
    property: 'width',
    description: 'Width of the container',
    type: 'number | string',
    default: '-',
  },
  {
    property: 'className',
    description: 'Additional class for the scroll container',
    type: 'string',
    default: '-',
  },
  {
    property: 'innerClassName',
    description: 'Additional class for the inner container',
    type: 'string',
    default: '-',
  },
  {
    property: 'itemClassName',
    description: 'Additional class for each item wrapper',
    type: 'string',
    default: '-',
  },
  {
    property: 'onScroll',
    description: 'Callback when scroll position changes',
    type: '(scrollTop: number) => void',
    default: '-',
  },
];
---

<ComponentLayout
  name="VirtualList"
  description="Efficiently render large lists by only rendering visible items. Powered by @tanstack/react-virtual."
  api={api}
>
  <Example title="Basic Usage" description="Efficiently render a list of 10,000 items." source={VirtualListDemoSource} fn="BasicDemo">
    <BasicDemo client:load slot="demo" />
  </Example>

  <Example title="Styled List" description="With card styling and hover effects." source={VirtualListDemoSource} fn="StyledDemo">
    <StyledDemo client:load slot="demo" />
  </Example>

  <Example title="With Gap" description="Spaced items with gap between them." source={VirtualListDemoSource} fn="GapDemo">
    <GapDemo client:load slot="demo" />
  </Example>

  <Example title="Scroll Callback" description="Track scroll position for infinite loading or analytics." source={VirtualListDemoSource} fn="ScrollCallbackDemo">
    <ScrollCallbackDemo client:load slot="demo" />
  </Example>

  <Example title="Variable Height (Chat)" description="Chat messages with different lengths using the Chat component." source={VirtualListDemoSource} fn="VariableHeightDemo">
    <VariableHeightDemo client:load slot="demo" />
  </Example>

  <section slot="accessibility" class="mb-8">
    <h2 class="text-2xl font-bold mb-4">Performance Tips</h2>
    <ul class="list-disc list-inside space-y-2 text-base-content/80">
      <li>Use a fixed <code class="bg-base-content/20 px-1 rounded">itemHeight</code> when possible for best performance</li>
      <li>Memoize your <code class="bg-base-content/20 px-1 rounded">renderItem</code> function if it's expensive</li>
      <li>Increase <code class="bg-base-content/20 px-1 rounded">overscan</code> if you see flickering during fast scrolling</li>
      <li>Keep item components simple - avoid heavy computations in render</li>
    </ul>
  </section>
</ComponentLayout>
