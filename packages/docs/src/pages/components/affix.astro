---
import ComponentLayout from '../../layouts/ComponentLayout.astro';
import Example from '../../components/Example.astro';
import {
  BasicDemo,
  CallbackDemo,
  BottomDemo,
  TargetDemo,
} from '../../components/AffixDemo';
import AffixDemoSource from '../../components/AffixDemo.tsx?raw';

const api = [
  { property: 'children', description: 'Content to make sticky', type: 'React.ReactNode' },
  { property: 'offsetTop', description: 'Offset from top when fixed (pixels)', type: 'number' },
  { property: 'offsetBottom', description: 'Offset from bottom when fixed (pixels)', type: 'number' },
  { property: 'target', description: 'Scroll target element', type: '() => HTMLElement | Window' },
  { property: 'onChange', description: 'Callback when affix state changes', type: '(affixed: boolean) => void' },
  { property: 'className', description: 'Additional CSS classes', type: 'string' },
];
---

<ComponentLayout
  name="Affix"
  description="Make an element stick to the viewport when scrolling. Useful for navigation, toolbars, or action buttons."
  api={api}
>
  <Example title="Basic Affix" description="Element becomes fixed when scrolled past its position." source={AffixDemoSource} fn="BasicDemo">
    <BasicDemo client:load slot="demo" />
  </Example>

  <Example title="With Callback" description="Get notified when affix state changes." source={AffixDemoSource} fn="CallbackDemo">
    <CallbackDemo client:load slot="demo" />
  </Example>

  <Example title="Affix to Bottom" description="Fix element to bottom of viewport." source={AffixDemoSource} fn="BottomDemo">
    <BottomDemo client:load slot="demo" />
  </Example>

  <Example title="Custom Target" description="Affix within a scrollable container." source={AffixDemoSource} fn="TargetDemo">
    <TargetDemo client:load slot="demo" />
  </Example>

  <section slot="accessibility" class="mb-8">
    <h2 class="text-2xl font-bold mb-4">Accessibility</h2>
    <ul class="list-disc list-inside space-y-2 text-base-content/80">
      <li>Uses CSS <code class="bg-base-content/20 px-1 rounded">position: sticky</code> for better performance</li>
      <li>Does not trap keyboard focus when affixed</li>
      <li>Content remains in document flow when not affixed</li>
    </ul>
  </section>
</ComponentLayout>
