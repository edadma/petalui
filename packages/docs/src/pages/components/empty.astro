---
import ComponentLayout from '../../layouts/ComponentLayout.astro';
import Example from '../../components/Example.astro';
import {
  BasicDemo,
  CustomDescriptionDemo,
  CustomImageDemo,
  WithActionDemo,
  SimpleImageDemo,
} from '../../components/EmptyDemo';
import EmptyDemoSource from '../../components/EmptyDemo.tsx?raw';

const api = [
  { property: 'description', description: 'Text or node to display as description', type: 'React.ReactNode', default: "'No Data'" },
  { property: 'image', description: 'Custom image or icon; set to null to hide', type: 'React.ReactNode', default: 'Empty.PRESENTED_IMAGE_DEFAULT' },
  { property: 'imageStyle', description: 'Styling applied to the image container', type: 'React.CSSProperties' },
  { property: 'children', description: 'Extra content like buttons or actions', type: 'React.ReactNode' },
  { property: 'className', description: 'Additional CSS classes', type: 'string' },
  { property: 'data-testid', description: 'Test ID for the component', type: 'string', default: "'empty'" },
];
---

<ComponentLayout
  name="Empty"
  description="Display placeholder content when there is no data to show."
  api={api}
>
  <Example title="Basic Empty" description="Simple empty state with default image." source={EmptyDemoSource} fn="BasicDemo">
    <BasicDemo client:load slot="demo" />
  </Example>

  <Example title="Custom Description" description="Empty state with custom description text." source={EmptyDemoSource} fn="CustomDescriptionDemo">
    <CustomDescriptionDemo client:load slot="demo" />
  </Example>

  <Example title="Custom Image" description="Empty state with custom image or icon." source={EmptyDemoSource} fn="CustomImageDemo">
    <CustomImageDemo client:load slot="demo" />
  </Example>

  <Example title="With Action Button" description="Empty state with action button." source={EmptyDemoSource} fn="WithActionDemo">
    <WithActionDemo client:load slot="demo" />
  </Example>

  <Example title="Simple Image" description="Minimal empty state with smaller image." source={EmptyDemoSource} fn="SimpleImageDemo">
    <SimpleImageDemo client:load slot="demo" />
  </Example>
</ComponentLayout>
