---
import ComponentLayout from '../../layouts/ComponentLayout.astro';
import Example from '../../components/Example.astro';
import {
  BasicDemo,
  TwelveHourDemo,
  SecondsDemo,
  ControlledDemo,
  SizesDemo,
  DisabledDemo,
  StepsDemo,
  FormDemo,
} from '../../components/TimePickerDemo';
import TimePickerDemoSource from '../../components/TimePickerDemo.tsx?raw';

const api = [
  { property: 'value', description: 'Controlled selected time', type: 'Date | null', default: '-' },
  { property: 'defaultValue', description: 'Default selected time (uncontrolled)', type: 'Date | null', default: '-' },
  { property: 'onChange', description: 'Callback when time is selected', type: '(date: Date | null) => void', default: '-' },
  { property: 'format', description: 'Time display format (12-hour or 24-hour)', type: "'12' | '24'", default: "'24'" },
  { property: 'placeholder', description: 'Input placeholder text', type: 'string', default: '"Select time"' },
  { property: 'disabled', description: 'Disable the time picker', type: 'boolean', default: 'false' },
  { property: 'size', description: 'Input size', type: "'xs' | 'sm' | 'md' | 'lg'", default: "'md'" },
  { property: 'showSeconds', description: 'Show seconds column in the time picker', type: 'boolean', default: 'false' },
  { property: 'allowClear', description: 'Show clear button when time is selected', type: 'boolean', default: 'true' },
  { property: 'open', description: 'Controlled open state of the dropdown', type: 'boolean', default: '-' },
  { property: 'onOpenChange', description: 'Callback when dropdown open state changes', type: '(open: boolean) => void', default: '-' },
  { property: 'hourStep', description: 'Interval between hours in the picker', type: 'number', default: '1' },
  { property: 'minuteStep', description: 'Interval between minutes in the picker', type: 'number', default: '1' },
  { property: 'secondStep', description: 'Interval between seconds in the picker', type: 'number', default: '1' },
  { property: 'status', description: 'Validation status', type: "'error' | 'warning'", default: '-' },
  { property: 'data-testid', description: 'Test ID prefix for child elements', type: 'string', default: '"timepicker"' },
  { property: 'className', description: 'Additional CSS classes', type: 'string', default: '-' },
];
---

<ComponentLayout
  name="TimePicker"
  description="Select time with an interactive picker interface."
  api={api}
>
  <Example title="Basic TimePicker" description="Simple time picker with default 24-hour format." source={TimePickerDemoSource} fn="BasicDemo">
    <BasicDemo client:load slot="demo" />
  </Example>

  <Example title="12-Hour Format" description="Time picker with 12-hour format and AM/PM selection." source={TimePickerDemoSource} fn="TwelveHourDemo">
    <TwelveHourDemo client:load slot="demo" />
  </Example>

  <Example title="With Seconds" description="Time picker that includes seconds selection." source={TimePickerDemoSource} fn="SecondsDemo">
    <SecondsDemo client:load slot="demo" />
  </Example>

  <Example title="Controlled" description="Controlled time picker with state management." source={TimePickerDemoSource} fn="ControlledDemo">
    <ControlledDemo client:load slot="demo" />
  </Example>

  <Example title="Different Sizes" description="Time picker in various sizes." source={TimePickerDemoSource} fn="SizesDemo">
    <SizesDemo client:load slot="demo" />
  </Example>

  <Example title="Disabled" description="Disabled time picker with a default value." source={TimePickerDemoSource} fn="DisabledDemo">
    <DisabledDemo client:load slot="demo" />
  </Example>

  <Example title="Time Steps" description="Time picker with custom intervals (15-minute steps)." source={TimePickerDemoSource} fn="StepsDemo">
    <StepsDemo client:load slot="demo" />
  </Example>

  <Example title="In Form" description="TimePicker integrated with Form component using Row/Col layout." source={TimePickerDemoSource} fn="FormDemo">
    <FormDemo client:load slot="demo" />
  </Example>

  <section slot="accessibility" class="mb-8">
    <h2 class="text-2xl font-bold mb-4">Accessibility</h2>
    <ul class="list-disc list-inside space-y-2 text-base-content/80">
      <li>Input field has <code class="bg-base-content/20 px-1 rounded">aria-haspopup</code> and <code class="bg-base-content/20 px-1 rounded">aria-expanded</code> attributes</li>
      <li>Dropdown uses <code class="bg-base-content/20 px-1 rounded">role="dialog"</code> with proper labeling</li>
      <li>Time columns use <code class="bg-base-content/20 px-1 rounded">role="listbox"</code> with <code class="bg-base-content/20 px-1 rounded">aria-label</code></li>
      <li>Time options use <code class="bg-base-content/20 px-1 rounded">role="option"</code> with <code class="bg-base-content/20 px-1 rounded">aria-selected</code></li>
      <li>Full keyboard navigation: Arrow keys to navigate, Escape to close, Enter to confirm</li>
      <li>Clear button has <code class="bg-base-content/20 px-1 rounded">aria-label</code> for screen readers</li>
      <li>Disabled state properly communicated to assistive technology</li>
    </ul>
  </section>
</ComponentLayout>
