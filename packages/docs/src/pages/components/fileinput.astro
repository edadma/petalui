---
import ComponentLayout from '../../layouts/ComponentLayout.astro';
import Example from '../../components/Example.astro';
import {
  BasicDemo,
  AcceptTypesDemo,
  MultipleDemo,
  SizesDemo,
  ColorsDemo,
  StylesDemo,
} from '../../components/FileInputDemo';
import FileInputDemoSource from '../../components/FileInputDemo.tsx?raw';

const api = [
  { property: 'accept', description: 'File types to accept', type: 'string' },
  { property: 'multiple', description: 'Allow multiple file selection', type: 'boolean', default: 'false' },
  { property: 'onChange', description: 'Change handler', type: '(e: ChangeEvent) => void' },
  { property: 'disabled', description: 'Disable the input', type: 'boolean', default: 'false' },
  { property: 'size', description: 'Input size', type: "'xs' | 'sm' | 'md' | 'lg'", default: "'md'" },
  { property: 'color', description: 'Input color', type: "'primary' | 'secondary' | 'accent' | 'info' | 'success' | 'warning' | 'error'" },
  { property: 'bordered', description: 'Show border', type: 'boolean', default: 'false' },
  { property: 'ghost', description: 'Ghost style', type: 'boolean', default: 'false' },
  { property: 'className', description: 'Additional CSS classes', type: 'string' },
];
---

<ComponentLayout
  name="FileInput"
  description="File input component with support for multiple files, file type filtering, and various styles."
  api={api}
>
  <Example title="Basic FileInput" description="Simple file input." source={FileInputDemoSource} fn="BasicDemo">
    <BasicDemo client:load slot="demo" />
  </Example>

  <Example title="Accept Types" description="File input that accepts only specific file types." source={FileInputDemoSource} fn="AcceptTypesDemo">
    <AcceptTypesDemo client:load slot="demo" />
  </Example>

  <Example title="Multiple Files" description="Allow selecting multiple files." source={FileInputDemoSource} fn="MultipleDemo">
    <MultipleDemo client:load slot="demo" />
  </Example>

  <Example title="Sizes" description="Different file input sizes." source={FileInputDemoSource} fn="SizesDemo">
    <SizesDemo client:load slot="demo" />
  </Example>

  <Example title="Colors" description="Different color variants." source={FileInputDemoSource} fn="ColorsDemo">
    <ColorsDemo client:load slot="demo" />
  </Example>

  <Example title="Styles" description="Bordered and ghost styles." source={FileInputDemoSource} fn="StylesDemo">
    <StylesDemo client:load slot="demo" />
  </Example>

  <section slot="accessibility" class="mb-8">
    <h2 class="text-2xl font-bold mb-4">Accessibility</h2>
    <ul class="list-disc list-inside space-y-2 text-base-content/80">
      <li>Uses native <code class="bg-base-content/20 px-1 rounded">&lt;input type="file"&gt;</code> for full keyboard support</li>
      <li>Always pair with a descriptive <code class="bg-base-content/20 px-1 rounded">&lt;label&gt;</code> for accessibility</li>
      <li>The <code class="bg-base-content/20 px-1 rounded">accept</code> attribute helps users select appropriate files</li>
    </ul>
  </section>
</ComponentLayout>
