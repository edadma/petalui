---
import ComponentLayout from '../../layouts/ComponentLayout.astro';
import Example from '../../components/Example.astro';
import {
  BasicDemo,
  MultilineDemo,
  ImageDemo,
} from '../../components/WatermarkDemo';
import WatermarkDemoSource from '../../components/WatermarkDemo.tsx?raw';

const api = [
  { property: 'content', description: 'Watermark text (string or lines)', type: 'string | string[]' },
  { property: 'image', description: 'Image URL or data URI to render instead of text', type: 'string' },
  { property: 'gap', description: 'Horizontal and vertical gap between tiles', type: '[number, number]', default: '[120, 120]' },
  { property: 'offset', description: 'Starting offset for the first tile', type: '[number, number]', default: 'gap / 2' },
  { property: 'width', description: 'Tile width in pixels', type: 'number', default: '120' },
  { property: 'height', description: 'Tile height in pixels', type: 'number', default: '64' },
  { property: 'rotate', description: 'Rotation angle in degrees', type: 'number', default: '-22' },
  { property: 'zIndex', description: 'z-index for the overlay', type: 'number', default: '1000' },
  { property: 'font', description: 'Font settings for text watermarks', type: 'WatermarkFontOptions' },
  { property: 'className', description: 'Additional CSS classes', type: 'string' },
  { property: 'style', description: 'Custom styles for the wrapper', type: 'React.CSSProperties' },
];
---

<ComponentLayout
  name="Watermark"
  description="Overlay repeating text or image watermarks to protect content while keeping it interactive."
  api={api}
>
  <Example title="Text Watermark" description="Apply a repeating text watermark to a card." source={WatermarkDemoSource} fn="BasicDemo">
    <BasicDemo client:load slot="demo" />
  </Example>

  <Example title="Multiple Lines" description="Stack multiple lines with custom font, gap, and rotation." source={WatermarkDemoSource} fn="MultilineDemo">
    <MultilineDemo client:load slot="demo" />
  </Example>

  <Example title="Image Watermark" description="Use a data URI or hosted image to watermark content." source={WatermarkDemoSource} fn="ImageDemo">
    <ImageDemo client:load slot="demo" />
  </Example>

  <section slot="accessibility" class="mb-8">
    <h2 class="text-2xl font-bold mb-4">Accessibility</h2>
    <ul class="list-disc list-inside space-y-2 text-base-content/80">
      <li>The watermark overlay uses <code class="bg-base-content/20 px-1 rounded">pointer-events: none</code> to ensure content remains interactive</li>
      <li>Watermark is purely decorative and does not interfere with assistive technologies</li>
      <li>All interactive elements beneath the watermark remain fully accessible to keyboard and screen reader users</li>
      <li>Semi-transparent rendering ensures underlying content remains visible and readable</li>
    </ul>
  </section>
</ComponentLayout>
