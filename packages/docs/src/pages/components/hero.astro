---
import Layout from '../../layouts/Layout.astro';
import ApiTable from '../../components/ApiTable.astro';
import { Code } from 'astro:components';

const heroApi = [
  { property: 'children', description: 'Hero content', type: 'React.ReactNode' },
  { property: 'overlay', description: 'Show overlay effect (for background images)', type: 'boolean', default: 'false' },
  { property: 'contentClassName', description: 'CSS classes for the content wrapper', type: 'string' },
  { property: 'className', description: 'Additional CSS classes', type: 'string' },
  { property: 'style', description: 'Inline styles (useful for background images)', type: 'React.CSSProperties' },
];

const examples = [
