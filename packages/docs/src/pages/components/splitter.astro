---
import ComponentLayout from '../../layouts/ComponentLayout.astro';
import Example from '../../components/Example.astro';
import {
  BasicDemo,
  VerticalDemo,
  ControlledDemo,
  MultiplePanelsDemo,
  MinMaxDemo,
  NestedDemo,
  GutterDemo,
  IdeDemo,
  CollapsibleDemo,
  NonResizableDemo,
} from '../../components/SplitterDemo';
import SplitterDemoSource from '../../components/SplitterDemo.tsx?raw';

const api = [
  { property: 'direction', description: 'Direction of the splitter', type: "'horizontal' | 'vertical'", default: "'horizontal'" },
  { property: 'sizes', description: 'Controlled panel sizes as percentages', type: 'number[]', default: '-' },
  { property: 'defaultSizes', description: 'Default panel sizes as percentages (uncontrolled)', type: 'number[]', default: '-' },
  { property: 'onSizesChange', description: 'Callback when sizes change', type: '(sizes: number[]) => void', default: '-' },
  { property: 'gutterSize', description: 'Size of the draggable gutter in pixels', type: 'number', default: '8' },
  { property: 'minSize', description: 'Default minimum panel size in pixels', type: 'number', default: '50' },
  { property: 'className', description: 'Additional CSS classes', type: 'string', default: '-' },
  { property: 'children', description: 'Panel content', type: 'React.ReactNode', default: '-', component: 'Splitter.Panel' },
  { property: 'defaultSize', description: 'Default size percentage', type: 'number', default: '-', component: 'Splitter.Panel' },
  { property: 'size', description: 'Controlled size percentage', type: 'number', default: '-', component: 'Splitter.Panel' },
  { property: 'minSize', description: 'Minimum size in pixels', type: 'number', default: '-', component: 'Splitter.Panel' },
  { property: 'maxSize', description: 'Maximum size in pixels', type: 'number', default: '-', component: 'Splitter.Panel' },
  { property: 'collapsible', description: 'Allow panel to be collapsed', type: 'boolean', default: 'false', component: 'Splitter.Panel' },
  { property: 'collapsed', description: 'Controlled collapsed state', type: 'boolean', default: '-', component: 'Splitter.Panel' },
  { property: 'defaultCollapsed', description: 'Default collapsed state', type: 'boolean', default: 'false', component: 'Splitter.Panel' },
  { property: 'onCollapse', description: 'Callback when collapse state changes', type: '(collapsed: boolean) => void', default: '-', component: 'Splitter.Panel' },
  { property: 'resizable', description: 'Allow panel to be resized', type: 'boolean', default: 'true', component: 'Splitter.Panel' },
  { property: 'className', description: 'Additional CSS classes', type: 'string', default: '-', component: 'Splitter.Panel' },
];
---

<ComponentLayout
  name="Splitter"
  description="Create resizable split panes with draggable dividers."
  api={api}
>
  <Example title="Basic Horizontal Splitter" description="Drag the divider to resize the panels." source={SplitterDemoSource} fn="BasicDemo">
    <BasicDemo client:load slot="demo" />
  </Example>

  <Example title="Vertical Splitter" description="Split panels vertically." source={SplitterDemoSource} fn="VerticalDemo">
    <VerticalDemo client:load slot="demo" />
  </Example>

  <Example title="Controlled Sizes" description="Control panel sizes programmatically." source={SplitterDemoSource} fn="ControlledDemo">
    <ControlledDemo client:load slot="demo" />
  </Example>

  <Example title="Multiple Panels" description="Split into more than two panels." source={SplitterDemoSource} fn="MultiplePanelsDemo">
    <MultiplePanelsDemo client:load slot="demo" />
  </Example>

  <Example title="With Min/Max Sizes" description="Constrain panel sizes with min and max values." source={SplitterDemoSource} fn="MinMaxDemo">
    <MinMaxDemo client:load slot="demo" />
  </Example>

  <Example title="Nested Splitters" description="Combine horizontal and vertical splitters." source={SplitterDemoSource} fn="NestedDemo">
    <NestedDemo client:load slot="demo" />
  </Example>

  <Example title="Custom Gutter Size" description="Adjust the gutter (divider) size." source={SplitterDemoSource} fn="GutterDemo">
    <GutterDemo client:load slot="demo" />
  </Example>

  <Example title="IDE-Style Layout" description="Complex layout similar to an IDE." source={SplitterDemoSource} fn="IdeDemo">
    <IdeDemo client:load slot="demo" />
  </Example>

  <Example title="Collapsible Panels" description="Panels can be collapsed using arrow buttons on the gutter." source={SplitterDemoSource} fn="CollapsibleDemo">
    <CollapsibleDemo client:load slot="demo" />
  </Example>

  <Example title="Non-Resizable Panel" description="Disable resizing for specific panels." source={SplitterDemoSource} fn="NonResizableDemo">
    <NonResizableDemo client:load slot="demo" />
  </Example>

  <section slot="accessibility" class="mb-8">
    <h2 class="text-2xl font-bold mb-4">Accessibility</h2>
    <ul class="list-disc list-inside space-y-2 text-base-content/80">
      <li>Gutter is keyboard accessible with arrow keys</li>
      <li>ARIA attributes announce current panel sizes</li>
      <li>Focus indicators visible on gutter</li>
      <li>Increase gutterSize for easier touch interaction</li>
    </ul>
  </section>
</ComponentLayout>
