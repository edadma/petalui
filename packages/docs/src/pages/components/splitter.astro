  {
    id: 'ide',
    title: 'IDE-Style Layout',
    description: 'Complex layout similar to an IDE.',
    code: `import React from 'react'
import { Splitter, Menu } from 'asterui'

const App: React.FC = () => (
  <div className="h-80 border border-base-300 rounded-lg overflow-hidden">
