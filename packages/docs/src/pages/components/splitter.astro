---
import Layout from '../../layouts/Layout.astro';
import ApiTable from '../../components/ApiTable.astro';
import { Code } from 'astro:components';

const splitterApi = [
  { property: 'direction', description: 'Direction of the splitter', type: "'horizontal' | 'vertical'", default: "'horizontal'" },
  { property: 'sizes', description: 'Controlled panel sizes as percentages', type: 'number[]', default: '-' },
  { property: 'defaultSizes', description: 'Default panel sizes as percentages (uncontrolled)', type: 'number[]', default: '-' },
  { property: 'onSizesChange', description: 'Callback when sizes change', type: '(sizes: number[]) => void', default: '-' },
  { property: 'gutterSize', description: 'Size of the draggable gutter in pixels', type: 'number', default: '8' },
  { property: 'minSize', description: 'Default minimum panel size in pixels', type: 'number', default: '50' },
  { property: 'className', description: 'Additional CSS classes', type: 'string', default: '-' },
];

const panelApi = [
  { property: 'children', description: 'Panel content', type: 'React.ReactNode', default: '-' },
  { property: 'defaultSize', description: 'Default size percentage', type: 'number', default: '-' },
  { property: 'size', description: 'Controlled size percentage', type: 'number', default: '-' },
  { property: 'minSize', description: 'Minimum size in pixels', type: 'number', default: '-' },
  { property: 'maxSize', description: 'Maximum size in pixels', type: 'number', default: '-' },
  { property: 'collapsible', description: 'Allow panel to be collapsed', type: 'boolean', default: 'false' },
  { property: 'collapsed', description: 'Controlled collapsed state', type: 'boolean', default: '-' },
  { property: 'defaultCollapsed', description: 'Default collapsed state', type: 'boolean', default: 'false' },
  { property: 'onCollapse', description: 'Callback when collapse state changes', type: '(collapsed: boolean) => void', default: '-' },
  { property: 'resizable', description: 'Allow panel to be resized', type: 'boolean', default: 'true' },
  { property: 'className', description: 'Additional CSS classes', type: 'string', default: '-' },
];

const examples = [
  {
    id: 'basic',
    title: 'Basic Horizontal Splitter',
    description: 'Drag the divider to resize the panels.',
    code: `import React from 'react'
import { Splitter } from 'asterui'

const App: React.FC = () => (
  <div className="h-64 border border-base-300 rounded-lg overflow-hidden">
    <Splitter>
      <Splitter.Panel>
        <div className="p-4 bg-base-200 h-full">
          <h3 className="font-semibold">Left Panel</h3>
          <p className="text-sm text-base-content/70 mt-2">
            Drag the divider to resize.
          </p>
        </div>
      </Splitter.Panel>
      <Splitter.Panel>
        <div className="p-4 h-full">
          <h3 className="font-semibold">Right Panel</h3>
          <p className="text-sm text-base-content/70 mt-2">
            Content on the right side.
          </p>
        </div>
      </Splitter.Panel>
    </Splitter>
  </div>
)

export default App`,
  },
  {
    id: 'vertical',
    title: 'Vertical Splitter',
    description: 'Split panels vertically.',
    code: `import React from 'react'
import { Splitter } from 'asterui'

const App: React.FC = () => (
  <div className="h-64 border border-base-300 rounded-lg overflow-hidden">
    <Splitter direction="vertical">
      <Splitter.Panel>
        <div className="p-4 bg-base-200 h-full">
          <h3 className="font-semibold">Top Panel</h3>
        </div>
      </Splitter.Panel>
      <Splitter.Panel>
        <div className="p-4 h-full">
          <h3 className="font-semibold">Bottom Panel</h3>
        </div>
      </Splitter.Panel>
    </Splitter>
  </div>
)

export default App`,
  },
  {
    id: 'controlled',
    title: 'Controlled Sizes',
    description: 'Control panel sizes programmatically.',
    code: `import React, { useState } from 'react'
import { Splitter, Button, Space } from 'asterui'

const App: React.FC = () => {
  const [sizes, setSizes] = useState([30, 70])

  return (
    <div>
      <Space className="mb-4">
        <Button size="sm" onClick={() => setSizes([20, 80])}>20/80</Button>
        <Button size="sm" onClick={() => setSizes([50, 50])}>50/50</Button>
        <Button size="sm" onClick={() => setSizes([80, 20])}>80/20</Button>
      </Space>
      <div className="h-48 border border-base-300 rounded-lg overflow-hidden">
        <Splitter sizes={sizes} onSizesChange={setSizes}>
          <Splitter.Panel>
            <div className="p-4 bg-primary/10 h-full">
              {sizes[0].toFixed(0)}%
            </div>
          </Splitter.Panel>
          <Splitter.Panel>
            <div className="p-4 bg-secondary/10 h-full">
              {sizes[1].toFixed(0)}%
            </div>
          </Splitter.Panel>
        </Splitter>
      </div>
    </div>
  )
}

export default App`,
  },
  {
    id: 'multiple-panels',
    title: 'Multiple Panels',
    description: 'Split into more than two panels.',
