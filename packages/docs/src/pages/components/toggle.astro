---
import ComponentLayout from '../../layouts/ComponentLayout.astro';
import Example from '../../components/Example.astro';
import {
  BasicDemo,
  SizesDemo,
  ColorsDemo,
  DisabledDemo,
  ControlledDemo,
  FormDemo,
} from '../../components/ToggleDemo';
import ToggleDemoSource from '../../components/ToggleDemo.tsx?raw';

const api = [
  { property: 'checked', description: 'Controlled checked state', type: 'boolean', default: '-' },
  { property: 'defaultChecked', description: 'Default checked state (uncontrolled)', type: 'boolean', default: 'false' },
  { property: 'onChange', description: 'Callback when toggle state changes', type: '(e: ChangeEvent) => void', default: '-' },
  { property: 'size', description: 'Toggle size', type: "'xs' | 'sm' | 'md' | 'lg'", default: "'md'" },
  { property: 'color', description: 'Toggle color', type: "'primary' | 'secondary' | 'accent' | 'info' | 'success' | 'warning' | 'error'", default: '-' },
  { property: 'disabled', description: 'Disable the toggle', type: 'boolean', default: 'false' },
  { property: 'className', description: 'Additional CSS classes', type: 'string', default: '-' },
];
---

<ComponentLayout
  name="Toggle"
  description="Binary switch control for on/off states."
  api={api}
>
  <Example title="Basic Toggle" description="Simple toggle switch." source={ToggleDemoSource} fn="BasicDemo">
    <BasicDemo client:load slot="demo" />
  </Example>

  <Example title="Sizes" description="Four sizes available for toggles." source={ToggleDemoSource} fn="SizesDemo">
    <SizesDemo client:load slot="demo" />
  </Example>

  <Example title="Colors" description="Color variants for different contexts." source={ToggleDemoSource} fn="ColorsDemo">
    <ColorsDemo client:load slot="demo" />
  </Example>

  <Example title="Disabled" description="Non-interactive disabled toggles." source={ToggleDemoSource} fn="DisabledDemo">
    <DisabledDemo client:load slot="demo" />
  </Example>

  <Example title="Controlled" description="Toggle with controlled state." source={ToggleDemoSource} fn="ControlledDemo">
    <ControlledDemo client:load slot="demo" />
  </Example>

  <Example title="In Form" description="Toggle integrated with Form component using valuePropName." source={ToggleDemoSource} fn="FormDemo">
    <FormDemo client:load slot="demo" />
  </Example>

  <section slot="accessibility" class="mb-8">
    <h2 class="text-2xl font-bold mb-4">Accessibility</h2>
    <ul class="list-disc list-inside space-y-2 text-base-content/80">
      <li>Uses native checkbox input for accessibility</li>
      <li>Supports keyboard activation with Space key</li>
      <li>Checked/unchecked state announced by screen readers</li>
      <li>Disabled state properly communicated</li>
    </ul>
  </section>
</ComponentLayout>
