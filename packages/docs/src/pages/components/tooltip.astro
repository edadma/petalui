---
import ComponentLayout from '../../layouts/ComponentLayout.astro';
import Example from '../../components/Example.astro';
import {
  BasicDemo,
  PositionsDemo,
  ColorsDemo,
  OpenStateDemo,
} from '../../components/TooltipDemo';
import TooltipDemoSource from '../../components/TooltipDemo.tsx?raw';

const api = [
  { property: 'tip', description: 'Tooltip text content', type: 'string', default: '-' },
  { property: 'position', description: 'Tooltip position', type: "'top' | 'bottom' | 'left' | 'right'", default: "'top'" },
  { property: 'color', description: 'Tooltip color', type: "'primary' | 'secondary' | 'accent' | 'info' | 'success' | 'warning' | 'error'", default: '-' },
  { property: 'open', description: 'Force tooltip to be visible', type: 'boolean', default: 'false' },
  { property: 'children', description: 'Element that triggers the tooltip', type: 'React.ReactNode', default: '-' },
  { property: 'className', description: 'Additional CSS classes', type: 'string', default: '-' },
];
---

<ComponentLayout
  name="Tooltip"
  description="Display additional information on hover."
  api={api}
>
  <Example title="Basic Tooltip" description="Simple tooltip that appears on hover." source={TooltipDemoSource} fn="BasicDemo">
    <BasicDemo client:load slot="demo" />
  </Example>

  <Example title="Positions" description="Tooltips can appear in different positions." source={TooltipDemoSource} fn="PositionsDemo">
    <PositionsDemo client:load slot="demo" />
  </Example>

  <Example title="Colors" description="Color variants for different contexts." source={TooltipDemoSource} fn="ColorsDemo">
    <ColorsDemo client:load slot="demo" />
  </Example>

  <Example title="Always Open" description="Force the tooltip to stay visible." source={TooltipDemoSource} fn="OpenStateDemo">
    <OpenStateDemo client:load slot="demo" />
  </Example>

  <section slot="accessibility" class="mb-8">
    <h2 class="text-2xl font-bold mb-4">Accessibility</h2>
    <ul class="list-disc list-inside space-y-2 text-base-content/80">
      <li>Tooltip content is exposed via aria-describedby</li>
      <li>Tooltips appear on focus as well as hover</li>
      <li>Sufficient color contrast in all color variants</li>
      <li>Arrow keys can be used when tooltip contains focusable elements</li>
    </ul>
  </section>
</ComponentLayout>
