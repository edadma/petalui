---
import ComponentLayout from '../../layouts/ComponentLayout.astro';
import Example from '../../components/Example.astro';
import {
  BasicDemo,
  ShowValueDemo,
  ShowStepsDemo,
  ControlledDemo,
  CustomRangeDemo,
  ColorsDemo,
  SizesDemo,
  DisabledDemo,
  VolumeDemo,
  FormDemo,
} from '../../components/RangeDemo';
import RangeDemoSource from '../../components/RangeDemo.tsx?raw';

const api = [
  { property: 'value', description: 'Controlled value', type: 'number', default: '-' },
  { property: 'defaultValue', description: 'Default value (uncontrolled)', type: 'number', default: '50' },
  { property: 'onChange', description: 'Callback when value changes', type: '(value: number) => void', default: '-' },
  { property: 'min', description: 'Minimum value', type: 'number', default: '0' },
  { property: 'max', description: 'Maximum value', type: 'number', default: '100' },
  { property: 'step', description: 'Step increment', type: 'number', default: '1' },
  { property: 'size', description: 'Range size', type: "'xs' | 'sm' | 'md' | 'lg'", default: "'md'" },
  { property: 'color', description: 'Range color theme', type: "'primary' | 'secondary' | 'accent' | 'success' | 'warning' | 'info' | 'error'", default: '-' },
  { property: 'disabled', description: 'Disable the range input', type: 'boolean', default: 'false' },
  { property: 'showValue', description: 'Show current value below the range', type: 'boolean', default: 'false' },
  { property: 'showSteps', description: 'Show step markers below the range', type: 'boolean', default: 'false' },
  { property: 'className', description: 'Additional CSS classes', type: 'string', default: '-' },
];
---

<ComponentLayout
  name="Range"
  description="Select numeric values using an interactive slider."
  api={api}
>
  <Example title="Basic Range" description="Simple range slider with default settings." source={RangeDemoSource} fn="BasicDemo">
    <BasicDemo client:load slot="demo" />
  </Example>

  <Example title="With Value Display" description="Range slider showing the current value." source={RangeDemoSource} fn="ShowValueDemo">
    <ShowValueDemo client:load slot="demo" />
  </Example>

  <Example title="With Steps" description="Range slider with visible step markers." source={RangeDemoSource} fn="ShowStepsDemo">
    <ShowStepsDemo client:load slot="demo" />
  </Example>

  <Example title="Controlled" description="Controlled range slider with state management." source={RangeDemoSource} fn="ControlledDemo">
    <ControlledDemo client:load slot="demo" />
  </Example>

  <Example title="Custom Range" description="Range slider with custom min, max, and step values." source={RangeDemoSource} fn="CustomRangeDemo">
    <CustomRangeDemo client:load slot="demo" />
  </Example>

  <Example title="Colors" description="Range sliders in various theme colors." source={RangeDemoSource} fn="ColorsDemo">
    <ColorsDemo client:load slot="demo" />
  </Example>

  <Example title="Sizes" description="Range sliders in various sizes." source={RangeDemoSource} fn="SizesDemo">
    <SizesDemo client:load slot="demo" />
  </Example>

  <Example title="Disabled" description="Disabled range slider." source={RangeDemoSource} fn="DisabledDemo">
    <DisabledDemo client:load slot="demo" />
  </Example>

  <Example title="Volume Control Example" description="Real-world example of a volume control." source={RangeDemoSource} fn="VolumeDemo">
    <VolumeDemo client:load slot="demo" />
  </Example>

  <Example title="In Form" description="Range slider integrated with Form component." source={RangeDemoSource} fn="FormDemo">
    <FormDemo client:load slot="demo" />
  </Example>

  <section slot="accessibility" class="mb-8">
    <h2 class="text-2xl font-bold mb-4">Accessibility</h2>
    <ul class="list-disc list-inside space-y-2 text-base-content/80">
      <li>Uses native <code class="bg-base-content/20 px-1 rounded">&lt;input type="range"&gt;</code> for full accessibility</li>
      <li>Value is announced by screen readers as percentage</li>
      <li>Keyboard navigation with arrow keys supported</li>
      <li>Works with <code class="bg-base-content/20 px-1 rounded">showValue</code> for visual value display</li>
    </ul>
  </section>
</ComponentLayout>
