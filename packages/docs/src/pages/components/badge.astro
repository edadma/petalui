---
import ComponentLayout from '../../layouts/ComponentLayout.astro';
import Example from '../../components/Example.astro';
import {
  BasicDemo,
  OverflowDemo,
  PositionDemo,
  OffsetDemo,
  StatusDemo,
  RibbonDemo,
  RibbonColorsDemo,
  DotDemo,
  ColorsDemo,
  CustomColorsDemo,
  SizesDemo,
  ShowZeroDemo,
  VariantsDemo,
} from '../../components/BadgeDemo';
import BadgeDemoSource from '../../components/BadgeDemo.tsx?raw';

const api = [
  { title: 'Badge', data: [
    { property: 'count', description: 'Number to display in the badge', type: 'number' },
    { property: 'showZero', description: 'Whether to display badge when count is 0', type: 'boolean', default: 'false' },
    { property: 'overflowCount', description: 'Max count to show before displaying count+', type: 'number', default: '99' },
    { property: 'position', description: 'Position of badge when wrapping children', type: 'BadgePosition', default: "'top-end'" },
    { property: 'offset', description: 'Offset from default position in pixels [x, y]', type: '[number, number]' },
    { property: 'status', description: 'Status badge mode with colored dot', type: "'success' | 'processing' | 'error' | 'default' | 'warning'" },
    { property: 'text', description: 'Text to display with status badge', type: 'string' },
    { property: 'dot', description: 'Show a small circular dot instead of count', type: 'boolean', default: 'false' },
    { property: 'type', description: 'Badge color type', type: "'default' | 'primary' | 'secondary' | 'accent' | 'neutral' | 'info' | 'success' | 'warning' | 'error'", default: "'error'" },
    { property: 'size', description: 'Badge size', type: "'xs' | 'sm' | 'md' | 'lg' | 'xl'", default: "'md'" },
    { property: 'variant', description: 'Badge style variant', type: "'solid' | 'outline' | 'dash' | 'soft' | 'ghost'", default: "'solid'" },
    { property: 'color', description: 'Custom background color', type: 'string' },
    { property: 'children', description: 'Element to wrap with badge (notification mode)', type: 'ReactNode' },
    { property: 'className', description: 'Additional CSS classes', type: 'string' },
  ]},
  { title: 'Badge.Ribbon', data: [
    { property: 'text', description: 'Ribbon text content', type: 'string', default: 'required' },
    { property: 'placement', description: 'Ribbon placement', type: "'start' | 'end'", default: "'end'" },
    { property: 'type', description: 'Ribbon color type', type: "'default' | 'primary' | 'secondary' | 'accent' | 'neutral' | 'info' | 'success' | 'warning' | 'error'", default: "'primary'" },
    { property: 'color', description: 'Custom background color', type: 'string' },
    { property: 'children', description: 'Element to wrap with ribbon', type: 'ReactNode', default: 'required' },
    { property: 'className', description: 'Additional CSS classes', type: 'string' },
  ]},
];
---

<ComponentLayout
  name="Badge"
  description="Notification badges, status indicators, and ribbons for highlighting content."
  api={api}
>
  <Example title="Basic Notification Badges" description="Display count badges on elements." source={BadgeDemoSource} fn="BasicDemo">
    <BasicDemo client:load slot="demo" />
  </Example>

  <Example title="Overflow Count" description="Show count+ when exceeding the overflow threshold." source={BadgeDemoSource} fn="OverflowDemo">
    <OverflowDemo client:load slot="demo" />
  </Example>

  <Example title="Badge Positioning" description="Position badges at any of the 9 corners." source={BadgeDemoSource} fn="PositionDemo">
    <PositionDemo client:load slot="demo" />
  </Example>

  <Example title="Badge Offset" description="Fine-tune badge position with pixel offsets." source={BadgeDemoSource} fn="OffsetDemo">
    <OffsetDemo client:load slot="demo" />
  </Example>

  <Example title="Status Badges" description="Status indicators with optional text labels." source={BadgeDemoSource} fn="StatusDemo">
    <StatusDemo client:load slot="demo" />
  </Example>

  <Example title="Ribbon Badges" description="Decorative ribbon-style badges using Badge.Ribbon." source={BadgeDemoSource} fn="RibbonDemo">
    <RibbonDemo client:load slot="demo" />
  </Example>

  <Example title="Ribbon Colors" description="Ribbons support different color types and custom colors." source={BadgeDemoSource} fn="RibbonColorsDemo">
    <RibbonColorsDemo client:load slot="demo" />
  </Example>

  <Example title="Dot Badges" description="Small circular indicators for presence or status." source={BadgeDemoSource} fn="DotDemo">
    <DotDemo client:load slot="demo" />
  </Example>

  <Example title="Badge Colors" description="Standalone count badges with different colors." source={BadgeDemoSource} fn="ColorsDemo">
    <ColorsDemo client:load slot="demo" />
  </Example>

  <Example title="Custom Colors" description="Use the color prop for custom badge colors." source={BadgeDemoSource} fn="CustomColorsDemo">
    <CustomColorsDemo client:load slot="demo" />
  </Example>

  <Example title="Badge Sizes" description="Five sizes available for badges." source={BadgeDemoSource} fn="SizesDemo">
    <SizesDemo client:load slot="demo" />
  </Example>

  <Example title="Show Zero" description="Display badge even when count is 0." source={BadgeDemoSource} fn="ShowZeroDemo">
    <ShowZeroDemo client:load slot="demo" />
  </Example>

  <Example title="Badge Variants" description="Different visual styles for badges." source={BadgeDemoSource} fn="VariantsDemo">
    <VariantsDemo client:load slot="demo" />
  </Example>

  <section slot="accessibility" class="mb-8">
    <div class="alert alert-info">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="stroke-current shrink-0 w-6 h-6"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
      <div>
        <strong>Badge vs Tag:</strong>
        <p class="mt-1">
          Use <code class="bg-base-content/20 px-1 rounded">Badge</code> for notification counts, dots, status indicators, and ribbons.
          For text labels (like categories or keywords), use the <code class="bg-base-content/20 px-1 rounded">Tag</code> component instead.
        </p>
      </div>
    </div>
  </section>
</ComponentLayout>
