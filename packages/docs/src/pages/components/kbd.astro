---
import ComponentLayout from '../../layouts/ComponentLayout.astro';
import Example from '../../components/Example.astro';
import {
  BasicDemo,
  SizesDemo,
  CombinationDemo,
  InTextDemo,
  ArrowsDemo,
  FullKeyboardDemo,
} from '../../components/KbdDemo';
import KbdDemoSource from '../../components/KbdDemo.tsx?raw';

const api = [
  { property: 'size', description: 'Size of the kbd', type: "'xs' | 'sm' | 'md' | 'lg' | 'xl'", default: '-' },
  { property: 'children', description: 'Key content', type: 'React.ReactNode', default: '-' },
  { property: 'className', description: 'Additional CSS classes', type: 'string', default: '-' },
];
---

<ComponentLayout
  name="Kbd"
  description="Display keyboard keys and shortcuts."
  api={api}
>
  <Example title="Basic" description="Simple keyboard key display." source={KbdDemoSource} fn="BasicDemo">
    <BasicDemo client:load slot="demo" />
  </Example>

  <Example title="Sizes" description="Different sizes for various contexts." source={KbdDemoSource} fn="SizesDemo">
    <SizesDemo client:load slot="demo" />
  </Example>

  <Example title="Key Combination" description="Display keyboard shortcuts." source={KbdDemoSource} fn="CombinationDemo">
    <CombinationDemo client:load slot="demo" />
  </Example>

  <Example title="In Text" description="Use kbd inline with text." source={KbdDemoSource} fn="InTextDemo">
    <InTextDemo client:load slot="demo" />
  </Example>

  <Example title="Arrow Keys" description="Arrow key display for navigation instructions." source={KbdDemoSource} fn="ArrowsDemo">
    <ArrowsDemo client:load slot="demo" />
  </Example>

  <Example title="Full Keyboard" description="Complete keyboard layout example." source={KbdDemoSource} fn="FullKeyboardDemo">
    <FullKeyboardDemo client:load slot="demo" />
  </Example>

  <section slot="accessibility" class="mb-8">
    <h2 class="text-2xl font-bold mb-4">Accessibility</h2>
    <ul class="list-disc list-inside space-y-2 text-base-content/80">
      <li>Uses semantic <code class="bg-base-content/20 px-1 rounded">&lt;kbd&gt;</code> HTML element</li>
      <li>Screen readers announce keyboard keys appropriately</li>
      <li>High contrast styling ensures visibility</li>
    </ul>
  </section>
</ComponentLayout>
