---
import ComponentLayout from '../../layouts/ComponentLayout.astro';
import Example from '../../components/Example.astro';
import {
  BasicDemo,
  PageLayoutDemo,
} from '../../components/ContainerDemo';
import ContainerDemoSource from '../../components/ContainerDemo.tsx?raw';

const api = [
  { property: 'children', description: 'Container content', type: 'React.ReactNode' },
  { property: 'size', description: 'Max width size', type: "'sm' | 'md' | 'lg' | 'xl' | '2xl' | 'full'", default: "'xl'" },
  { property: 'centered', description: 'Center container horizontally', type: 'boolean', default: 'true' },
  { property: 'padding', description: 'Add horizontal padding', type: 'boolean', default: 'true' },
  { property: 'className', description: 'Additional CSS classes', type: 'string' },
];
---

<ComponentLayout
  name="Container"
  description="Centered content container with configurable max-width for page layouts."
  api={api}
>
  <Example title="Basic Usage" description="Container provides centered content with max-width and responsive padding." source={ContainerDemoSource} fn="BasicDemo">
    <BasicDemo client:load slot="demo" />
  </Example>

  <Example title="Page Layout" description="Typical usage for page content." source={ContainerDemoSource} fn="PageLayoutDemo">
    <PageLayoutDemo client:load slot="demo" />
  </Example>
</ComponentLayout>
