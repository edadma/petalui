---
import ComponentLayout from '../../layouts/ComponentLayout.astro';
import Example from '../../components/Example.astro';
import {
  BasicDemo,
  WithTextDemo,
  PositionDemo,
  VerticalDemo,
  ColorsDemo,
} from '../../components/DividerDemo';
import DividerDemoSource from '../../components/DividerDemo.tsx?raw';

const api = [
  { property: 'children', description: 'Text or content in the divider', type: 'React.ReactNode' },
  { property: 'orientation', description: 'Divider orientation', type: "'horizontal' | 'vertical'", default: "'horizontal'" },
  { property: 'position', description: 'Text position', type: "'start' | 'center' | 'end'", default: "'center'" },
  { property: 'type', description: 'Color type', type: "'neutral' | 'primary' | 'secondary' | 'accent' | 'success' | 'warning' | 'info' | 'error'" },
  { property: 'className', description: 'Additional CSS classes', type: 'string' },
];
---

<ComponentLayout
  name="Divider"
  description="Visual separator for content sections with optional text labels."
  api={api}
>
  <Example title="Basic Divider" description="Simple horizontal divider." source={DividerDemoSource} fn="BasicDemo">
    <BasicDemo client:load slot="demo" />
  </Example>

  <Example title="With Text" description="Divider with text label." source={DividerDemoSource} fn="WithTextDemo">
    <WithTextDemo client:load slot="demo" />
  </Example>

  <Example title="Text Position" description="Position text at start, center, or end." source={DividerDemoSource} fn="PositionDemo">
    <PositionDemo client:load slot="demo" />
  </Example>

  <Example title="Vertical Divider" description="Vertical divider for inline content." source={DividerDemoSource} fn="VerticalDemo">
    <VerticalDemo client:load slot="demo" />
  </Example>

  <Example title="Colors" description="Dividers with different color types." source={DividerDemoSource} fn="ColorsDemo">
    <ColorsDemo client:load slot="demo" />
  </Example>
</ComponentLayout>
