---
import ComponentLayout from '../../layouts/ComponentLayout.astro';
import Example from '../../components/Example.astro';
import {
  BasicDemo,
  ColorsDemo,
  SizesDemo,
  DisabledDemo,
  IndeterminateDemo,
  GroupDemo,
  SwapDemo,
  SwapIconsDemo,
} from '../../components/CheckboxDemo';
import CheckboxDemoSource from '../../components/CheckboxDemo.tsx?raw';

const api = [
  { title: 'Checkbox', data: [
    { property: 'checked', description: 'Controlled checked state', type: 'boolean' },
    { property: 'defaultChecked', description: 'Initial checked state', type: 'boolean', default: 'false' },
    { property: 'onChange', description: 'Change handler', type: '(e: ChangeEvent) => void' },
    { property: 'disabled', description: 'Disable the checkbox', type: 'boolean', default: 'false' },
    { property: 'indeterminate', description: 'Indeterminate state (partial selection)', type: 'boolean', default: 'false' },
    { property: 'size', description: 'Checkbox size', type: "'xs' | 'sm' | 'md' | 'lg' | 'xl'", default: "'md'" },
    { property: 'color', description: 'Checkbox color', type: "'primary' | 'secondary' | 'accent' | 'neutral' | 'info' | 'success' | 'warning' | 'error'" },
    { property: 'swap', description: 'Swap mode config', type: '{ on: ReactNode, off: ReactNode, effect?: "rotate" | "flip" }' },
    { property: 'className', description: 'Additional CSS classes', type: 'string' },
  ]},
  { title: 'Checkbox.Group', data: [
    { property: 'value', description: 'Selected values', type: '(string | number)[]' },
    { property: 'defaultValue', description: 'Initial selected values', type: '(string | number)[]' },
    { property: 'onChange', description: 'Change handler', type: '(values: (string | number)[]) => void' },
    { property: 'options', description: 'Checkbox options', type: 'CheckboxOption[]' },
    { property: 'disabled', description: 'Disable all checkboxes', type: 'boolean', default: 'false' },
    { property: 'direction', description: 'Layout direction', type: "'horizontal' | 'vertical'", default: "'vertical'" },
  ]},
];
---

<ComponentLayout
  name="Checkbox"
  description="Checkbox input with group support, indeterminate state, and multiple colors."
  api={api}
>
  <Example title="Basic Checkbox" description="Simple checkbox with label." source={CheckboxDemoSource} fn="BasicDemo">
    <BasicDemo client:load slot="demo" />
  </Example>

  <Example title="Colors" description="Checkboxes with different color variants." source={CheckboxDemoSource} fn="ColorsDemo">
    <ColorsDemo client:load slot="demo" />
  </Example>

  <Example title="Sizes" description="Different checkbox sizes." source={CheckboxDemoSource} fn="SizesDemo">
    <SizesDemo client:load slot="demo" />
  </Example>

  <Example title="Disabled" description="Disabled checkbox states." source={CheckboxDemoSource} fn="DisabledDemo">
    <DisabledDemo client:load slot="demo" />
  </Example>

  <Example title="Indeterminate" description="Checkbox with indeterminate state for partial selection." source={CheckboxDemoSource} fn="IndeterminateDemo">
    <IndeterminateDemo client:load slot="demo" />
  </Example>

  <Example title="Checkbox Group" description="Group of checkboxes with shared state." source={CheckboxDemoSource} fn="GroupDemo">
    <GroupDemo client:load slot="demo" />
  </Example>

  <Example title="Swap Mode" description="Toggle between two visual states instead of showing a checkbox." source={CheckboxDemoSource} fn="SwapDemo">
    <SwapDemo client:load slot="demo" />
  </Example>

  <Example title="Swap with Icons" description="Theme toggle example using swap mode with Heroicons." source={CheckboxDemoSource} fn="SwapIconsDemo">
    <SwapIconsDemo client:load slot="demo" />
  </Example>

  <section slot="accessibility" class="mb-8">
    <h2 class="text-2xl font-bold mb-4">Accessibility</h2>
    <ul class="list-disc list-inside space-y-2 text-base-content/80">
      <li>Uses native <code class="bg-base-content/20 px-1 rounded">&lt;input type="checkbox"&gt;</code> for full keyboard support</li>
      <li>Always pair with a <code class="bg-base-content/20 px-1 rounded">&lt;label&gt;</code> for accessibility</li>
      <li>Indeterminate state is properly communicated to screen readers</li>
    </ul>
  </section>
</ComponentLayout>
