---
import ComponentLayout from '../../layouts/ComponentLayout.astro';
import Example from '../../components/Example.astro';
import {
  BrandColorsDemo,
  StateColorsDemo,
  VariantsDemo,
  SizesDemo,
  OutlineDemo,
  DashDemo,
  SoftDemo,
  StatesDemo,
  ShapesDemo,
  WideDemo,
  BlockDemo,
  LoadingDemo,
  LinkButtonsDemo,
  WithIconsDemo,
  IconSizesDemo,
  DangerDemo,
  RoundDemo,
  NoAnimationDemo,
  ToggleDemo,
  FormSubmitDemo,
  EventHandlingDemo,
} from '../../components/ButtonDemo';
import ButtonDemoSource from '../../components/ButtonDemo.tsx?raw';

const api = [
  { property: 'color', description: 'Button color', type: "'primary' | 'secondary' | 'accent' | 'info' | 'success' | 'warning' | 'error' | 'neutral'", default: '-' },
  { property: 'variant', description: 'Button style variant', type: "'solid' | 'outline' | 'dash' | 'soft' | 'ghost' | 'link'", default: '-' },
  { property: 'size', description: 'Button size', type: "'xs' | 'sm' | 'md' | 'lg' | 'xl'", default: "'md'" },
  { property: 'active', description: 'Active/pressed visual state', type: 'boolean', default: 'false' },
  { property: 'loading', description: 'Show loading spinner and disable button', type: 'boolean', default: 'false' },
  { property: 'shape', description: 'Button shape', type: "'square' | 'circle' | 'wide' | 'block' | 'round'" },
  { property: 'icon', description: 'Icon element to display', type: 'ReactNode' },
  { property: 'iconPosition', description: 'Position of the icon', type: "'start' | 'end'", default: "'start'" },
  { property: 'danger', description: 'Applies error/danger styling (shorthand for color="error")', type: 'boolean', default: 'false' },
  { property: 'pressed', description: 'Toggle button pressed state (sets aria-pressed)', type: 'boolean', default: '-' },
  { property: 'noAnimation', description: 'Disable click animation', type: 'boolean', default: 'false' },
  { property: 'disabled', description: 'Disabled state', type: 'boolean', default: 'false' },
  { property: 'className', description: 'Additional CSS classes', type: 'string' },
  { property: 'children', description: 'Button content', type: 'ReactNode' },
  { property: 'href', description: 'URL to navigate to (renders as anchor element)', type: 'string' },
  { property: 'target', description: 'Where to open the linked URL (when href is set)', type: 'string' },
  { property: 'htmlType', description: 'HTML button type (only when href is not set)', type: "'button' | 'submit' | 'reset'", default: "'button'" },
];
---

<ComponentLayout
  name="Button"
  description="Versatile button component with DaisyUI styling and many variants."
  api={api}
>
  <Example title="Brand Colors" description="Primary brand colors for common actions." source={ButtonDemoSource} fn="BrandColorsDemo">
    <BrandColorsDemo client:load slot="demo" />
  </Example>

  <Example title="State Colors" description="Semantic colors for different states and feedback." source={ButtonDemoSource} fn="StateColorsDemo">
    <StateColorsDemo client:load slot="demo" />
  </Example>

  <Example title="Variants" description="Different style variants: solid (default), outline, dash, soft, ghost, and link." source={ButtonDemoSource} fn="VariantsDemo">
    <VariantsDemo client:load slot="demo" />
  </Example>

  <Example title="Sizes" description="Five sizes: xs, sm, md (default), lg, and xl." source={ButtonDemoSource} fn="SizesDemo">
    <SizesDemo client:load slot="demo" />
  </Example>

  <Example title="Outline" description="Outline variant with transparent background." source={ButtonDemoSource} fn="OutlineDemo">
    <OutlineDemo client:load slot="demo" />
  </Example>

  <Example title="Dashed Border" description="Buttons with dashed border styling." source={ButtonDemoSource} fn="DashDemo">
    <DashDemo client:load slot="demo" />
  </Example>

  <Example title="Soft Colors" description="Muted color backgrounds for subtle emphasis." source={ButtonDemoSource} fn="SoftDemo">
    <SoftDemo client:load slot="demo" />
  </Example>

  <Example title="States" description="Active, loading, and disabled states." source={ButtonDemoSource} fn="StatesDemo">
    <StatesDemo client:load slot="demo" />
  </Example>

  <Example title="Shapes" description="Square and circle shapes for icon buttons." source={ButtonDemoSource} fn="ShapesDemo">
    <ShapesDemo client:load slot="demo" />
  </Example>

  <Example title="Wide" description="Extra wide buttons for emphasis." source={ButtonDemoSource} fn="WideDemo">
    <WideDemo client:load slot="demo" />
  </Example>

  <Example title="Block" description="Full width buttons." source={ButtonDemoSource} fn="BlockDemo">
    <BlockDemo client:load slot="demo" />
  </Example>

  <Example title="Loading States" description="Loading spinner with different colors." source={ButtonDemoSource} fn="LoadingDemo">
    <LoadingDemo client:load slot="demo" />
  </Example>

  <Example title="Link Buttons" description="Buttons that navigate to URLs. Renders as anchor element when href is provided." source={ButtonDemoSource} fn="LinkButtonsDemo">
    <LinkButtonsDemo client:load slot="demo" />
  </Example>

  <Example title="With Icons" description="Buttons with icons using the icon prop for automatic spacing." source={ButtonDemoSource} fn="WithIconsDemo">
    <WithIconsDemo client:load slot="demo" />
  </Example>

  <Example title="Auto-sized Icons" description="Icons from @aster-ui/icons automatically match the button size." source={ButtonDemoSource} fn="IconSizesDemo">
    <IconSizesDemo client:load slot="demo" />
  </Example>

  <Example title="Danger Button" description="Semantic danger styling for destructive actions." source={ButtonDemoSource} fn="DangerDemo">
    <DangerDemo client:load slot="demo" />
  </Example>

  <Example title="Round Shape" description="Pill-shaped buttons with fully rounded ends." source={ButtonDemoSource} fn="RoundDemo">
    <RoundDemo client:load slot="demo" />
  </Example>

  <Example title="No Animation" description="Disable the click animation effect." source={ButtonDemoSource} fn="NoAnimationDemo">
    <NoAnimationDemo client:load slot="demo" />
  </Example>

  <Example title="Toggle Button" description="Toggle buttons using pressed prop for accessibility." source={ButtonDemoSource} fn="ToggleDemo">
    <ToggleDemo client:load slot="demo" />
  </Example>

  <Example title="Form Submit" description="Button with htmlType='submit' inside AsterUI Form component." source={ButtonDemoSource} fn="FormSubmitDemo">
    <FormSubmitDemo client:load slot="demo" />
  </Example>

  <Example title="Event Handling" description="Buttons with onClick handlers and state management." source={ButtonDemoSource} fn="EventHandlingDemo">
    <EventHandlingDemo client:load slot="demo" />
  </Example>

  <section slot="accessibility" class="mb-8">
    <h2 class="text-2xl font-bold mb-4">Accessibility</h2>
    <ul class="list-disc list-inside space-y-2 text-base-content/80">
      <li>Uses native <code class="bg-base-content/20 px-1 rounded">&lt;button&gt;</code> element for proper keyboard support</li>
      <li>Renders as <code class="bg-base-content/20 px-1 rounded">&lt;a&gt;</code> element when <code class="bg-base-content/20 px-1 rounded">href</code> is provided for proper link semantics</li>
      <li>Loading state sets <code class="bg-base-content/20 px-1 rounded">aria-busy="true"</code> and disables the button</li>
      <li>Toggle buttons use <code class="bg-base-content/20 px-1 rounded">aria-pressed</code> for screen reader support</li>
      <li>Disabled state is properly communicated to assistive technologies</li>
      <li>Focus states are visible for keyboard navigation</li>
    </ul>
  </section>
</ComponentLayout>
