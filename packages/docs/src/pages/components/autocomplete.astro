---
import ComponentLayout from '../../layouts/ComponentLayout.astro';
import Example from '../../components/Example.astro';
import {
  BasicDemo,
  ObjectsDemo,
  ControlledDemo,
  AllowClearDemo,
  NoCustomDemo,
  FilterDemo,
  SizesDemo,
  ColorsDemo,
  StatusDemo,
  DisabledDemo,
  DisabledOptionsDemo,
  NotFoundDemo,
  EmailDemo,
  FormDemo,
} from '../../components/AutocompleteDemo';
import AutocompleteDemoSource from '../../components/AutocompleteDemo.tsx?raw';

const api = [
  { title: 'Autocomplete', data: [
    { property: 'value', description: 'Controlled value', type: 'string' },
    { property: 'defaultValue', description: 'Default value (uncontrolled)', type: 'string', default: "''" },
    { property: 'onChange', description: 'Callback when value changes', type: '(value: string) => void' },
    { property: 'onSelect', description: 'Callback when an option is selected', type: '(value: string, option: AutocompleteOption) => void' },
    { property: 'onSearch', description: 'Callback when input value changes (for async filtering)', type: '(value: string) => void' },
    { property: 'options', description: 'Array of options to display', type: 'string[] | AutocompleteOption[]' },
    { property: 'placeholder', description: 'Input placeholder text', type: 'string', default: '"Type to search..."' },
    { property: 'disabled', description: 'Disable the autocomplete', type: 'boolean', default: 'false' },
    { property: 'size', description: 'Input size', type: "'xs' | 'sm' | 'md' | 'lg' | 'xl'", default: "'md'" },
    { property: 'color', description: 'Input color variant', type: "'neutral' | 'primary' | 'secondary' | 'accent' | 'info' | 'success' | 'warning' | 'error'" },
    { property: 'status', description: 'Validation status (sets aria-invalid)', type: "'error' | 'warning'" },
    { property: 'allowCustomValue', description: 'Allow user to enter custom values not in options', type: 'boolean', default: 'true' },
    { property: 'filterOption', description: 'Custom filter function', type: '(option: AutocompleteOption, inputValue: string) => boolean' },
    { property: 'notFoundContent', description: 'Content to show when no options match', type: 'React.ReactNode', default: '"No results found"' },
    { property: 'allowClear', description: 'Show clear button when input has value', type: 'boolean | { clearIcon?: ReactNode }', default: 'false' },
    { property: 'onClear', description: 'Callback when clear button is clicked', type: '() => void' },
    { property: 'open', description: 'Controlled open state of dropdown', type: 'boolean' },
    { property: 'defaultOpen', description: 'Default open state (uncontrolled)', type: 'boolean', default: 'false' },
    { property: 'onOpenChange', description: 'Callback when open state changes', type: '(open: boolean) => void' },
    { property: 'defaultActiveFirstOption', description: 'Activate first option by default when filtering', type: 'boolean', default: 'true' },
    { property: 'className', description: 'Additional CSS classes', type: 'string' },
  ]},
  { title: 'AutocompleteOption', data: [
    { property: 'value', description: 'The value of the option', type: 'string' },
    { property: 'label', description: 'The display text of the option', type: 'string' },
    { property: 'disabled', description: 'Whether the option is disabled', type: 'boolean' },
  ]},
];
---

<ComponentLayout
  name="Autocomplete"
  description="Search and select from a list of options with keyboard navigation and filtering."
  api={api}
>
  <Example title="Basic Autocomplete" description="Simple autocomplete with string array options." source={AutocompleteDemoSource} fn="BasicDemo">
    <BasicDemo client:load slot="demo" />
  </Example>

  <Example title="With Object Options" description="Autocomplete with value/label object options." source={AutocompleteDemoSource} fn="ObjectsDemo">
    <ObjectsDemo client:load slot="demo" />
  </Example>

  <Example title="Controlled" description="Controlled autocomplete with state management." source={AutocompleteDemoSource} fn="ControlledDemo">
    <ControlledDemo client:load slot="demo" />
  </Example>

  <Example title="Allow Clear" description="Autocomplete with clear button." source={AutocompleteDemoSource} fn="AllowClearDemo">
    <AllowClearDemo client:load slot="demo" />
  </Example>

  <Example title="No Custom Values" description="Autocomplete that only allows selection from options." source={AutocompleteDemoSource} fn="NoCustomDemo">
    <NoCustomDemo client:load slot="demo" />
  </Example>

  <Example title="Custom Filter" description="Autocomplete with custom filtering logic (starts with)." source={AutocompleteDemoSource} fn="FilterDemo">
    <FilterDemo client:load slot="demo" />
  </Example>

  <Example title="Different Sizes" description="Autocomplete in various sizes." source={AutocompleteDemoSource} fn="SizesDemo">
    <SizesDemo client:load slot="demo" />
  </Example>

  <Example title="Colors" description="Different color variants." source={AutocompleteDemoSource} fn="ColorsDemo">
    <ColorsDemo client:load slot="demo" />
  </Example>

  <Example title="Validation Status" description="Autocomplete with validation status for form feedback." source={AutocompleteDemoSource} fn="StatusDemo">
    <StatusDemo client:load slot="demo" />
  </Example>

  <Example title="Disabled" description="Disabled autocomplete." source={AutocompleteDemoSource} fn="DisabledDemo">
    <DisabledDemo client:load slot="demo" />
  </Example>

  <Example title="Disabled Options" description="Individual options can be disabled." source={AutocompleteDemoSource} fn="DisabledOptionsDemo">
    <DisabledOptionsDemo client:load slot="demo" />
  </Example>

  <Example title="Custom Not Found Content" description="Autocomplete with custom message when no results." source={AutocompleteDemoSource} fn="NotFoundDemo">
    <NotFoundDemo client:load slot="demo" />
  </Example>

  <Example title="Email Domain Autocomplete" description="Practical example with email domain suggestions." source={AutocompleteDemoSource} fn="EmailDemo">
    <EmailDemo client:load slot="demo" />
  </Example>

  <Example title="In Form" description="Autocomplete integrated with Form component." source={AutocompleteDemoSource} fn="FormDemo">
    <FormDemo client:load slot="demo" />
  </Example>

  <section slot="accessibility" class="mb-8">
    <h2 class="text-2xl font-bold mb-4">Keyboard Navigation</h2>
    <div class="p-4 bg-info/10 border border-info/20 rounded-lg mb-6">
      <ul class="list-disc list-inside space-y-2 text-base-content/80">
        <li><kbd class="kbd kbd-sm">↑</kbd> / <kbd class="kbd kbd-sm">↓</kbd> - Navigate through options</li>
        <li><kbd class="kbd kbd-sm">Enter</kbd> - Select highlighted option</li>
        <li><kbd class="kbd kbd-sm">Esc</kbd> - Close dropdown and blur input</li>
      </ul>
    </div>

    <h2 class="text-2xl font-bold mb-4">Accessibility</h2>
    <ul class="list-disc list-inside space-y-2 text-base-content/80">
      <li>Uses <code class="bg-base-content/20 px-1 rounded">role="combobox"</code> with proper ARIA attributes</li>
      <li>Dropdown uses <code class="bg-base-content/20 px-1 rounded">role="listbox"</code> with <code class="bg-base-content/20 px-1 rounded">role="option"</code> items</li>
      <li><code class="bg-base-content/20 px-1 rounded">aria-expanded</code> indicates dropdown open state</li>
      <li><code class="bg-base-content/20 px-1 rounded">aria-activedescendant</code> tracks the highlighted option</li>
      <li><code class="bg-base-content/20 px-1 rounded">aria-selected</code> indicates the currently highlighted option</li>
      <li>Use <code class="bg-base-content/20 px-1 rounded">status="error"</code> to set <code class="bg-base-content/20 px-1 rounded">aria-invalid</code> automatically</li>
      <li>Disabled options use <code class="bg-base-content/20 px-1 rounded">aria-disabled</code></li>
      <li>Clear button has <code class="bg-base-content/20 px-1 rounded">aria-label</code> for screen readers</li>
    </ul>
  </section>
</ComponentLayout>
