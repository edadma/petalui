const formApi = [
  { property: 'onFinish', description: 'Success handler (called when validation passes)', type: '(values: any) => void' },
  { property: 'onFinishFailed', description: 'Failed handler (called when validation fails)', type: '(errorInfo: any) => void' },
  { property: 'initialValues', description: 'Initial form field values', type: 'Record<string, any>' },
  { property: 'layout', description: 'Form layout orientation', type: "'horizontal' | 'vertical' | 'inline'", default: "'vertical'" },
  { property: 'labelWidth', description: 'Label width in pixels for horizontal layout', type: 'number', default: '60' },
  { property: 'disabled', description: 'Disable all form fields', type: 'boolean', default: 'false' },
  { property: 'children', description: 'Form content (Form.Item elements)', type: 'React.ReactNode' },
  { property: 'className', description: 'Additional CSS classes', type: 'string' },
];

const formItemApi = [
  { property: 'name', description: 'Field name (required for validation)', type: 'string' },
  { property: 'label', description: 'Field label text', type: 'string' },
  { property: 'floatingLabel', description: 'Floating label text (alternative to label)', type: 'string' },
  { property: 'addonBefore', description: 'Text/element before input (outside)', type: 'React.ReactNode' },
  { property: 'addonAfter', description: 'Text/element after input (outside)', type: 'React.ReactNode' },
  { property: 'rules', description: 'Validation rules', type: 'ValidationRule[]' },
  { property: 'required', description: 'Mark field as required (shorthand)', type: 'boolean', default: 'false' },
  { property: 'valuePropName', description: 'Prop name for value (e.g., "checked" for checkboxes)', type: 'string', default: "'value'" },
  { property: 'inline', description: 'Render with auto width instead of full width', type: 'boolean', default: 'false' },
  { property: 'tooltip', description: 'Tooltip text to show next to label', type: 'string' },
  { property: 'extra', description: 'Additional content below the form control', type: 'React.ReactNode' },
  { property: 'hasFeedback', description: 'Show validation feedback icon (✓ or ✗)', type: 'boolean', default: 'false' },
  { property: 'dependencies', description: 'Field names that trigger re-validation when changed', type: 'string[]' },
  { property: 'validateTrigger', description: 'When to validate', type: "'onChange' | 'onBlur' | 'onSubmit' | array", default: "'onChange'" },
  { property: 'initialValue', description: 'Initial value for this field (overrides Form initialValues)', type: 'any' },
  { property: 'hidden', description: 'Hide field but still validate and submit', type: 'boolean', default: 'false' },
  { property: 'children', description: 'Form control element (Input, Select, etc.)', type: 'React.ReactNode' },
  { property: 'className', description: 'Additional CSS classes', type: 'string' },
];

const errorListApi = [
  { property: 'fields', description: 'Specific field names to show errors for (shows all if not specified)', type: 'string[]' },
  { property: 'className', description: 'Additional CSS classes', type: 'string' },
];

