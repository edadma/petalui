---
import ComponentLayout from '../../layouts/ComponentLayout.astro';
import Example from '../../components/Example.astro';
import {
  BasicDemo,
  CenteredDemo,
  StyledDemo,
  FastDemo,
} from '../../components/TextRotateDemo';
import TextRotateDemoSource from '../../components/TextRotateDemo.tsx?raw';

const api = [
  { property: 'items', description: 'Text items to rotate through (max 6)', type: 'React.ReactNode[]', default: '-' },
  { property: 'duration', description: 'Animation duration in ms', type: '6000 | 9000 | 12000 | 15000 | 18000', default: '10000' },
  { property: 'centered', description: 'Center text horizontally', type: 'boolean', default: 'false' },
  { property: 'className', description: 'Additional CSS classes', type: 'string', default: '-' },
];
---

<ComponentLayout
  name="TextRotate"
  description="Animated text that cycles through multiple options in a loop."
  api={api}
>
  <Example title="Basic" description="Simple rotating text with multiple languages." source={TextRotateDemoSource} fn="BasicDemo">
    <BasicDemo client:load slot="demo" />
  </Example>

  <Example title="Centered" description="Center-aligned rotating text." source={TextRotateDemoSource} fn="CenteredDemo">
    <CenteredDemo client:load slot="demo" />
  </Example>

  <Example title="Styled Items" description="Each item can have custom styling." source={TextRotateDemoSource} fn="StyledDemo">
    <StyledDemo client:load slot="demo" />
  </Example>

  <Example title="Custom Duration" description="Faster rotation with 6 second cycle." source={TextRotateDemoSource} fn="FastDemo">
    <FastDemo client:load slot="demo" />
  </Example>

  <section slot="accessibility" class="mb-8">
    <h2 class="text-2xl font-bold mb-4">Accessibility</h2>
    <ul class="list-disc list-inside space-y-2 text-base-content/80">
      <li>Animation pauses on hover for easier reading</li>
      <li>Supports reduced motion preferences</li>
      <li>Text remains readable at all animation states</li>
    </ul>
  </section>
</ComponentLayout>
