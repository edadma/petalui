---
import ComponentLayout from '../../layouts/ComponentLayout.astro';
import Example from '../../components/Example.astro';
import {
  SuccessResultDemo,
  ErrorResultDemo,
  InfoResultDemo,
  WarningResultDemo,
  NotFoundResultDemo,
  ForbiddenResultDemo,
  ServerErrorResultDemo,
} from '../../components/ResultDemo';
import ResultDemoSource from '../../components/ResultDemo.tsx?raw';

const api = [
  { property: 'status', description: 'Status type of the result', type: "'success' | 'error' | 'info' | 'warning' | '404' | '403' | '500'", default: "'info'" },
  { property: 'title', description: 'Title of the result', type: 'React.ReactNode', default: '-' },
  { property: 'subTitle', description: 'Subtitle of the result', type: 'React.ReactNode', default: '-' },
  { property: 'icon', description: 'Custom icon (overrides default status icon)', type: 'React.ReactNode', default: '-' },
  { property: 'extra', description: 'Additional action elements (typically buttons)', type: 'React.ReactNode', default: '-' },
  { property: 'children', description: 'Additional content between subtitle and actions', type: 'React.ReactNode', default: '-' },
  { property: 'className', description: 'Additional CSS classes', type: 'string', default: '-' },
  { property: 'style', description: 'Inline styles', type: 'React.CSSProperties', default: '-' },
];
---

<ComponentLayout
  name="Result"
  description="Display result pages for success, error, or informational states."
  api={api}
>
  <Example title="Success Result" description="Show success state with action buttons." source={ResultDemoSource} fn="SuccessResultDemo">
    <SuccessResultDemo client:load slot="demo" />
  </Example>

  <Example title="Error Result" description="Show error state with retry action." source={ResultDemoSource} fn="ErrorResultDemo">
    <ErrorResultDemo client:load slot="demo" />
  </Example>

  <Example title="Info Result" description="Show informational message." source={ResultDemoSource} fn="InfoResultDemo">
    <InfoResultDemo client:load slot="demo" />
  </Example>

  <Example title="Warning Result" description="Show warning state." source={ResultDemoSource} fn="WarningResultDemo">
    <WarningResultDemo client:load slot="demo" />
  </Example>

  <Example title="404 Page Not Found" description="Show 404 error page." source={ResultDemoSource} fn="NotFoundResultDemo">
    <NotFoundResultDemo client:load slot="demo" />
  </Example>

  <Example title="403 Forbidden" description="Show access denied page." source={ResultDemoSource} fn="ForbiddenResultDemo">
    <ForbiddenResultDemo client:load slot="demo" />
  </Example>

  <Example title="500 Server Error" description="Show server error page." source={ResultDemoSource} fn="ServerErrorResultDemo">
    <ServerErrorResultDemo client:load slot="demo" />
  </Example>

  <section slot="accessibility" class="mb-8">
    <h2 class="text-2xl font-bold mb-4">Accessibility</h2>
    <ul class="list-disc list-inside space-y-2 text-base-content/80">
      <li>Status icons have appropriate ARIA labels</li>
      <li>Semantic heading structure for title and subtitle</li>
      <li>Action buttons are keyboard accessible</li>
      <li>Color is not the only indicator of status</li>
    </ul>
  </section>
</ComponentLayout>
