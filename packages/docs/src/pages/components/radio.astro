---
import ComponentLayout from '../../layouts/ComponentLayout.astro';
import Example from '../../components/Example.astro';
import {
  BasicDemo,
  HorizontalDemo,
  SizesDemo,
  ColorsDemo,
  DisabledDemo,
  FormDemo,
} from '../../components/RadioDemo';
import RadioDemoSource from '../../components/RadioDemo.tsx?raw';

const radioGroupApi = [
  { property: 'children', description: 'Radio components', type: 'React.ReactNode', default: '-' },
  { property: 'value', description: 'Current selected value (controlled)', type: 'string | number', default: '-' },
  { property: 'defaultValue', description: 'Default selected value (uncontrolled)', type: 'string | number', default: '-' },
  { property: 'onChange', description: 'Callback when selection changes', type: '(e: { target: { value: string | number, name?: string } }) => void', default: '-' },
  { property: 'name', description: 'Name for all radio inputs in the group', type: 'string', default: '-' },
  { property: 'className', description: 'Additional CSS classes', type: 'string', default: '-' },
];

const radioApi = [
  { property: 'value', description: 'Radio value (required when in Radio.Group)', type: 'string | number', default: '-' },
  { property: 'children', description: 'Label content (wraps in label element)', type: 'React.ReactNode', default: '-' },
  { property: 'size', description: 'Radio button size', type: "'xs' | 'sm' | 'md' | 'lg' | 'xl'", default: '-' },
  { property: 'color', description: 'Radio button color variant', type: "'neutral' | 'primary' | 'secondary' | 'accent' | 'info' | 'success' | 'warning' | 'error'", default: '-' },
  { property: 'disabled', description: 'Disabled state', type: 'boolean', default: 'false' },
  { property: 'className', description: 'Additional CSS classes', type: 'string', default: '-' },
];

const api = [
  ...radioGroupApi.map(item => ({ ...item, component: 'Radio.Group' })),
  ...radioApi.map(item => ({ ...item, component: 'Radio' })),
];
---

<ComponentLayout
  name="Radio"
  description="Radio buttons for selecting one option from a set."
  api={api}
>
  <Example title="Basic Usage" description="Use Radio.Group to manage radio selection." source={RadioDemoSource} fn="BasicDemo">
    <BasicDemo client:load slot="demo" />
  </Example>

  <Example title="Horizontal Layout" description="Radio buttons in a horizontal row." source={RadioDemoSource} fn="HorizontalDemo">
    <HorizontalDemo client:load slot="demo" />
  </Example>

  <Example title="Different Sizes" description="Radio buttons in various sizes." source={RadioDemoSource} fn="SizesDemo">
    <SizesDemo client:load slot="demo" />
  </Example>

  <Example title="Colors" description="Colored radio button variants." source={RadioDemoSource} fn="ColorsDemo">
    <ColorsDemo client:load slot="demo" />
  </Example>

  <Example title="Disabled State" description="Disabled radio buttons." source={RadioDemoSource} fn="DisabledDemo">
    <DisabledDemo client:load slot="demo" />
  </Example>

  <Example title="In Form" description="Radio group in a form with validation." source={RadioDemoSource} fn="FormDemo">
    <FormDemo client:load slot="demo" />
  </Example>

  <section slot="accessibility" class="mb-8">
    <h2 class="text-2xl font-bold mb-4">Accessibility</h2>
    <ul class="list-disc list-inside space-y-2 text-base-content/80">
      <li>Uses native <code class="bg-base-content/20 px-1 rounded">&lt;input type="radio"&gt;</code> elements for full accessibility</li>
      <li>Radio.Group uses <code class="bg-base-content/20 px-1 rounded">role="radiogroup"</code> for proper semantics</li>
      <li>Radio inputs share <code class="bg-base-content/20 px-1 rounded">name</code> attribute within a group</li>
      <li>Labels are properly connected for click targeting</li>
      <li>Keyboard navigation with arrow keys within groups</li>
      <li>Disabled state is properly communicated to assistive technologies</li>
    </ul>
  </section>
</ComponentLayout>
