---
import ComponentLayout from '../../layouts/ComponentLayout.astro';
import Example from '../../components/Example.astro';
import {
  BasicDemo,
  TextDemo,
  AspectDemo,
} from '../../components/DiffDemo';
import DiffDemoSource from '../../components/DiffDemo.tsx?raw';

const api = [
  { property: 'left', description: 'Left side content (revealed when dragging)', type: 'React.ReactNode', default: '-' },
  { property: 'right', description: 'Right side content (hidden when dragging)', type: 'React.ReactNode', default: '-' },
  { property: 'aspect', description: 'Aspect ratio class', type: 'string', default: "'aspect-16/9'" },
  { property: 'className', description: 'Additional CSS classes', type: 'string', default: '-' },
];
---

<ComponentLayout
  name="Diff"
  description="Side-by-side comparison with an interactive resizer."
  api={api}
>
  <Example title="Image Comparison" description="Compare two images with a draggable slider." source={DiffDemoSource} fn="BasicDemo">
    <BasicDemo client:load slot="demo" />
  </Example>

  <Example title="Text Comparison" description="Compare text with different styles." source={DiffDemoSource} fn="TextDemo">
    <TextDemo client:load slot="demo" />
  </Example>

  <Example title="Custom Aspect Ratio" description="Use different aspect ratios." source={DiffDemoSource} fn="AspectDemo">
    <AspectDemo client:load slot="demo" />
  </Example>

  <section slot="accessibility" class="mb-8">
    <h2 class="text-2xl font-bold mb-4">Accessibility</h2>
    <ul class="list-disc list-inside space-y-2 text-base-content/80">
      <li>Keyboard accessible with tab navigation</li>
      <li>Uses <code class="bg-base-content/20 px-1 rounded">role="img"</code> for semantic meaning</li>
      <li>Arrow keys control the resizer position when focused</li>
    </ul>
  </section>
</ComponentLayout>
