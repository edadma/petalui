---
import ComponentLayout from '../../layouts/ComponentLayout.astro';
import Example from '../../components/Example.astro';
import {
  BasicDemo,
  TitleDemo,
  TriggersDemo,
  PlacementTopDemo,
  PlacementBottomDemo,
  PlacementLeftDemo,
  PlacementRightDemo,
} from '../../components/PopoverDemo';
import PopoverDemoSource from '../../components/PopoverDemo.tsx?raw';

const api = [
  { property: 'children', description: 'Trigger element', type: 'React.ReactNode', default: '-' },
  { property: 'content', description: 'Content of the popover', type: 'React.ReactNode', default: '-' },
  { property: 'title', description: 'Title of the popover', type: 'React.ReactNode', default: '-' },
  { property: 'trigger', description: 'How the popover is triggered', type: "'hover' | 'click' | 'focus'", default: "'hover'" },
  { property: 'placement', description: 'Position of the popover', type: "'top' | 'topLeft' | 'topRight' | 'bottom' | 'bottomLeft' | 'bottomRight' | 'left' | 'leftTop' | 'leftBottom' | 'right' | 'rightTop' | 'rightBottom'", default: "'top'" },
  { property: 'open', description: 'Whether popover is visible (controlled mode)', type: 'boolean', default: '-' },
  { property: 'onOpenChange', description: 'Callback when visibility changes', type: '(open: boolean) => void', default: '-' },
  { property: 'className', description: 'Additional CSS classes for wrapper', type: 'string', default: '-' },
  { property: 'overlayClassName', description: 'Additional CSS classes for popover overlay', type: 'string', default: '-' },
];
---

<ComponentLayout
  name="Popover"
  description="A card that displays additional information when triggered."
  api={api}
>
  <Example title="Basic Usage" description="Simple popover triggered on hover." source={PopoverDemoSource} fn="BasicDemo">
    <BasicDemo client:load slot="demo" />
  </Example>

  <Example title="With Title" description="Popover with a title and content." source={PopoverDemoSource} fn="TitleDemo">
    <TitleDemo client:load slot="demo" />
  </Example>

  <Example title="Trigger Types" description="Different trigger modes for the popover." source={PopoverDemoSource} fn="TriggersDemo">
    <TriggersDemo client:load slot="demo" />
  </Example>

  <Example title="Placement - Top" description="Top placement variations." source={PopoverDemoSource} fn="PlacementTopDemo">
    <PlacementTopDemo client:load slot="demo" />
  </Example>

  <Example title="Placement - Bottom" description="Bottom placement variations." source={PopoverDemoSource} fn="PlacementBottomDemo">
    <PlacementBottomDemo client:load slot="demo" />
  </Example>

  <Example title="Placement - Left" description="Left placement variations." source={PopoverDemoSource} fn="PlacementLeftDemo">
    <PlacementLeftDemo client:load slot="demo" />
  </Example>

  <Example title="Placement - Right" description="Right placement variations." source={PopoverDemoSource} fn="PlacementRightDemo">
    <PlacementRightDemo client:load slot="demo" />
  </Example>

  <section slot="accessibility" class="mb-8">
    <h2 class="text-2xl font-bold mb-4">Accessibility</h2>
    <ul class="list-disc list-inside space-y-2 text-base-content/80">
      <li>Popover uses proper ARIA attributes for tooltips</li>
      <li>Click and focus triggers are keyboard accessible</li>
      <li>Content is announced to screen readers when shown</li>
      <li>Escape key closes click-triggered popovers</li>
    </ul>
  </section>
</ComponentLayout>
