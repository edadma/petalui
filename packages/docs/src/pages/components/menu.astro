---
import ComponentLayout from '../../layouts/ComponentLayout.astro';
import Example from '../../components/Example.astro';
import {
  BasicDemo,
  HorizontalDemo,
  WithIconsDemo,
  SubmenuDemo,
  SizesDemo,
  DataDrivenDemo,
} from '../../components/MenuDemo';
import MenuDemoSource from '../../components/MenuDemo.tsx?raw';

const api = [
  { title: 'Menu', data: [
    { property: 'children', description: 'Menu items (compound pattern)', type: 'React.ReactNode', default: '-' },
    { property: 'items', description: 'Menu items (data-driven pattern)', type: 'MenuItem[]', default: '-' },
    { property: 'mode', description: 'Menu display mode', type: "'vertical' | 'horizontal' | 'inline'", default: "'vertical'" },
    { property: 'size', description: 'Menu size', type: "'xs' | 'sm' | 'md' | 'lg' | 'xl'", default: '-' },
    { property: 'selectedKeys', description: 'Controlled selected item keys', type: 'string[]', default: '-' },
    { property: 'defaultSelectedKeys', description: 'Default selected keys (uncontrolled)', type: 'string[]', default: '[]' },
    { property: 'openKeys', description: 'Controlled open submenu keys', type: 'string[]', default: '-' },
    { property: 'defaultOpenKeys', description: 'Default open submenu keys (uncontrolled)', type: 'string[]', default: '[]' },
    { property: 'onSelect', description: 'Callback when item is selected', type: '(key: string) => void', default: '-' },
    { property: 'onOpenChange', description: 'Callback when submenu open state changes', type: '(openKeys: string[]) => void', default: '-' },
    { property: 'className', description: 'Additional CSS classes', type: 'string', default: '-' },
  ]},
  { title: 'MenuItem (for items prop)', data: [
    { property: 'key', description: 'Unique identifier', type: 'string', default: '-' },
    { property: 'label', description: 'Item label', type: 'React.ReactNode', default: '-' },
    { property: 'icon', description: 'Icon element', type: 'React.ReactNode', default: '-' },
    { property: 'disabled', description: 'Whether item is disabled', type: 'boolean', default: 'false' },
    { property: 'children', description: 'Submenu items', type: 'MenuItem[]', default: '-' },
    { property: 'divider', description: 'Render as divider', type: 'boolean', default: 'false' },
    { property: 'title', description: 'Render as section title', type: 'boolean', default: 'false' },
  ]},
  { title: 'Menu.Item (compound pattern)', data: [
    { property: 'key', description: 'Unique key for selection (React key prop)', type: 'string', default: '-' },
    { property: 'children', description: 'Item content', type: 'React.ReactNode', default: '-' },
    { property: 'icon', description: 'Icon element', type: 'React.ReactNode', default: '-' },
    { property: 'disabled', description: 'Whether item is disabled', type: 'boolean', default: 'false' },
    { property: 'onClick', description: 'Click handler', type: '() => void', default: '-' },
    { property: 'className', description: 'Additional CSS classes', type: 'string', default: '-' },
  ]},
  { title: 'Menu.SubMenu (compound pattern)', data: [
    { property: 'key', description: 'Unique key for open state (React key prop)', type: 'string', default: '-' },
    { property: 'label', description: 'Submenu label', type: 'React.ReactNode', default: '-' },
    { property: 'icon', description: 'Icon element', type: 'React.ReactNode', default: '-' },
    { property: 'disabled', description: 'Whether submenu is disabled', type: 'boolean', default: 'false' },
    { property: 'children', description: 'Submenu items', type: 'React.ReactNode', default: '-' },
    { property: 'className', description: 'Additional CSS classes', type: 'string', default: '-' },
  ]},
  { title: 'Menu.Title', data: [
    { property: 'children', description: 'Title content', type: 'React.ReactNode', default: '-' },
    { property: 'className', description: 'Additional CSS classes', type: 'string', default: '-' },
  ]},
  { title: 'Menu.Divider', data: [
    { property: 'className', description: 'Additional CSS classes', type: 'string', default: '-' },
  ]},
];
---

<ComponentLayout
  name="Menu"
  description="Navigation menu component for displaying hierarchical navigation items."
  api={api}
>
  <Example title="Basic Menu" description="Simple vertical menu with selectable items." source={MenuDemoSource} fn="BasicDemo">
    <BasicDemo client:load slot="demo" />
  </Example>

  <Example title="Horizontal Menu" description="Menu displayed horizontally." source={MenuDemoSource} fn="HorizontalDemo">
    <HorizontalDemo client:load slot="demo" />
  </Example>

  <Example title="With Icons" description="Menu items with icons for better visual context." source={MenuDemoSource} fn="WithIconsDemo">
    <WithIconsDemo client:load slot="demo" />
  </Example>

  <Example title="With Submenu" description="Menu with nested submenus." source={MenuDemoSource} fn="SubmenuDemo">
    <SubmenuDemo client:load slot="demo" />
  </Example>

  <Example title="Sizes" description="Menu in different sizes." source={MenuDemoSource} fn="SizesDemo">
    <SizesDemo client:load slot="demo" />
  </Example>

  <Example title="Data-Driven Pattern" description="Use items prop for data-driven menus." source={MenuDemoSource} fn="DataDrivenDemo">
    <DataDrivenDemo client:load slot="demo" />
  </Example>

  <section slot="accessibility" class="mb-8">
    <h2 class="text-2xl font-bold mb-4">Accessibility</h2>
    <ul class="list-disc list-inside space-y-2 text-base-content/80">
      <li>Uses semantic navigation patterns with proper ARIA attributes</li>
      <li>Keyboard navigation support with arrow keys for menu traversal</li>
      <li>Selected items are properly marked for screen readers</li>
      <li>Submenu open/close states are communicated to assistive technologies</li>
      <li>Disabled menu items are properly marked and not focusable</li>
      <li>Focus states are visible for keyboard navigation</li>
    </ul>
  </section>
</ComponentLayout>
