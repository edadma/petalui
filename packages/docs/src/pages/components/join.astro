---
import ComponentLayout from '../../layouts/ComponentLayout.astro';
import Example from '../../components/Example.astro';
import {
  JoinedButtonsDemo,
  VerticalJoinDemo,
  JoinedInputAndButtonDemo,
} from '../../components/JoinDemo';
import JoinDemoSource from '../../components/JoinDemo.tsx?raw';

const api = [
  { property: 'direction', description: 'Join direction', type: "'horizontal' | 'vertical'", default: "'horizontal'" },
  { property: 'children', description: 'Elements to join together', type: 'React.ReactNode' },
  { property: 'className', description: 'Additional CSS classes', type: 'string' },
];
---

<ComponentLayout
  name="Join"
  description="Visually join elements together by removing spacing and borders between them."
  api={api}
>
  <Example title="Joined Buttons" description="Basic horizontal join with buttons." source={JoinDemoSource} fn="JoinedButtonsDemo">
    <JoinedButtonsDemo client:load slot="demo" />
  </Example>

  <Example title="Vertical Join" description="Vertically joined elements." source={JoinDemoSource} fn="VerticalJoinDemo">
    <VerticalJoinDemo client:load slot="demo" />
  </Example>

  <Example title="Joined Input and Button" description="Join input with button for search or forms." source={JoinDemoSource} fn="JoinedInputAndButtonDemo">
    <JoinedInputAndButtonDemo client:load slot="demo" />
  </Example>
</ComponentLayout>
