---
import ComponentLayout from '../../layouts/ComponentLayout.astro';
import Example from '../../components/Example.astro';
import {
  BasicDemo,
  CircleDemo,
  TextDemo,
  DimensionsDemo,
  AvatarTextDemo,
  CardDemo,
  ListDemo,
  ComplexDemo,
} from '../../components/SkeletonDemo';
import SkeletonDemoSource from '../../components/SkeletonDemo.tsx?raw';

const api = [
  { property: 'width', description: 'Width in pixels or CSS string', type: 'string | number', default: '-' },
  { property: 'height', description: 'Height in pixels or CSS string', type: 'string | number', default: '-' },
  { property: 'circle', description: 'Make skeleton circular', type: 'boolean', default: 'false' },
  { property: 'variant', description: 'Skeleton variant', type: "'default' | 'text'", default: "'default'" },
  { property: 'className', description: 'Additional CSS classes', type: 'string', default: '-' },
  { property: 'children', description: 'Content (for text variant)', type: 'React.ReactNode', default: '-' },
];
---

<ComponentLayout
  name="Skeleton"
  description="Animated loading placeholders for content."
  api={api}
>
  <Example title="Basic" description="Simple skeleton shapes with different dimensions." source={SkeletonDemoSource} fn="BasicDemo">
    <BasicDemo client:load slot="demo" />
  </Example>

  <Example title="Circle" description="Circular skeleton for avatars." source={SkeletonDemoSource} fn="CircleDemo">
    <CircleDemo client:load slot="demo" />
  </Example>

  <Example title="Text Variant" description="Skeleton that animates text color instead of background." source={SkeletonDemoSource} fn="TextDemo">
    <TextDemo client:load slot="demo" />
  </Example>

  <Example title="Width and Height Props" description="Use width and height props for precise sizing." source={SkeletonDemoSource} fn="DimensionsDemo">
    <DimensionsDemo client:load slot="demo" />
  </Example>

  <Example title="Avatar with Text" description="Common pattern for user profiles." source={SkeletonDemoSource} fn="AvatarTextDemo">
    <AvatarTextDemo client:load slot="demo" />
  </Example>

  <Example title="Card Skeleton" description="Loading placeholder for card content." source={SkeletonDemoSource} fn="CardDemo">
    <CardDemo client:load slot="demo" />
  </Example>

  <Example title="List Skeleton" description="Loading placeholder for list items." source={SkeletonDemoSource} fn="ListDemo">
    <ListDemo client:load slot="demo" />
  </Example>

  <Example title="Complex Layout" description="Skeleton for more complex content layouts." source={SkeletonDemoSource} fn="ComplexDemo">
    <ComplexDemo client:load slot="demo" />
  </Example>

  <section slot="accessibility" class="mb-8">
    <h2 class="text-2xl font-bold mb-4">Accessibility</h2>
    <ul class="list-disc list-inside space-y-2 text-base-content/80">
      <li>Skeleton is hidden from screen readers by default</li>
      <li>Use with loading states to inform users content is loading</li>
      <li>Match skeleton shapes to actual content layout</li>
      <li>Combine with ARIA live regions for loading announcements</li>
    </ul>
  </section>
</ComponentLayout>
