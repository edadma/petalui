---
import ComponentLayout from '../../layouts/ComponentLayout.astro';
import Example from '../../components/Example.astro';
import {
  BasicDemo,
  HorizontalDemo,
  NestedDemo,
} from '../../components/AnchorDemo';
import AnchorDemoSource from '../../components/AnchorDemo.tsx?raw';

const api = [
  { title: 'Anchor', data: [
    { property: 'items', description: 'Anchor links configuration', type: 'AnchorLinkItem[]', default: '-' },
    { property: 'direction', description: 'Layout direction', type: "'horizontal' | 'vertical'", default: "'vertical'" },
    { property: 'offsetTop', description: 'Offset from top when calculating scroll position', type: 'number', default: '0' },
    { property: 'bounds', description: 'Bounding distance of anchor area', type: 'number', default: '5' },
    { property: 'getContainer', description: 'Scroll container (default: window)', type: '() => HTMLElement | Window', default: '-' },
    { property: 'getCurrentAnchor', description: 'Customize the anchor highlight', type: '(activeLink: string) => string', default: '-' },
    { property: 'activeLink', description: 'Currently active link (controlled)', type: 'string', default: '-' },
    { property: 'onChange', description: 'Callback when active link changes', type: '(activeLink: string) => void', default: '-' },
    { property: 'onClick', description: 'Callback when link is clicked', type: '(e, link) => void', default: '-' },
    { property: 'affix', description: 'Fix anchor when scrolling', type: 'boolean', default: 'false' },
    { property: 'affixOffsetTop', description: 'Pixels offset from top when affix is true', type: 'number', default: '0' },
    { property: 'replace', description: 'Replace history instead of push', type: 'boolean', default: 'false' },
    { property: 'className', description: 'Custom CSS class', type: 'string', default: '-' },
    { property: 'children', description: 'Anchor.Link children (alternative to items)', type: 'React.ReactNode', default: '-' },
  ]},
  { title: 'AnchorLinkItem', data: [
    { property: 'href', description: 'Target element id (without #)', type: 'string', default: '-' },
    { property: 'title', description: 'Link title', type: 'React.ReactNode', default: '-' },
    { property: 'children', description: 'Nested link items', type: 'AnchorLinkItem[]', default: '-' },
  ]},
];
---

<ComponentLayout
  name="Anchor"
  description="Navigate to page sections with scroll spy highlighting."
  api={api}
>
  <Example title="Basic" description="Vertical anchor navigation with scroll spy." source={AnchorDemoSource} fn="BasicDemo">
    <BasicDemo client:load slot="demo" />
  </Example>

  <Example title="Horizontal" description="Horizontal layout for top navigation." source={AnchorDemoSource} fn="HorizontalDemo">
    <HorizontalDemo client:load slot="demo" />
  </Example>

  <Example title="Nested Links" description="Hierarchical navigation with nested links." source={AnchorDemoSource} fn="NestedDemo">
    <NestedDemo client:load slot="demo" />
  </Example>

  <section slot="accessibility" class="mb-8">
    <h2 class="text-2xl font-bold mb-4">Accessibility</h2>
    <ul class="list-disc list-inside space-y-2 text-base-content/80">
      <li>Uses semantic <code class="bg-base-content/20 px-1 rounded">&lt;nav&gt;</code> element for navigation</li>
      <li>Links are keyboard accessible</li>
      <li>Active state is visually indicated</li>
      <li>Smooth scrolling respects user motion preferences</li>
    </ul>
  </section>
</ComponentLayout>
