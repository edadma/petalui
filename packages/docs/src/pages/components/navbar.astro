---
import ComponentLayout from '../../layouts/ComponentLayout.astro';
import Example from '../../components/Example.astro';
import {
  BasicDemo,
  WithDropdownDemo,
  WithMenuIconDemo,
  ColorsDemo,
  ShadowDemo,
  RoundedDemo,
} from '../../components/NavbarDemo';
import NavbarDemoSource from '../../components/NavbarDemo.tsx?raw';

const api = [
  { property: 'start', description: 'Content for the start section of the navbar (typically logo/brand)', type: 'React.ReactNode', default: '-' },
  { property: 'center', description: 'Content for the center section of the navbar', type: 'React.ReactNode', default: '-' },
  { property: 'end', description: 'Content for the end section of the navbar (typically actions/menu)', type: 'React.ReactNode', default: '-' },
  { property: 'children', description: 'Custom content that replaces the three-section layout', type: 'React.ReactNode', default: '-' },
  { property: 'color', description: 'Background color variant', type: "'base' | 'neutral' | 'primary' | 'secondary' | 'accent'", default: "'base'" },
  { property: 'sticky', description: 'Make navbar sticky at the top', type: 'boolean', default: 'false' },
  { property: 'shadow', description: 'Shadow depth', type: "'none' | 'sm' | 'md' | 'lg' | 'xl'", default: "'none'" },
  { property: 'rounded', description: 'Border radius', type: "'none' | 'sm' | 'md' | 'lg' | 'xl' | 'full'", default: "'none'" },
  { property: 'className', description: 'Additional CSS classes', type: 'string', default: '-' },
];
---

<ComponentLayout
  name="Navbar"
  description="Navigation bar component with flexible layout for headers and app bars."
  api={api}
>
  <Example title="Basic Navbar" description="Simple navbar with title and navigation buttons." source={NavbarDemoSource} fn="BasicDemo">
    <BasicDemo client:load slot="demo" />
  </Example>

  <Example title="With Dropdown Menu" description="Navbar with a dropdown menu for additional options." source={NavbarDemoSource} fn="WithDropdownDemo">
    <WithDropdownDemo client:load slot="demo" />
  </Example>

  <Example title="With Menu Icon" description="Navbar with a hamburger menu dropdown." source={NavbarDemoSource} fn="WithMenuIconDemo">
    <WithMenuIconDemo client:load slot="demo" />
  </Example>

  <Example title="Color Variants" description="Navbar with different background color variants." source={NavbarDemoSource} fn="ColorsDemo">
    <ColorsDemo client:load slot="demo" />
  </Example>

  <Example title="With Shadow" description="Navbar with shadow for elevated appearance." source={NavbarDemoSource} fn="ShadowDemo">
    <ShadowDemo client:load slot="demo" />
  </Example>

  <Example title="Rounded Corners" description="Navbar with rounded corners for a softer look." source={NavbarDemoSource} fn="RoundedDemo">
    <RoundedDemo client:load slot="demo" />
  </Example>

  <section slot="accessibility" class="mb-8">
    <h2 class="text-2xl font-bold mb-4">Accessibility</h2>
    <ul class="list-disc list-inside space-y-2 text-base-content/80">
      <li>Uses semantic <code class="bg-base-content/20 px-1 rounded">&lt;nav&gt;</code> element for proper navigation semantics</li>
      <li>Supports keyboard navigation for all interactive elements</li>
      <li>Mobile menu buttons should have descriptive labels for screen readers</li>
      <li>Maintains focus visibility for keyboard users</li>
      <li>Dropdown menus follow ARIA best practices for menu patterns</li>
    </ul>
  </section>
</ComponentLayout>
