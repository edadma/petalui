---
import ComponentLayout from '../../layouts/ComponentLayout.astro';
import Example from '../../components/Example.astro';
import {
  TitlesDemo,
  ParagraphDemo,
  TextDemo,
  TextStylesDemo,
  LinksDemo,
  CopyableDemo,
  EllipsisDemo,
  EditableDemo,
} from '../../components/TypographyDemo';
import TypographyDemoSource from '../../components/TypographyDemo.tsx?raw';

const api = [
  { property: 'children', description: 'Content', type: 'React.ReactNode', default: '-' },
  { property: 'className', description: 'Additional CSS classes', type: 'string', default: '-' },
  { property: 'level', description: 'Heading level (h1-h5) - Title only', type: "1 | 2 | 3 | 4 | 5", default: '1' },
  { property: 'copyable', description: 'Enable copy to clipboard - Title and Paragraph', type: 'boolean | { text?: string }', default: 'false' },
  { property: 'ellipsis', description: 'Truncate with ellipsis - Title and Paragraph', type: 'boolean | { rows?: number }', default: 'false' },
  { property: 'editable', description: 'Enable inline editing - Title only', type: 'boolean', default: 'false' },
  { property: 'type', description: 'Text type for styling - Text and Link', type: "'secondary' | 'success' | 'warning' | 'danger'", default: '-' },
  { property: 'disabled', description: 'Disabled style - Text only', type: 'boolean', default: 'false' },
  { property: 'strong', description: 'Bold text - Text only', type: 'boolean', default: 'false' },
  { property: 'italic', description: 'Italic text - Text only', type: 'boolean', default: 'false' },
  { property: 'underline', description: 'Underlined text - Text only', type: 'boolean', default: 'false' },
  { property: 'delete', description: 'Strikethrough text - Text only', type: 'boolean', default: 'false' },
  { property: 'code', description: 'Code style - Text only', type: 'boolean', default: 'false' },
  { property: 'mark', description: 'Highlighted text - Text only', type: 'boolean', default: 'false' },
  { property: 'keyboard', description: 'Keyboard style - Text only', type: 'boolean', default: 'false' },
  { property: 'size', description: 'Text size - Paragraph and Link', type: "'sm' | 'base' | 'lg' | 'xl' | '2xl'", default: '-' },
  { property: 'align', description: 'Text alignment - Paragraph only', type: "'left' | 'center' | 'right'", default: '-' },
  { property: 'href', description: 'Link URL - Link only', type: 'string', default: "'#'" },
  { property: 'external', description: 'Open in new tab with external icon - Link only', type: 'boolean', default: 'false' },
];
---

<ComponentLayout
  name="Typography"
  description="Semantic text components for titles, paragraphs, and text formatting."
  api={api}
>
  <Example title="Titles" description="Heading levels from h1 to h5." source={TypographyDemoSource} fn="TitlesDemo">
    <TitlesDemo client:load slot="demo" />
  </Example>

  <Example title="Paragraph" description="Block-level text content." source={TypographyDemoSource} fn="ParagraphDemo">
    <ParagraphDemo client:load slot="demo" />
  </Example>

  <Example title="Text Types" description="Different text types for various contexts." source={TypographyDemoSource} fn="TextDemo">
    <TextDemo client:load slot="demo" />
  </Example>

  <Example title="Text Styles" description="Various text formatting options." source={TypographyDemoSource} fn="TextStylesDemo">
    <TextStylesDemo client:load slot="demo" />
  </Example>

  <Example title="Links" description="Styled anchor elements." source={TypographyDemoSource} fn="LinksDemo">
    <LinksDemo client:load slot="demo" />
  </Example>

  <Example title="Copyable" description="Copy text to clipboard with a click." source={TypographyDemoSource} fn="CopyableDemo">
    <CopyableDemo client:load slot="demo" />
  </Example>

  <Example title="Ellipsis" description="Truncate long text with ellipsis." source={TypographyDemoSource} fn="EllipsisDemo">
    <EllipsisDemo client:load slot="demo" />
  </Example>

  <Example title="Editable" description="Inline editable text." source={TypographyDemoSource} fn="EditableDemo">
    <EditableDemo client:load slot="demo" />
  </Example>

  <section slot="accessibility" class="mb-8">
    <h2 class="text-2xl font-bold mb-4">Accessibility</h2>
    <ul class="list-disc list-inside space-y-2 text-base-content/80">
      <li>Uses semantic HTML elements (h1-h5, p, span, a)</li>
      <li>Proper heading hierarchy maintained</li>
      <li>Links have accessible labels</li>
      <li>Copy and edit actions are keyboard accessible</li>
    </ul>
  </section>
</ComponentLayout>
