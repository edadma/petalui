---
import ComponentLayout from '../../layouts/ComponentLayout.astro';
import Example from '../../components/Example.astro';
import {
  BasicDemo,
  DescDemo,
  MultipleDemo,
  IconsDemo,
  ColoredDemo,
  VerticalDemo,
  ActionsDemo,
} from '../../components/StatDemo';
import StatDemoSource from '../../components/StatDemo.tsx?raw';

const statsApi = [
  { property: 'children', description: 'Stat items to display', type: 'React.ReactNode', default: '-' },
  { property: 'vertical', description: 'Stack stats vertically', type: 'boolean', default: 'false' },
  { property: 'className', description: 'Additional CSS classes', type: 'string', default: '-' },
];

const statApi = [
  { property: 'title', description: 'Stat title', type: 'React.ReactNode', default: '-' },
  { property: 'value', description: 'Stat value', type: 'React.ReactNode', default: '-' },
  { property: 'desc', description: 'Description text', type: 'React.ReactNode', default: '-' },
  { property: 'figure', description: 'Icon or image figure', type: 'React.ReactNode', default: '-' },
  { property: 'actions', description: 'Action buttons or elements', type: 'React.ReactNode', default: '-' },
  { property: 'className', description: 'Additional CSS classes', type: 'string', default: '-' },
];

const api = [
  ...statsApi.map(item => ({ ...item, component: 'Stats' })),
  ...statApi.map(item => ({ ...item, component: 'Stats.Stat' })),
];
---

<ComponentLayout
  name="Stats"
  description="Display statistics and data in organized blocks for dashboards and analytics."
  api={api}
>
  <Example title="Basic Stat" description="Simple stat with title and value." source={StatDemoSource} fn="BasicDemo">
    <BasicDemo client:load slot="demo" />
  </Example>

  <Example title="With Description" description="Add description using desc prop." source={StatDemoSource} fn="DescDemo">
    <DescDemo client:load slot="demo" />
  </Example>

  <Example title="Multiple Stats" description="Display multiple stats horizontally." source={StatDemoSource} fn="MultipleDemo">
    <MultipleDemo client:load slot="demo" />
  </Example>

  <Example title="With Icons" description="Adding icons using figure prop." source={StatDemoSource} fn="IconsDemo">
    <IconsDemo client:load slot="demo" />
  </Example>

  <Example title="Colored Values" description="Using className for colored values." source={StatDemoSource} fn="ColoredDemo">
    <ColoredDemo client:load slot="demo" />
  </Example>

  <Example title="Vertical Layout" description="Stack stats vertically." source={StatDemoSource} fn="VerticalDemo">
    <VerticalDemo client:load slot="demo" />
  </Example>

  <Example title="With Actions" description="Adding buttons using actions prop." source={StatDemoSource} fn="ActionsDemo">
    <ActionsDemo client:load slot="demo" />
  </Example>

  <section slot="accessibility" class="mb-8">
    <h2 class="text-2xl font-bold mb-4">Accessibility</h2>
    <ul class="list-disc list-inside space-y-2 text-base-content/80">
      <li>Semantic heading structure for stat titles</li>
      <li>Values can include ARIA labels for context</li>
      <li>Figures have appropriate alt text when using images</li>
      <li>Action buttons are keyboard accessible</li>
    </ul>
  </section>
</ComponentLayout>
