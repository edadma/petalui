---
import ComponentLayout from '../../layouts/ComponentLayout.astro';
import Example from '../../components/Example.astro';
import {
  BasicDemo,
  ColorsDemo,
  StatusDemo,
  IndeterminateDemo,
  SizesDemo,
  LabelDemo,
} from '../../components/ProgressDemo';
import ProgressDemoSource from '../../components/ProgressDemo.tsx?raw';

const api = [
  { property: 'value', description: 'Current progress value (0-100). Omit for indeterminate state', type: 'number', default: '-' },
  { property: 'max', description: 'Maximum value', type: 'number', default: '100' },
  { property: 'type', description: 'Color variant', type: "'neutral' | 'primary' | 'secondary' | 'accent' | 'info' | 'success' | 'warning' | 'error'", default: '-' },
  { property: 'className', description: 'Additional CSS classes', type: 'string', default: '-' },
];
---

<ComponentLayout
  name="Progress"
  description="Display task completion or time passage with progress bars."
  api={api}
>
  <Example title="Basic Progress" description="Simple progress bar with value." source={ProgressDemoSource} fn="BasicDemo">
    <BasicDemo client:load slot="demo" />
  </Example>

  <Example title="Color Variants" description="Different color schemes for progress bars." source={ProgressDemoSource} fn="ColorsDemo">
    <ColorsDemo client:load slot="demo" />
  </Example>

  <Example title="Status Colors" description="Semantic colors for different states." source={ProgressDemoSource} fn="StatusDemo">
    <StatusDemo client:load slot="demo" />
  </Example>

  <Example title="Indeterminate" description="Progress bar without specific value (animated)." source={ProgressDemoSource} fn="IndeterminateDemo">
    <IndeterminateDemo client:load slot="demo" />
  </Example>

  <Example title="Sizes" description="Control width with Tailwind classes." source={ProgressDemoSource} fn="SizesDemo">
    <SizesDemo client:load slot="demo" />
  </Example>

  <Example title="With Label" description="Progress with text label." source={ProgressDemoSource} fn="LabelDemo">
    <LabelDemo client:load slot="demo" />
  </Example>

  <section slot="accessibility" class="mb-8">
    <h2 class="text-2xl font-bold mb-4">Accessibility</h2>
    <ul class="list-disc list-inside space-y-2 text-base-content/80">
      <li>Uses native <code class="bg-base-content/20 px-1 rounded">&lt;progress&gt;</code> element for accessibility</li>
      <li>Value is announced by screen readers</li>
      <li>Indeterminate state is properly communicated</li>
    </ul>
  </section>
</ComponentLayout>
