---
import ComponentLayout from '../../layouts/ComponentLayout.astro';
import Example from '../../components/Example.astro';
import {
  BasicTagsDemo,
  VariantsDemo,
  ClosableTagsDemo,
  TagsWithIconsDemo,
  TagSizesDemo,
  CustomColorsDemo,
  LinkTagsDemo,
  DisabledTagsDemo,
  CheckableTagsDemo,
  CheckableTagColorsDemo,
  CheckableTagsWithIconsDemo,
  UseCasesDemo,
} from '../../components/TagDemo';
import TagDemoSource from '../../components/TagDemo.tsx?raw';

const api = [
  { property: 'closable', description: 'Show close icon and enable closing', type: 'boolean', default: 'false' },
  { property: 'closeIcon', description: 'Custom close icon element', type: 'ReactNode', default: '-' },
  { property: 'onClose', description: 'Callback when tag is closed', type: '() => void', default: '-' },
  { property: 'color', description: 'Tag color (preset or custom hex)', type: "'primary' | 'secondary' | 'accent' | 'neutral' | 'info' | 'success' | 'warning' | 'error' | 'ghost' | string", default: '-' },
  { property: 'icon', description: 'Icon element to display before text', type: 'ReactNode', default: '-' },
  { property: 'size', description: 'Tag size', type: "'xs' | 'sm' | 'md' | 'lg' | 'xl'", default: "'md'" },
  { property: 'variant', description: 'Tag style variant', type: "'filled' | 'outlined' | 'soft' | 'dash'", default: "'filled'" },
  { property: 'visible', description: 'Controlled visibility state', type: 'boolean', default: '-' },
  { property: 'disabled', description: 'Disable interactions', type: 'boolean', default: 'false' },
  { property: 'href', description: 'Render tag as a link', type: 'string', default: '-' },
  { property: 'target', description: 'Link target (when href is set)', type: 'string', default: '-' },
  { property: 'children', description: 'Tag content', type: 'ReactNode', default: '-' },
  { property: 'className', description: 'Additional CSS classes', type: 'string', default: '-' },
  { property: 'data-testid', description: 'Test ID for the component', type: 'string', default: "'tag'" },
  { property: 'aria-label', description: 'Accessible label (used in close button announcement)', type: 'string', default: '-' },
];

const checkableTagApi = [
  { property: 'checked', description: 'Whether tag is checked', type: 'boolean', default: 'false' },
  { property: 'onChange', description: 'Callback when checked state changes', type: '(checked: boolean) => void', default: '-' },
  { property: 'icon', description: 'Icon element to display before text', type: 'ReactNode', default: '-' },
  { property: 'size', description: 'Tag size', type: "'xs' | 'sm' | 'md' | 'lg' | 'xl'", default: "'md'" },
  { property: 'color', description: 'Tag color when checked', type: "'primary' | 'secondary' | 'accent' | 'neutral' | 'info' | 'success' | 'warning' | 'error' | 'ghost'", default: "'primary'" },
  { property: 'disabled', description: 'Disable interactions', type: 'boolean', default: 'false' },
  { property: 'children', description: 'Tag content', type: 'ReactNode', default: '-' },
  { property: 'className', description: 'Additional CSS classes', type: 'string', default: '-' },
  { property: 'data-testid', description: 'Test ID for the component', type: 'string', default: "'checkable-tag'" },
];
---

<ComponentLayout
  name="Tag"
  description="Labels for categorizing, marking, and organizing content."
  api={api}
  additionalApi={[{ title: 'CheckableTag', data: checkableTagApi }]}
>
  <Example title="Basic Tags" description="Simple tags with preset colors." source={TagDemoSource} fn="BasicTagsDemo">
    <BasicTagsDemo client:load slot="demo" />
  </Example>

  <Example title="Variants" description="Different style variants for tags." source={TagDemoSource} fn="VariantsDemo">
    <VariantsDemo client:load slot="demo" />
  </Example>

  <Example title="Closable Tags" description="Tags that can be closed by the user." source={TagDemoSource} fn="ClosableTagsDemo">
    <ClosableTagsDemo client:load slot="demo" />
  </Example>

  <Example title="Tags with Icons" description="Add icons to tags for better visual communication." source={TagDemoSource} fn="TagsWithIconsDemo">
    <TagsWithIconsDemo client:load slot="demo" />
  </Example>

  <Example title="Tag Sizes" description="Five sizes available for tags." source={TagDemoSource} fn="TagSizesDemo">
    <TagSizesDemo client:load slot="demo" />
  </Example>

  <Example title="Custom Colors" description="Use custom hex colors for unique styling." source={TagDemoSource} fn="CustomColorsDemo">
    <CustomColorsDemo client:load slot="demo" />
  </Example>

  <Example title="Link Tags" description="Tags that navigate to URLs." source={TagDemoSource} fn="LinkTagsDemo">
    <LinkTagsDemo client:load slot="demo" />
  </Example>

  <Example title="Disabled Tags" description="Tags with disabled state." source={TagDemoSource} fn="DisabledTagsDemo">
    <DisabledTagsDemo client:load slot="demo" />
  </Example>

  <Example title="Checkable Tags" description="Tags that can be toggled on and off." source={TagDemoSource} fn="CheckableTagsDemo">
    <CheckableTagsDemo client:load slot="demo" />
  </Example>

  <Example title="Checkable Tag Colors" description="Checkable tags with different colors and sizes." source={TagDemoSource} fn="CheckableTagColorsDemo">
    <CheckableTagColorsDemo client:load slot="demo" />
  </Example>

  <Example title="Checkable Tags with Icons" description="Add icons to checkable tags." source={TagDemoSource} fn="CheckableTagsWithIconsDemo">
    <CheckableTagsWithIconsDemo client:load slot="demo" />
  </Example>

  <Example title="Use Cases" description="Practical examples of tag usage." source={TagDemoSource} fn="UseCasesDemo">
    <UseCasesDemo client:load slot="demo" />
  </Example>

  <section slot="accessibility" class="mb-8">
    <h2 class="text-2xl font-bold mb-4">Accessibility</h2>
    <ul class="list-disc list-inside space-y-2 text-base-content/80">
      <li>Close button includes descriptive <code class="bg-base-content/20 px-1 rounded">aria-label</code> (e.g., "Remove Tag 1")</li>
      <li>CheckableTag uses <code class="bg-base-content/20 px-1 rounded">role="checkbox"</code> with proper <code class="bg-base-content/20 px-1 rounded">aria-checked</code> state</li>
      <li>Keyboard accessible - close and toggle actions work with Enter/Space</li>
      <li>Visible focus indicators on all interactive elements</li>
      <li><code class="bg-base-content/20 px-1 rounded">TagLiveRegion</code> announces tag removals to screen readers</li>
      <li><code class="bg-base-content/20 px-1 rounded">aria-disabled</code> attribute set when disabled</li>
      <li>Color contrast meets WCAG guidelines for preset colors</li>
    </ul>
  </section>
</ComponentLayout>
