---
import ComponentLayout from '../../layouts/ComponentLayout.astro';
import Example from '../../components/Example.astro';
import {
  BasicDemo,
  WithAvatarDemo,
  LoadingDemo,
  PaginationDemo,
} from '../../components/ListDemo';
import ListDemoSource from '../../components/ListDemo.tsx?raw';

const listApi = [
  {
    property: 'dataSource',
    description: 'Array of data items to render',
    type: 'T[]',
  },
  {
    property: 'renderItem',
    description: 'Function to render each item',
    type: '(item: T, index: number) => React.ReactNode',
  },
  {
    property: 'header',
    description: 'List header content',
    type: 'React.ReactNode',
  },
  {
    property: 'footer',
    description: 'List footer content',
    type: 'React.ReactNode',
  },
  {
    property: 'loading',
    description: 'Whether the list is in loading state',
    type: 'boolean',
    default: 'false',
  },
  {
    property: 'pagination',
    description: 'Pagination configuration',
    type: 'ListPaginationConfig | false',
    default: 'false',
  },
  {
    property: 'grid',
    description: 'Grid layout configuration',
    type: 'ListGridConfig',
  },
  {
    property: 'bordered',
    description: 'Show border around list',
    type: 'boolean',
    default: 'true',
  },
  {
    property: 'split',
    description: 'Show divider between items',
    type: 'boolean',
    default: 'true',
  },
  {
    property: 'size',
    description: 'Size variant',
    type: "'sm' | 'md' | 'lg'",
    default: "'md'",
  },
  {
    property: 'itemLayout',
    description: 'Layout direction for items',
    type: "'horizontal' | 'vertical'",
    default: "'horizontal'",
  },
  {
    property: 'locale',
    description: 'Internationalization text',
    type: '{ emptyText?: React.ReactNode }',
  },
  {
    property: 'loadMore',
    description: 'Load more content (e.g., button)',
    type: 'React.ReactNode',
  },
  {
    property: 'rowKey',
    description: 'Custom key extraction for items',
    type: 'keyof T | ((item: T) => React.Key)',
  },
  {
    property: 'data-testid',
    description: 'Test ID for the component',
    type: 'string',
    default: "'list'",
  },
  {
    property: 'aria-label',
    description: 'Accessible label for the list',
    type: 'string',
  },
];

const listItemApi = [
  {
    property: 'children',
    description: 'Item content',
    type: 'React.ReactNode',
  },
  {
    property: 'actions',
    description: 'Action buttons displayed on the right',
    type: 'React.ReactNode[]',
  },
  {
    property: 'extra',
    description: 'Extra content on the right side',
    type: 'React.ReactNode',
  },
  {
    property: 'className',
    description: 'Additional CSS classes',
    type: 'string',
  },
];

const listItemMetaApi = [
  {
    property: 'avatar',
    description: 'Avatar or icon element',
    type: 'React.ReactNode',
  },
  {
    property: 'title',
    description: 'Title content',
    type: 'React.ReactNode',
  },
  {
    property: 'description',
    description: 'Description content',
    type: 'React.ReactNode',
  },
];

const api = [
  { title: 'List', data: listApi },
  { title: 'List.Item', data: listItemApi },
  { title: 'List.Item.Meta', data: listItemMetaApi },
];
---

<ComponentLayout
  name="List"
  description="Display a list of items with support for pagination and loading states."
  api={api}
>
  <Example title="Basic List" description="Simple list with items." source={ListDemoSource} fn="BasicDemo">
    <BasicDemo client:load slot="demo" />
  </Example>

  <Example title="With Avatar" description="List items with avatars and descriptions." source={ListDemoSource} fn="WithAvatarDemo">
    <WithAvatarDemo client:load slot="demo" />
  </Example>

  <Example title="Loading State" description="List in loading state with skeleton." source={ListDemoSource} fn="LoadingDemo">
    <LoadingDemo client:load slot="demo" />
  </Example>

  <Example title="With Pagination" description="List with pagination controls." source={ListDemoSource} fn="PaginationDemo">
    <PaginationDemo client:load slot="demo" />
  </Example>

  <section slot="accessibility" class="mb-8">
    <h2 class="text-2xl font-bold mb-4">Accessibility</h2>
    <ul class="list-disc list-inside space-y-2 text-base-content/80">
      <li>Use <code class="bg-base-content/20 px-1 rounded">aria-label</code> to provide context for the list</li>
      <li>List items are rendered in semantic <code class="bg-base-content/20 px-1 rounded">&lt;ul&gt;</code> or <code class="bg-base-content/20 px-1 rounded">&lt;ol&gt;</code> elements</li>
      <li>Loading state is communicated to screen readers</li>
      <li>Pagination controls are keyboard accessible</li>
      <li>Empty state content is properly announced</li>
    </ul>
  </section>
</ComponentLayout>
