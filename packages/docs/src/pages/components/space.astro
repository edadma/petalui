---
import ComponentLayout from '../../layouts/ComponentLayout.astro';
import Example from '../../components/Example.astro';
import {
  HorizontalDemo,
  VerticalDemo,
  SizesDemo,
  AlignmentDemo,
  WrapDemo,
  NestedDemo,
  JustifyDemo,
  SplitDemo,
} from '../../components/SpaceDemo';
import SpaceDemoSource from '../../components/SpaceDemo.tsx?raw';

const api = [
  { property: 'direction', description: 'Layout direction', type: "'horizontal' | 'vertical'", default: "'horizontal'" },
  { property: 'size', description: 'Spacing size between children', type: "'xs' | 'sm' | 'md' | 'lg' | 'xl' | number", default: "'sm'" },
  { property: 'align', description: 'Alignment of items', type: "'start' | 'end' | 'center' | 'baseline' | 'stretch'", default: '-' },
  { property: 'justify', description: 'Justification of items along main axis', type: "'start' | 'end' | 'center' | 'between' | 'around' | 'evenly'", default: '-' },
  { property: 'wrap', description: 'Whether to wrap items', type: 'boolean', default: 'false' },
  { property: 'split', description: 'Separator element between children', type: 'React.ReactNode', default: '-' },
  { property: 'className', description: 'Additional CSS classes', type: 'string', default: '-' },
];
---

<ComponentLayout
  name="Space"
  description="Set consistent spacing between components."
  api={api}
>
  <Example title="Horizontal Space" description="Default horizontal spacing between elements." source={SpaceDemoSource} fn="HorizontalDemo">
    <HorizontalDemo client:load slot="demo" />
  </Example>

  <Example title="Vertical Space" description="Vertical spacing between elements." source={SpaceDemoSource} fn="VerticalDemo">
    <VerticalDemo client:load slot="demo" />
  </Example>

  <Example title="Different Sizes" description="Control spacing size with the size prop." source={SpaceDemoSource} fn="SizesDemo">
    <SizesDemo client:load slot="demo" />
  </Example>

  <Example title="With Alignment" description="Align items within the space." source={SpaceDemoSource} fn="AlignmentDemo">
    <AlignmentDemo client:load slot="demo" />
  </Example>

  <Example title="Wrap Items" description="Allow items to wrap to the next line." source={SpaceDemoSource} fn="WrapDemo">
    <WrapDemo client:load slot="demo" />
  </Example>

  <Example title="Nested Spaces" description="Combine vertical and horizontal spacing." source={SpaceDemoSource} fn="NestedDemo">
    <NestedDemo client:load slot="demo" />
  </Example>

  <Example title="Justify Content" description="Control how items are distributed along the main axis." source={SpaceDemoSource} fn="JustifyDemo">
    <JustifyDemo client:load slot="demo" />
  </Example>

  <Example title="Split Separator" description="Insert a separator element between children." source={SpaceDemoSource} fn="SplitDemo">
    <SplitDemo client:load slot="demo" />
  </Example>

  <section slot="accessibility" class="mb-8">
    <h2 class="text-2xl font-bold mb-4">Accessibility</h2>
    <ul class="list-disc list-inside space-y-2 text-base-content/80">
      <li>Space is a layout utility with no specific accessibility requirements</li>
      <li>Maintains semantic structure of child elements</li>
      <li>Size maps to Tailwind spacing: xs=1, sm=2, md=4, lg=6, xl=8</li>
    </ul>
  </section>
</ComponentLayout>
