---
import ComponentLayout from '../../layouts/ComponentLayout.astro';
import Example from '../../components/Example.astro';
import {
  BasicDemo,
  AvatarsDemo,
  HeadersDemo,
  ColorsDemo,
  FooterDemo,
} from '../../components/ChatDemo';
import ChatDemoSource from '../../components/ChatDemo.tsx?raw';

const api = [
  { property: 'message', description: 'Message content', type: 'React.ReactNode', default: '-' },
  { property: 'position', description: 'Bubble position', type: "'start' | 'end'", default: "'start'" },
  { property: 'avatar', description: 'Avatar image URL', type: 'string', default: '-' },
  { property: 'avatarAlt', description: 'Avatar alt text', type: 'string', default: '-' },
  { property: 'header', description: 'Header content (name, time)', type: 'React.ReactNode', default: '-' },
  { property: 'footer', description: 'Footer content (status)', type: 'React.ReactNode', default: '-' },
  { property: 'color', description: 'Bubble color variant', type: "'primary' | 'secondary' | 'accent' | 'neutral' | 'info' | 'success' | 'warning' | 'error'", default: '-' },
  { property: 'className', description: 'Additional CSS classes', type: 'string', default: '-' },
];
---

<ComponentLayout
  name="Chat"
  description="Chat message bubbles for displaying conversations with avatars and metadata."
  api={api}
>
  <Example title="Basic Chat" description="Simple chat bubbles with different positions." source={ChatDemoSource} fn="BasicDemo">
    <BasicDemo client:load slot="demo" />
  </Example>

  <Example title="With Avatars" description="Chat bubbles with user avatars." source={ChatDemoSource} fn="AvatarsDemo">
    <AvatarsDemo client:load slot="demo" />
  </Example>

  <Example title="With Headers" description="Chat bubbles with name and timestamp headers." source={ChatDemoSource} fn="HeadersDemo">
    <HeadersDemo client:load slot="demo" />
  </Example>

  <Example title="Colored Bubbles" description="Chat bubbles with different color variants." source={ChatDemoSource} fn="ColorsDemo">
    <ColorsDemo client:load slot="demo" />
  </Example>

  <Example title="With Footer" description="Chat bubbles with delivery status footer." source={ChatDemoSource} fn="FooterDemo">
    <FooterDemo client:load slot="demo" />
  </Example>

  <section slot="accessibility" class="mb-8">
    <h2 class="text-2xl font-bold mb-4">Accessibility</h2>
    <ul class="list-disc list-inside space-y-2 text-base-content/80">
      <li>Use meaningful alt text for avatar images</li>
      <li>Message content is readable by screen readers</li>
      <li>Position classes help convey conversation flow</li>
    </ul>
  </section>
</ComponentLayout>
