---
import ComponentLayout from '../../layouts/ComponentLayout.astro';
import Example from '../../components/Example.astro';
import {
  BasicDemo,
  IconsDemo,
  SeparatorDemo,
  ItemsDemo,
  ScrollDemo,
} from '../../components/BreadcrumbDemo';
import BreadcrumbDemoSource from '../../components/BreadcrumbDemo.tsx?raw';

const api = [
  { title: 'Breadcrumb', data: [
    { property: 'children', description: 'Breadcrumb.Item components (compound pattern)', type: 'React.ReactNode', default: '-' },
    { property: 'items', description: 'Breadcrumb items data (data-driven pattern)', type: 'BreadcrumbItemType[]', default: '-' },
    { property: 'separator', description: 'Custom separator between items', type: 'React.ReactNode', default: '"/"' },
    { property: 'className', description: 'Additional CSS classes', type: 'string', default: '-' },
  ]},
  { title: 'BreadcrumbItemType (for items prop)', data: [
    { property: 'title', description: 'Item title/label', type: 'React.ReactNode', default: '-' },
    { property: 'href', description: 'Link URL', type: 'string', default: '-' },
    { property: 'onClick', description: 'Click handler', type: '() => void', default: '-' },
    { property: 'className', description: 'Custom CSS class', type: 'string', default: '-' },
  ]},
  { title: 'Breadcrumb.Item (compound pattern)', data: [
    { property: 'children', description: 'Item content (text or elements)', type: 'React.ReactNode', default: '-' },
    { property: 'href', description: 'Link URL (makes item clickable)', type: 'string', default: '-' },
    { property: 'onClick', description: 'Click handler (makes item clickable)', type: '() => void', default: '-' },
    { property: 'icon', description: 'Icon to display before the label', type: 'React.ReactNode', default: '-' },
    { property: 'className', description: 'Additional CSS classes', type: 'string', default: '-' },
  ]},
];
---

<ComponentLayout
  name="Breadcrumb"
  description="Navigation breadcrumb trail showing hierarchical location."
  api={api}
>
  <Example title="Basic Breadcrumb" description="Simple breadcrumb navigation." source={BreadcrumbDemoSource} fn="BasicDemo">
    <BasicDemo client:load slot="demo" />
  </Example>

  <Example title="With Icons" description="Breadcrumb with icons." source={BreadcrumbDemoSource} fn="IconsDemo">
    <IconsDemo client:load slot="demo" />
  </Example>

  <Example title="Custom Separator" description="Use a string or React node as separator." source={BreadcrumbDemoSource} fn="SeparatorDemo">
    <SeparatorDemo client:load slot="demo" />
  </Example>

  <Example title="Data-Driven" description="Use items prop for data-driven breadcrumbs." source={BreadcrumbDemoSource} fn="ItemsDemo">
    <ItemsDemo client:load slot="demo" />
  </Example>

  <Example title="Max Width with Scroll" description="Breadcrumb with overflow scrolling." source={BreadcrumbDemoSource} fn="ScrollDemo">
    <ScrollDemo client:load slot="demo" />
  </Example>

  <section slot="accessibility" class="mb-8">
    <div class="alert alert-info">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="stroke-current shrink-0 w-6 h-6"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
      <div>
        <strong>Usage Tips:</strong>
        <ul class="list-disc list-inside mt-2 space-y-1">
          <li>Omit href/onClick on the last item to show current location</li>
          <li>Use max-width classes to enable horizontal scrolling</li>
          <li>Add icons using the icon prop on Breadcrumb.Item</li>
        </ul>
      </div>
    </div>
  </section>
</ComponentLayout>
