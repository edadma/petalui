---
import ComponentLayout from '../../layouts/ComponentLayout.astro';
import Example from '../../components/Example.astro';
import {
  BasicShapesDemo,
  AllShapesDemo,
  HalfMasksDemo,
} from '../../components/MaskDemo';
import MaskDemoSource from '../../components/MaskDemo.tsx?raw';

const api = [
  { property: 'shape', description: 'Shape of the mask', type: "'squircle' | 'heart' | 'hexagon' | 'hexagon-2' | 'decagon' | 'pentagon' | 'diamond' | 'square' | 'circle' | 'star' | 'star-2' | 'triangle' | 'triangle-2' | 'triangle-3' | 'triangle-4'", default: '-' },
  { property: 'half', description: 'Show only half of the mask', type: "'half-1' | 'half-2'", default: '-' },
  { property: 'children', description: 'Content to mask (typically an image)', type: 'React.ReactNode', default: '-' },
  { property: 'className', description: 'Additional CSS classes', type: 'string', default: '-' },
];
---

<ComponentLayout
  name="Mask"
  description="Apply CSS masks to crop content into various shapes."
  api={api}
>
  <Example title="Basic Shapes" description="Apply different mask shapes to images." source={MaskDemoSource} fn="BasicShapesDemo">
    <BasicShapesDemo client:load slot="demo" />
  </Example>

  <Example title="All Shapes" description="All 15 available mask shapes." source={MaskDemoSource} fn="AllShapesDemo">
    <AllShapesDemo client:load slot="demo" />
  </Example>

  <Example title="Half Masks" description="Show only half of the masked content." source={MaskDemoSource} fn="HalfMasksDemo">
    <HalfMasksDemo client:load slot="demo" />
  </Example>

  <section slot="accessibility" class="mb-8">
    <h2 class="text-2xl font-bold mb-4">Accessibility</h2>
    <ul class="list-disc list-inside space-y-2 text-base-content/80">
      <li>Uses semantic div element</li>
      <li>Ensure masked images have appropriate alt text</li>
      <li>Passes through HTML attributes to the container</li>
    </ul>
  </section>
</ComponentLayout>
