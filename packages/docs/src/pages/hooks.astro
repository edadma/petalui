---
import Layout from '../layouts/Layout.astro';
import { Code } from 'astro:components';

const hooks = [
  {
    name: 'useDisclosure',
    description: 'Manages open/close state for modals, drawers, dropdowns, and other toggleable UI.',
    code: `import { useDisclosure, Modal, Button } from 'asterui'

const App: React.FC = () => {
  const { isOpen, onOpen, onClose, onToggle } = useDisclosure()

  return (
    <>
      <Button onClick={onOpen}>Open Modal</Button>
      <Modal open={isOpen} onClose={onClose} title="Example">
        Modal content here
      </Modal>
    </>
  )
}`,
    returnValue: [
      { name: 'isOpen', type: 'boolean', description: 'Current open state' },
      { name: 'onOpen', type: '() => void', description: 'Function to open' },
      { name: 'onClose', type: '() => void', description: 'Function to close' },
      { name: 'onToggle', type: '() => void', description: 'Function to toggle' },
      { name: 'setIsOpen', type: '(value: boolean) => void', description: 'Direct state setter' },
    ],
  },
  {
    name: 'useClipboard',
    description: 'Copy text to clipboard with success/error feedback.',
    code: `import { useClipboard, Button, Input } from 'asterui'

const App: React.FC = () => {
  const { copy, copied, error } = useClipboard({ timeout: 2000 })

  return (
    <div className="flex gap-2">
      <Input value="Text to copy" readOnly />
      <Button onClick={() => copy('Text to copy')}>
        {copied ? 'Copied!' : 'Copy'}
      </Button>
    </div>
  )
}`,
    returnValue: [
      { name: 'copy', type: '(text: string) => Promise<void>', description: 'Function to copy text' },
      { name: 'copied', type: 'boolean', description: 'True after successful copy (resets after timeout)' },
      { name: 'error', type: 'Error | null', description: 'Error if copy failed' },
    ],
  },
  {
    name: 'useLocalStorage',
    description: 'useState that persists to localStorage and syncs across browser tabs.',
    code: `import { useLocalStorage } from 'asterui'

const App: React.FC = () => {
  const [theme, setTheme] = useLocalStorage('theme', 'light')

  return (
    <button onClick={() => setTheme(theme === 'light' ? 'dark' : 'light')}>
      Current: {theme}
    </button>
  )
}`,
    returnValue: [
      { name: 'value', type: 'T', description: 'Current stored value' },
      { name: 'setValue', type: '(value: T) => void', description: 'Update value (syncs to localStorage)' },
    ],
  },
  {
    name: 'useDebounce',
    description: 'Delays updating a value until after a specified delay. Useful for search inputs.',
    code: `import { useState, useEffect } from 'react'
import { useDebounce, Input } from 'asterui'

const App: React.FC = () => {
  const [search, setSearch] = useState('')
  const debouncedSearch = useDebounce(search, 300)

  useEffect(() => {
    if (debouncedSearch) {
      console.log('Search:', debouncedSearch)
    }
  }, [debouncedSearch])

  return <Input value={search} onChange={(e) => setSearch(e.target.value)} />
}`,
    returnValue: [
      { name: 'debouncedValue', type: 'T', description: 'Value after debounce delay' },
    ],
  },
  {
    name: 'useClickOutside',
    description: 'Detects clicks outside a referenced element. Useful for closing dropdowns/modals.',
    code: `import { useRef } from 'react'
import { useClickOutside, useDisclosure } from 'asterui'

const App: React.FC = () => {
  const ref = useRef<HTMLDivElement>(null)
  const { isOpen, onClose, onToggle } = useDisclosure()

  useClickOutside(ref, onClose)

  return (
    <div>
      <button onClick={onToggle}>Toggle Dropdown</button>
      {isOpen && (
        <div ref={ref} className="dropdown-content">
          Click outside to close
        </div>
      )}
    </div>
  )
}`,
    returnValue: [],
  },
  {
    name: 'usePrevious',
    description: 'Returns the value from the previous render. Useful for comparing changes.',
    code: `import { useState } from 'react'
import { usePrevious } from 'asterui'

const App: React.FC = () => {
  const [count, setCount] = useState(0)
  const prevCount = usePrevious(count)

  return (
    <div>
      <p>Current: {count}, Previous: {prevCount ?? 'N/A'}</p>
      <button onClick={() => setCount(c => c + 1)}>Increment</button>
    </div>
  )
}`,
    returnValue: [
      { name: 'previousValue', type: 'T | undefined', description: 'Value from previous render' },
    ],
  },
  {
    name: 'useHover',
    description: 'Tracks hover state of an element.',
    code: `import { useHover } from 'asterui'

const App: React.FC = () => {
  const { ref, isHovered } = useHover<HTMLDivElement>()

  return (
    <div
      ref={ref}
      className={isHovered ? 'bg-primary text-primary-content' : 'bg-base-200'}
    >
      {isHovered ? 'Hovering!' : 'Hover me'}
    </div>
  )
}`,
    returnValue: [
      { name: 'ref', type: 'RefObject<T>', description: 'Ref to attach to target element' },
      { name: 'isHovered', type: 'boolean', description: 'Whether element is being hovered' },
    ],
  },
  {
    name: 'useKeyPress',
    description: 'Detects when a specific key is pressed.',
    code: `import { useKeyPress, useKeyPressCallback, useDisclosure } from 'asterui'

const App: React.FC = () => {
  const escapePressed = useKeyPress('Escape')
  const enterPressed = useKeyPress('Enter')
  const { isOpen, onClose } = useDisclosure(true)

  // Alternative: callback-based
  useKeyPressCallback('Escape', onClose)

  return (
    <div>
      <p>Escape: {escapePressed ? 'Pressed' : 'Released'}</p>
      <p>Enter: {enterPressed ? 'Pressed' : 'Released'}</p>
    </div>
  )
}`,
    returnValue: [
      { name: 'isPressed', type: 'boolean', description: 'Whether key is currently pressed' },
    ],
  },
  {
    name: 'useWindowSize',
    description: 'Tracks window dimensions, updating on resize.',
    code: `import { useWindowSize } from 'asterui'

const App: React.FC = () => {
  const { width, height } = useWindowSize()

  return (
    <div>
      Window: {width} x {height}
      {width < 768 && <p>Mobile view</p>}
    </div>
  )
}`,
    returnValue: [
      { name: 'width', type: 'number', description: 'Current window width in pixels' },
      { name: 'height', type: 'number', description: 'Current window height in pixels' },
    ],
  },
];
---

<Layout title="Hooks - AsterUI">
  <div>
    <div class="mb-8">
      <nav class="text-sm breadcrumbs mb-4">
        <ul>
          <li><a href="/">Home</a></li>
          <li>Hooks</li>
        </ul>
      </nav>
      <h1 class="text-4xl font-bold mb-2">Hooks</h1>
      <p class="text-base-content/70 text-lg">Utility hooks for common UI patterns and state management.</p>
    </div>

    <section class="mb-8">
      <h2 class="text-2xl font-bold mb-4">Import</h2>
      <div class="border border-base-300 rounded-lg overflow-hidden [&_pre]:!m-0 [&_pre]:!rounded-none">
        <Code code="import { useDisclosure, useClipboard, useLocalStorage, useDebounce, useClickOutside, usePrevious, useHover, useKeyPress, useKeyPressCallback, useWindowSize } from 'asterui'" lang="tsx" themes={{ light: 'github-light', dark: 'github-dark' }} defaultColor={false} />
      </div>
    </section>

    <section class="space-y-12">
      {hooks.map((hook) => (
        <div id={hook.name.toLowerCase()} class="scroll-mt-20">
          <h2 class="text-2xl font-bold mb-2">{hook.name}</h2>
          <p class="text-base-content/70 mb-4">{hook.description}</p>

          <div class="border border-base-300 rounded-lg overflow-hidden mb-4">
            <div class="relative">
              <button class="copy-btn absolute top-2 right-2 btn btn-xs btn-ghost z-10" data-code={hook.code}>
                <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
                </svg>
              </button>
              <div class="[&_pre]:!p-4 [&_pre]:!rounded-none [&_pre]:!m-0 text-sm">
                <Code code={hook.code} lang="tsx" themes={{ light: 'github-light', dark: 'github-dark' }} defaultColor={false} />
              </div>
            </div>
          </div>

          {hook.returnValue.length > 0 && (
            <div class="overflow-x-auto">
              <table class="table table-sm">
                <thead>
                  <tr>
                    <th>Property</th>
                    <th>Type</th>
                    <th>Description</th>
                  </tr>
                </thead>
                <tbody>
                  {hook.returnValue.map((prop) => (
                    <tr>
                      <td><code class="text-primary">{prop.name}</code></td>
                      <td><code class="text-xs bg-base-200 px-1 rounded">{prop.type}</code></td>
                      <td class="text-base-content/70">{prop.description}</td>
                    </tr>
                  ))}
                </tbody>
              </table>
            </div>
          )}
        </div>
      ))}
    </section>

    <section class="mt-12 mb-8">
      <h2 class="text-2xl font-bold mb-4">See Also</h2>
      <ul class="list-disc list-inside space-y-2 text-base-content/80">
        <li><a href="/components/responsive" class="link">useBreakpoint</a> - Responsive breakpoint detection hook</li>
      </ul>
    </section>
  </div>
</Layout>

<script>
  document.querySelectorAll('.copy-btn').forEach(btn => {
    btn.addEventListener('click', async () => {
      const code = btn.getAttribute('data-code');
      if (code) {
        await navigator.clipboard.writeText(code);
        btn.classList.add('btn-success');
        setTimeout(() => btn.classList.remove('btn-success'), 1000);
      }
    });
  });
</script>
