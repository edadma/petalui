---
import '../styles/global.css';
import fs from 'node:fs';
import path from 'node:path';
import { siNpm, siGithub } from 'simple-icons';

const pkgPath = path.join(process.cwd(), 'node_modules/asterui/package.json');
const { version } = JSON.parse(fs.readFileSync(pkgPath, 'utf-8'));

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'AsterUI - Free open source React component library built on DaisyUI v5 and Tailwind CSS v4' } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, 'https://asterui.com');
const ogImage = 'https://asterui.com/logo.png';
const currentPath = Astro.url.pathname;

// Navigation structure
const navigation = [
  {
    title: 'Start Here',
    items: [
      { label: 'Getting Started', href: '/getting-started' },
      { label: 'Manual Setup', href: '/manual-setup' },
    ],
  },
  {
    title: 'Components',
    groups: [
      {
        title: 'Actions',
        items: [
          { label: 'Button', href: '/components/button' },
          { label: 'CopyButton', href: '/components/copybutton' },
          { label: 'FloatButton', href: '/components/floatbutton' },
        ],
      },
      {
        title: 'Data Display',
        items: [
          { label: 'Avatar', href: '/components/avatar' },
          { label: 'Badge', href: '/components/badge' },
          { label: 'Card', href: '/components/card' },
          { label: 'Carousel', href: '/components/carousel' },
          { label: 'Collapse', href: '/components/collapse' },
          { label: 'Descriptions', href: '/components/descriptions' },
          { label: 'Empty', href: '/components/empty' },
          { label: 'Image', href: '/components/image' },
          { label: 'List', href: '/components/list' },
          { label: 'Stat', href: '/components/stat' },
          { label: 'Table', href: '/components/table' },
          { label: 'Tag', href: '/components/tag' },
          { label: 'Timeline', href: '/components/timeline' },
          { label: 'Tooltip', href: '/components/tooltip' },
          { label: 'Tree', href: '/components/tree' },
        ],
      },
      {
        title: 'Data Entry',
        items: [
          { label: 'Autocomplete', href: '/components/autocomplete' },
          { label: 'Cascader', href: '/components/cascader' },
          { label: 'Checkbox', href: '/components/checkbox' },
          { label: 'ColorPicker', href: '/components/colorpicker' },
          { label: 'DatePicker', href: '/components/datepicker' },
          { label: 'FileInput', href: '/components/fileinput' },
          { label: 'Form', href: '/components/form' },
          { label: 'Input', href: '/components/input' },
          { label: 'InputNumber', href: '/components/inputnumber' },
          { label: 'Mention', href: '/components/mention' },
          { label: 'OTPInput', href: '/components/otpinput' },
          { label: 'Radio', href: '/components/radio' },
          { label: 'Range', href: '/components/range' },
          { label: 'Rating', href: '/components/rating' },
          { label: 'Select', href: '/components/select' },
          { label: 'Textarea', href: '/components/textarea' },
          { label: 'TimePicker', href: '/components/timepicker' },
          { label: 'Toggle', href: '/components/toggle' },
          { label: 'Transfer', href: '/components/transfer' },
          { label: 'TreeSelect', href: '/components/treeselect' },
          { label: 'Upload', href: '/components/upload' },
        ],
      },
      {
        title: 'Feedback',
        items: [
          { label: 'Alert', href: '/components/alert' },
          { label: 'Drawer', href: '/components/drawer' },
          { label: 'Loading', href: '/components/loading' },
          { label: 'Modal', href: '/components/modal' },
          { label: 'Notification', href: '/components/notification' },
          { label: 'Popconfirm', href: '/components/popconfirm' },
          { label: 'Progress', href: '/components/progress' },
          { label: 'Result', href: '/components/result' },
          { label: 'Skeleton', href: '/components/skeleton' },
        ],
      },
      {
        title: 'Navigation',
        items: [
          { label: 'Anchor', href: '/components/anchor' },
          { label: 'Breadcrumb', href: '/components/breadcrumb' },
          { label: 'Dropdown', href: '/components/dropdown' },
          { label: 'Menu', href: '/components/menu' },
          { label: 'Navbar', href: '/components/navbar' },
          { label: 'Pagination', href: '/components/pagination' },
          { label: 'Steps', href: '/components/steps' },
          { label: 'Tabs', href: '/components/tabs' },
        ],
      },
      {
        title: 'Layout',
        items: [
          { label: 'Container', href: '/components/container' },
          { label: 'Divider', href: '/components/divider' },
          { label: 'Flex', href: '/components/flex' },
          { label: 'Grid', href: '/components/grid' },
          { label: 'Space', href: '/components/space' },
          { label: 'Splitter', href: '/components/splitter' },
        ],
      },
      {
        title: 'Other',
        items: [
          { label: 'Affix', href: '/components/affix' },
          { label: 'Chart', href: '/components/chart' },
          { label: 'Code', href: '/components/code' },
          { label: 'QRCode', href: '/components/qrcode' },
          { label: 'Tour', href: '/components/tour' },
          { label: 'Watermark', href: '/components/watermark' },
        ],
      },
    ],
  },
];

function isActive(href: string): boolean {
  return currentPath === href || currentPath === href + '/';
}

function hasActiveChild(items: { href: string }[]): boolean {
  return items.some(item => isActive(item.href));
}
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <meta name="keywords" content="AsterUI, Aster UI, React components, DaisyUI, DaisyUI v5, DaisyUI React, React DaisyUI, DaisyUI component library, React components for DaisyUI, Tailwind CSS v4, Tailwind React, TypeScript UI library, open source component library, React form validation, React modal, React table" />

    <link rel="canonical" href={canonicalURL} />

    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="AsterUI" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:image" content={ogImage} />

    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />

    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="icon" type="image/png" sizes="256x256" href="/logo.png" />
    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-base-100 text-base-content">
    <!-- Header -->
    <header class="sticky top-0 z-50 navbar bg-base-200/95 backdrop-blur border-b border-base-300 px-4">
      <div class="navbar-start gap-2">
        <!-- Mobile menu button -->
        <label for="sidebar-drawer" class="btn btn-ghost btn-square lg:hidden">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </label>
        <a href="/" class="btn btn-ghost text-xl gap-2">
          <img src="/logo.png" alt="AsterUI" class="h-8 w-8" />
          <span class="font-semibold">AsterUI</span>
        </a>
        <span class="badge badge-ghost text-xs">v{version}</span>
      </div>

      <div class="navbar-center hidden lg:flex">
        <!-- Search -->
        <button class="btn btn-ghost gap-2 px-3 h-9 min-h-0 bg-base-300/50 hover:bg-base-300" id="search-button">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 opacity-70" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
          </svg>
          <span class="text-sm opacity-70">Search...</span>
          <kbd class="kbd kbd-sm">âŒ˜K</kbd>
        </button>
      </div>

      <div class="navbar-end">
        <nav class="flex gap-1 items-center">
          <a href="https://github.com/edadma/asterui" class="btn btn-ghost btn-sm btn-square" aria-label="GitHub">
            <svg class="h-5 w-5" viewBox="0 0 24 24" fill="currentColor">
              <path d={siGithub.path}/>
            </svg>
          </a>
          <a href="https://www.npmjs.com/package/asterui" class="btn btn-ghost btn-sm btn-square" aria-label="npm">
            <svg class="h-5 w-5" viewBox="0 0 24 24" fill="currentColor">
              <path d={siNpm.path}/>
            </svg>
          </a>
          <div class="divider divider-horizontal mx-1 h-6 self-center"></div>
          <label class="swap swap-rotate btn btn-ghost btn-sm btn-square">
            <input type="checkbox" id="theme-toggle" value="light" />
            <svg class="swap-off h-5 w-5 fill-current" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
              <path d="M5.64,17l-.71.71a1,1,0,0,0,0,1.41,1,1,0,0,0,1.41,0l.71-.71A1,1,0,0,0,5.64,17ZM5,12a1,1,0,0,0-1-1H3a1,1,0,0,0,0,2H4A1,1,0,0,0,5,12Zm7-7a1,1,0,0,0,1-1V3a1,1,0,0,0-2,0V4A1,1,0,0,0,12,5ZM5.64,7.05a1,1,0,0,0,.7.29,1,1,0,0,0,.71-.29,1,1,0,0,0,0-1.41l-.71-.71A1,1,0,0,0,4.93,6.34Zm12,.29a1,1,0,0,0,.7-.29l.71-.71a1,1,0,1,0-1.41-1.41L17,5.64a1,1,0,0,0,0,1.41A1,1,0,0,0,17.66,7.34ZM21,11H20a1,1,0,0,0,0,2h1a1,1,0,0,0,0-2Zm-9,8a1,1,0,0,0-1,1v1a1,1,0,0,0,2,0V20A1,1,0,0,0,12,19ZM18.36,17A1,1,0,0,0,17,18.36l.71.71a1,1,0,0,0,1.41,0,1,1,0,0,0,0-1.41ZM12,6.5A5.5,5.5,0,1,0,17.5,12,5.51,5.51,0,0,0,12,6.5Zm0,9A3.5,3.5,0,1,1,15.5,12,3.5,3.5,0,0,1,12,15.5Z"/>
            </svg>
            <svg class="swap-on h-5 w-5 fill-current" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
              <path d="M21.64,13a1,1,0,0,0-1.05-.14,8.05,8.05,0,0,1-3.37.73A8.15,8.15,0,0,1,9.08,5.49a8.59,8.59,0,0,1,.25-2A1,1,0,0,0,8,2.36,10.14,10.14,0,1,0,22,14.05,1,1,0,0,0,21.64,13Zm-9.5,6.69A8.14,8.14,0,0,1,7.08,5.22v.27A10.15,10.15,0,0,0,17.22,15.63a9.79,9.79,0,0,0,2.1-.22A8.11,8.11,0,0,1,12.14,19.73Z"/>
            </svg>
          </label>
        </nav>
      </div>
    </header>

    <!-- Mobile drawer -->
    <input type="checkbox" id="sidebar-drawer" class="drawer-toggle hidden" />
    <div class="drawer-overlay fixed inset-0 bg-black/50 z-40 hidden" id="drawer-overlay"></div>
    <aside id="mobile-sidebar" class="fixed top-16 left-0 w-64 h-[calc(100vh-4rem)] bg-base-200 border-r border-base-300 overflow-y-auto z-50 -translate-x-full transition-transform lg:hidden">
      <nav class="px-4 py-4 space-y-6">
        {navigation.map((section) => (
          <div>
            <h2 class="text-xs font-semibold uppercase tracking-wider text-base-content/60 mb-2 px-2">
              {section.title}
            </h2>

            {section.items && (
              <ul class="space-y-1">
                {section.items.map((item) => (
                  <li>
                    <a
                      href={item.href}
                      class:list={[
                        'block px-2 py-1.5 rounded-md text-sm transition-colors',
                        isActive(item.href)
                          ? 'bg-primary/10 text-primary font-medium'
                          : 'hover:bg-base-300 text-base-content/80 hover:text-base-content'
                      ]}
                    >
                      {item.label}
                    </a>
                  </li>
                ))}
              </ul>
            )}

            {section.groups && section.groups.map((group) => (
              <details class="group mb-2" open={hasActiveChild(group.items)}>
                <summary class="flex items-center justify-between px-2 py-1.5 rounded-md text-sm cursor-pointer hover:bg-base-300 text-base-content/80 hover:text-base-content list-none">
                  <span>{group.title}</span>
                  <svg class="h-4 w-4 transition-transform group-open:rotate-90" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                </summary>
                <ul class="mt-1 ml-2 pl-2 border-l border-base-300 space-y-1">
                  {group.items.map((item) => (
                    <li>
                      <a
                        href={item.href}
                        class:list={[
                          'block px-2 py-1 rounded-md text-sm transition-colors',
                          isActive(item.href)
                            ? 'bg-primary/10 text-primary font-medium'
                            : 'hover:bg-base-300 text-base-content/70 hover:text-base-content'
                        ]}
                      >
                        {item.label}
                      </a>
                    </li>
                  ))}
                </ul>
              </details>
            ))}
          </div>
        ))}
      </nav>
    </aside>

    <!-- Desktop sidebar - fixed -->
    <aside class="hidden lg:block fixed top-16 left-0 w-64 h-[calc(100vh-4rem)] bg-base-200 border-r border-base-300 overflow-y-auto">
      <nav class="px-4 py-4 space-y-6">
        {navigation.map((section) => (
          <div>
            <h2 class="text-xs font-semibold uppercase tracking-wider text-base-content/60 mb-2 px-2">
              {section.title}
            </h2>

            {section.items && (
              <ul class="space-y-1">
                {section.items.map((item) => (
                  <li>
                    <a
                      href={item.href}
                      class:list={[
                        'block px-2 py-1.5 rounded-md text-sm transition-colors',
                        isActive(item.href)
                          ? 'bg-primary/10 text-primary font-medium'
                          : 'hover:bg-base-300 text-base-content/80 hover:text-base-content'
                      ]}
                    >
                      {item.label}
                    </a>
                  </li>
                ))}
              </ul>
            )}

            {section.groups && section.groups.map((group) => (
              <details class="group mb-2" open={hasActiveChild(group.items)}>
                <summary class="flex items-center justify-between px-2 py-1.5 rounded-md text-sm cursor-pointer hover:bg-base-300 text-base-content/80 hover:text-base-content list-none">
                  <span>{group.title}</span>
                  <svg class="h-4 w-4 transition-transform group-open:rotate-90" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                </summary>
                <ul class="mt-1 ml-2 pl-2 border-l border-base-300 space-y-1">
                  {group.items.map((item) => (
                    <li>
                      <a
                        href={item.href}
                        class:list={[
                          'block px-2 py-1 rounded-md text-sm transition-colors',
                          isActive(item.href)
                            ? 'bg-primary/10 text-primary font-medium'
                            : 'hover:bg-base-300 text-base-content/70 hover:text-base-content'
                        ]}
                      >
                        {item.label}
                      </a>
                    </li>
                  ))}
                </ul>
              </details>
            ))}
          </div>
        ))}
      </nav>
    </aside>

    <!-- Main content -->
    <main class="lg:ml-64 min-h-[calc(100vh-4rem)] p-4 lg:p-6 max-w-none">
      <slot />
    </main>

    <script>
      // Theme toggle
      const themeToggle = document.getElementById('theme-toggle') as HTMLInputElement;

      const savedTheme = localStorage.getItem('theme');
      if (savedTheme) {
        document.documentElement.setAttribute('data-theme', savedTheme);
        themeToggle.checked = savedTheme === 'light';
      }

      themeToggle?.addEventListener('change', (e) => {
        const target = e.target as HTMLInputElement;
        const newTheme = target.checked ? 'light' : 'dark';
        document.documentElement.setAttribute('data-theme', newTheme);
        localStorage.setItem('theme', newTheme);
      });

      // Mobile drawer toggle
      const drawerToggle = document.getElementById('sidebar-drawer') as HTMLInputElement;
      const mobileSidebar = document.getElementById('mobile-sidebar');
      const drawerOverlay = document.getElementById('drawer-overlay');

      function openMobileDrawer() {
        mobileSidebar?.classList.remove('-translate-x-full');
        drawerOverlay?.classList.remove('hidden');
      }

      function closeMobileDrawer() {
        mobileSidebar?.classList.add('-translate-x-full');
        drawerOverlay?.classList.add('hidden');
      }

      // Toggle button in header
      document.querySelector('label[for="sidebar-drawer"]')?.addEventListener('click', (e) => {
        e.preventDefault();
        if (mobileSidebar?.classList.contains('-translate-x-full')) {
          openMobileDrawer();
        } else {
          closeMobileDrawer();
        }
      });

      // Close on overlay click
      drawerOverlay?.addEventListener('click', closeMobileDrawer);

      // Close mobile drawer when clicking a link
      mobileSidebar?.querySelectorAll('a').forEach(link => {
        link.addEventListener('click', closeMobileDrawer);
      });
    </script>
  </body>
</html>
