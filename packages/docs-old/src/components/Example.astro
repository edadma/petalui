---
import { Code } from 'astro:components'
import { Copy, Check } from 'lucide-astro'

interface Props {
  title: string
  description?: string
  source?: string
  fn?: string
}

const { title, description, source, fn } = Astro.props

// Extract example code using directive comments:
//
// // @example-imports: { Component } from 'asterui'
// // @example-imports: { useState } from 'react'
//
// export function MyDemo() {
//   // @example-include
//   const items = [...]
//   // @example-include-end
//
//   return (
//     <Demo>
//       {/* @example-return */}
//       <Component items={items} />
//       {/* @example-return-end */}
//     </Demo>
//   )
// }

function dedent(code: string): string {
  const lines = code.split('\n')
  const nonEmptyLines = lines.filter(l => l.trim())
  if (nonEmptyLines.length === 0) return code
  const minIndent = nonEmptyLines.reduce((min, l) => {
    const indent = l.match(/^\s*/)?.[0].length ?? 0
    return Math.min(min, indent)
  }, Infinity)
  return lines.map(l => l.slice(minIndent)).join('\n').trim()
}

let extractedCode = ''
if (source && fn) {
  // Find the function in source
  const fnRegex = new RegExp(`((?:\\/\\/ @example-imports:[^\\n]*\\n)*)export function ${fn}\\s*\\([^)]*\\)\\s*\\{([\\s\\S]*?)\\n\\}(?=\\s*(?:export|$))`, 'm')
  const fnMatch = source.match(fnRegex)

  if (fnMatch) {
    const importsBlock = fnMatch[1] || ''
    const fnBody = fnMatch[2]

    // Extract @example-imports directives
    const imports = importsBlock
      .split('\n')
      .filter(line => line.startsWith('// @example-imports:'))
      .map(line => `import ${line.replace('// @example-imports:', '').trim()}`)
      .join('\n')

    // Extract @example-include blocks
    const includeRegex = /\/\/ @example-include\n([\s\S]*?)\/\/ @example-include-end/g
    const includeBlocks: string[] = []
    let includeMatch
    while ((includeMatch = includeRegex.exec(fnBody)) !== null) {
      includeBlocks.push(dedent(includeMatch[1]))
    }
    const includeCode = includeBlocks.join('\n\n')

    // Extract @example-return block
    const returnRegex = /\{\/\* @example-return \*\/\}([\s\S]*?)\{\/\* @example-return-end \*\/\}/
    const returnMatch = fnBody.match(returnRegex)

    if (returnMatch) {
      const returnJsx = dedent(returnMatch[1])

      // Build the example code
      let body = ''
      if (includeCode) {
        body += includeCode + '\n\n'
      }

      const indentedJsx = returnJsx.split('\n').map(l => l ? '    ' + l : l).join('\n')
      body += `return (\n${indentedJsx}\n  )`

      extractedCode = `${imports}${imports ? '\n\n' : ''}function App() {
  ${body.split('\n').join('\n  ')}
}

export default App`
    }
  }
}
---

<div class="example-card">
  <div class="example-header">
    <div class="example-title">
      <h3>{title}</h3>
      {description && <p class="example-description">{description}</p>}
    </div>
    <button class="toggle-code" aria-label="Toggle code">
      <span>&lt;/&gt;</span>
    </button>
  </div>
  <slot name="demo" />
  <div class="example-code">
    {extractedCode && (
      <button class="copy-btn" aria-label="Copy code" data-code={extractedCode}>
        <span class="copy-icon"><Copy size={16} /></span>
        <span class="check-icon"><Check size={16} /></span>
      </button>
    )}
    {extractedCode ? (
      <Code code={extractedCode} lang="tsx" theme="css-variables" />
    ) : (
      <slot name="code" />
    )}
  </div>
</div>

<style is:global>
  .example-card {
    break-inside: avoid;
    margin-bottom: 1.5rem;
    border: 1px solid var(--sl-color-gray-5);
    border-radius: 0.5rem;
  }

  .example-card > astro-island > div {
    margin: 0 !important;
  }

  .example-card > astro-island > div > .demo-area {
    padding: 1rem;
  }

  .example-card > .example-code {
    margin: 0 !important;
  }

  .example-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.5rem 0.75rem;
    border-bottom: 1px solid var(--sl-color-gray-5);
    background: var(--sl-color-gray-6);
  }

  .example-title {
    display: flex;
    flex-direction: column;
    gap: 0.125rem;
  }

  .example-header h3 {
    margin: 0;
    font-size: 0.875rem;
    font-weight: 600;
  }

  .example-description {
    margin: 0;
    font-size: 0.875rem;
    color: var(--sl-color-gray-2);
  }

  .toggle-code {
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.25rem 0.5rem;
    font-family: monospace;
    font-size: 0.875rem;
    color: var(--sl-color-gray-2);
    border-radius: 0.25rem;
  }

  .toggle-code:hover {
    background: var(--sl-color-gray-5);
  }

  .example-code {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.3s ease-out;
  }

  .example-card.open .example-code {
    max-height: 1000px;
  }

  .example-code {
    position: relative;
  }

  .copy-btn {
    position: absolute;
    top: 0.5rem;
    right: 0.5rem;
    width: 28px;
    height: 28px;
    background: var(--sl-color-gray-5);
    border: none;
    cursor: pointer;
    border-radius: 0.25rem;
    color: var(--sl-color-gray-2);
    z-index: 10;
  }

  .copy-btn svg {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }

  .copy-btn:hover {
    background: var(--sl-color-gray-4);
    color: var(--sl-color-white);
  }

  .copy-btn.copied {
    color: #22c55e;
  }

  .copy-btn .check-icon {
    display: none;
  }

  .copy-btn.copied .copy-icon {
    display: none;
  }

  .copy-btn.copied .check-icon {
    display: block;
  }

  .example-code .expressive-code,
  .example-code .astro-code,
  .example-code pre.astro-code {
    margin: 0 !important;
    border-radius: 0;
  }

  .example-code pre {
    border-radius: 0;
  }

  /* Syntax highlighting - light theme (default) */
  .example-code {
    --astro-code-background: #f6f8fa;
    --astro-code-foreground: #24292e;
    --astro-code-token-constant: #005cc5;
    --astro-code-token-string: #032f62;
    --astro-code-token-comment: #6a737d;
    --astro-code-token-keyword: #d73a49;
    --astro-code-token-parameter: #24292e;
    --astro-code-token-function: #6f42c1;
    --astro-code-token-string-expression: #22863a;
    --astro-code-token-punctuation: #24292e;
    --astro-code-token-link: #005cc5;
  }

  /* Syntax highlighting - dark theme */
  :root[data-theme="dark"] .example-code {
    --astro-code-background: #161b22;
    --astro-code-foreground: #c9d1d9;
    --astro-code-token-constant: #79c0ff;
    --astro-code-token-string: #a5d6ff;
    --astro-code-token-comment: #8b949e;
    --astro-code-token-keyword: #ff7b72;
    --astro-code-token-parameter: #c9d1d9;
    --astro-code-token-function: #d2a8ff;
    --astro-code-token-string-expression: #7ee787;
    --astro-code-token-punctuation: #c9d1d9;
    --astro-code-token-link: #79c0ff;
  }
</style>

<script>
  document.querySelectorAll('.toggle-code').forEach(btn => {
    btn.addEventListener('click', () => {
      const card = btn.closest('.example-card')
      card?.classList.toggle('open')
    })
  })

  document.querySelectorAll('.copy-btn').forEach(btn => {
    btn.addEventListener('click', async () => {
      const code = btn.getAttribute('data-code')
      if (!code) return

      try {
        await navigator.clipboard.writeText(code)
        btn.classList.add('copied')
        setTimeout(() => btn.classList.remove('copied'), 2000)
      } catch (err) {
        console.error('Failed to copy:', err)
      }
    })
  })
</script>
