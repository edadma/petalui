import Layout from '../../layouts/Layout.astro';
import ApiTable from '../../components/ApiTable.astro';
import { Code } from 'astro:components';

const popoverApi = [
  { property: 'children', description: 'Trigger element', type: 'React.ReactNode', default: '-' },
  { property: 'content', description: 'Content of the popover', type: 'React.ReactNode', default: '-' },
  { property: 'title', description: 'Title of the popover', type: 'React.ReactNode', default: '-' },
  { property: 'trigger', description: 'How the popover is triggered', type: "'hover' | 'click' | 'focus'", default: "'hover'" },
  { property: 'placement', description: 'Position of the popover', type: "'top' | 'topLeft' | 'topRight' | 'bottom' | 'bottomLeft' | 'bottomRight' | 'left' | 'leftTop' | 'leftBottom' | 'right' | 'rightTop' | 'rightBottom'", default: "'top'" },
  { property: 'open', description: 'Whether popover is visible (controlled mode)', type: 'boolean', default: '-' },
  { property: 'onOpenChange', description: 'Callback when visibility changes', type: '(open: boolean) => void', default: '-' },
  { property: 'className', description: 'Additional CSS classes for wrapper', type: 'string', default: '-' },
  { property: 'overlayClassName', description: 'Additional CSS classes for popover overlay', type: 'string', default: '-' },
];

const examples = [
  {
    id: 'basic',
    title: 'Basic Usage',
    description: 'Simple popover triggered on hover.',
    code: `import React from 'react'
import { Popover, Button } from 'asterui'

const App: React.FC = () => (
  <Popover content="This is a simple popover">
    <Button>Hover me</Button>
  </Popover>
)

export default App`,
  },
  {
    id: 'title',
    title: 'With Title',
    description: 'Popover with a title and content.',
    code: `import React from 'react'
import { Popover, Button } from 'asterui'

const App: React.FC = () => (
  <Popover
    title="User Information"
    content="Additional details about the user and their account settings."
  >
    <Button>Hover me</Button>
  </Popover>
)

export default App`,
  },
  {
    id: 'triggers',
    title: 'Trigger Types',
    description: 'Different trigger modes for the popover.',
    code: `import React from 'react'
import { Popover, Button } from 'asterui'

const App: React.FC = () => (
  <div className="flex gap-4">
    <Popover trigger="hover" content="Triggered by hovering">
      <Button>Hover</Button>
    </Popover>
    <Popover trigger="click" content="Triggered by clicking">
      <Button>Click</Button>
    </Popover>
    <Popover trigger="focus" content="Triggered by focusing">
      <Button>Focus</Button>
    </Popover>
  </div>
)

export default App`,
  },
  {
    id: 'placement-top',
    title: 'Placement - Top',
    description: 'Top placement variations.',
    code: `import React from 'react'
import { Popover, Button } from 'asterui'

const App: React.FC = () => (
  <div className="flex gap-4 justify-center">
    <Popover placement="top" content="Top placement">
