---
import Layout from '../../layouts/Layout.astro';
import ApiTable from '../../components/ApiTable.astro';
import { Code } from 'astro:components';

const virtualListApi = [
  {
    property: 'items',
    description: 'Array of items to render',
    type: 'T[]',
    default: '-',
  },
  {
    property: 'height',
    description: 'Height of the scrollable container',
    type: 'number | string',
    default: '-',
  },
  {
    property: 'itemHeight',
    description: 'Fixed height, or function returning estimated height per item for variable heights',
    type: 'number | ((item: T, index: number) => number)',
    default: '-',
  },
  {
    property: 'renderItem',
    description: 'Render function for each item',
    type: '(item: T, index: number) => ReactNode',
    default: '-',
  },
  {
    property: 'overscan',
    description: 'Number of items to render outside visible area',
    type: 'number',
    default: '5',
  },
  {
    property: 'gap',
    description: 'Gap between items in pixels',
    type: 'number',
    default: '0',
  },
  {
    property: 'width',
    description: 'Width of the container',
    type: 'number | string',
    default: '-',
  },
  {
    property: 'className',
    description: 'Additional class for the scroll container',
    type: 'string',
    default: '-',
  },
  {
    property: 'innerClassName',
    description: 'Additional class for the inner container',
    type: 'string',
    default: '-',
  },
  {
    property: 'itemClassName',
    description: 'Additional class for each item wrapper',
    type: 'string',
    default: '-',
  },
  {
    property: 'onScroll',
    description: 'Callback when scroll position changes',
    type: '(scrollTop: number) => void',
    default: '-',
  },
];

const examples = [
  {
    id: 'basic',
    title: 'Basic Usage',
    description: 'Efficiently render a list of 10,000 items.',
    code: `import { VirtualList } from 'asterui'

const items = Array.from({ length: 10000 }, (_, i) => ({
  id: i,
  name: \`Item \${i + 1}\`
}))

export const App = () => (
  <VirtualList
    items={items}
    height={400}
    itemHeight={40}
    renderItem={(item) => (
      <div className="p-2 border-b border-base-300">
        {item.name}
      </div>
    )}
  />
)`,
  },
  {
    id: 'styled',
    title: 'Styled List',
    description: 'With card styling and hover effects.',
    code: `import { VirtualList } from 'asterui'

const users = Array.from({ length: 5000 }, (_, i) => ({
  id: i,
  name: \`User \${i + 1}\`,
  email: \`user\${i + 1}@example.com\`
}))

export const App = () => (
  <VirtualList
    items={users}
    height={300}
    itemHeight={60}
    className="border border-base-300 rounded-lg"
    renderItem={(user) => (
      <div className="p-3 hover:bg-base-200 transition-colors border-b border-base-300">
        <div className="font-medium">{user.name}</div>
        <div className="text-sm text-base-content/60">{user.email}</div>
      </div>
    )}
  />
)`,
  },
  {
    id: 'with-gap',
    title: 'With Gap',
    description: 'Spaced items with gap between them.',
    code: `import { VirtualList } from 'asterui'

const items = Array.from({ length: 1000 }, (_, i) => ({
  id: i,
  title: \`Card \${i + 1}\`,
  description: 'A brief description'
}))

export const App = () => (
  <VirtualList
    items={items}
    height={400}
    itemHeight={80}
    gap={8}
    className="p-2"
    renderItem={(item) => (
      <div className="card bg-base-200 p-4">
        <h3 className="font-bold">{item.title}</h3>
        <p className="text-sm text-base-content/70">{item.description}</p>
      </div>
    )}
  />
)`,
  },
  {
    id: 'scroll-callback',
    title: 'Scroll Callback',
    description: 'Track scroll position for infinite loading or analytics.',
    code: `import { VirtualList } from 'asterui'
import { useState } from 'react'

const items = Array.from({ length: 10000 }, (_, i) => ({ id: i }))

export const App = () => {
  const [scrollTop, setScrollTop] = useState(0)

  return (
    <div>
      <div className="mb-2 text-sm">Scroll position: {Math.round(scrollTop)}px</div>
      <VirtualList
        items={items}
        height={300}
        itemHeight={40}
        onScroll={setScrollTop}
        className="border border-base-300 rounded"
        renderItem={(item, index) => (
          <div className="p-2 border-b border-base-300">
            Row {index + 1}
          </div>
        )}
      />
    </div>
  )
}`,
  },
  {
    id: 'variable-height',
    title: 'Variable Height (Chat)',
    description: 'Chat messages with different lengths using the Chat component.',
    code: `import { VirtualList, Chat } from 'asterui'

const messages = [
  { id: 1, user: 'Alex', text: 'Hey!' },
  { id: 2, user: 'You', text: 'Hi Alex, what\\'s up?' },
  { id: 3, user: 'Alex', text: 'Not much, just wanted to check if you\\'re coming to the party on Saturday' },
  { id: 4, user: 'You', text: 'Oh yeah, I\\'ll be there! What time does it start?' },
  { id: 5, user: 'Alex', text: '8pm' },
  { id: 6, user: 'You', text: 'Cool' },
  { id: 7, user: 'Alex', text: 'Can you bring some snacks? We\\'re running low on chips and stuff.' },
  { id: 8, user: 'You', text: 'Sure thing' },
  // ... more messages
]

export const App = () => (
  <VirtualList
    items={messages}
    height={400}
    itemHeight={(msg) => 70 + Math.floor(msg.text.length / 40) * 24}
    className="bg-base-100 border border-base-300 rounded-lg p-2"
    renderItem={(msg) => (
      <Chat
        position={msg.user === 'You' ? 'end' : 'start'}
        header={msg.user}
        message={msg.text}
        color={msg.user === 'You' ? 'primary' : undefined}
      />
    )}
  />
)`,
  },
];
---

<Layout title="VirtualList - AsterUI">
  <div class="max-w-screen-xl mx-auto">
    <!-- Header -->
    <div class="mb-8">
      <nav class="text-sm breadcrumbs mb-4">
        <ul>
          <li><a href="/">Home</a></li>
          <li><a href="/components">Components</a></li>
          <li>VirtualList</li>
        </ul>
      </nav>
      <h1 class="text-4xl font-bold mb-2">VirtualList</h1>
      <p class="text-base-content/70 text-lg">
        Efficiently render large lists by only rendering visible items. Powered by @tanstack/react-virtual.
      </p>
    </div>

    <!-- Dependency Notice -->
    <section class="mb-8">
      <div class="alert alert-info">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="stroke-current shrink-0 w-6 h-6"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
        <div>
          <h3 class="font-bold">Required Dependency</h3>
          <div class="text-sm">This component requires <code class="bg-base-content/10 px-1 rounded">@tanstack/react-virtual</code> to be installed:</div>
          <div class="mt-2 font-mono text-sm bg-base-content/10 px-2 py-1 rounded">npm install @tanstack/react-virtual</div>
        </div>
      </div>
    </section>

    <!-- Import -->
    <section class="mb-8">
      <h2 class="text-2xl font-bold mb-4">Import</h2>
      <div class="border border-base-300 rounded-lg overflow-hidden [&_pre]:!m-0 [&_pre]:!rounded-none">
        <Code code="import { VirtualList } from 'asterui'" lang="tsx" themes={{ light: 'github-light', dark: 'github-dark' }} defaultColor={false} />
      </div>
    </section>

    <!-- Examples -->
    <section class="mb-12">
      <h2 class="text-2xl font-bold mb-6">Examples</h2>

      <div class="columns-1 lg:columns-2 gap-6">
        {examples.map((example) => (
          <div class="example-card mb-6 border border-base-300 rounded-lg break-inside-avoid">
            <div class="p-4 bg-base-100 rounded-t-lg">
              <h3 class="text-lg font-semibold mb-1">{example.title}</h3>
              <p class="text-sm text-base-content/70 mb-4">{example.description}</p>
              <div class="demo-container" data-example={example.id}></div>
            </div>
            <div class="border-t border-base-300 flex justify-center bg-base-200 rounded-b-lg">
              <div class="tooltip tooltip-top" data-tip="Show code">
                <button class="toggle-code btn btn-ghost btn-sm font-mono">
                  &lt;&#8201;&gt;
                </button>
              </div>
            </div>
            <div class="code-panel relative" aria-hidden="true">
              <button class="copy-btn absolute top-2 right-2 btn btn-xs btn-ghost z-10" data-code={example.code}>
                <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
                </svg>
              </button>
              <div class="[&_pre]:!p-4 [&_pre]:!rounded-none [&_pre]:!m-0 text-sm">
                <Code code={example.code} lang="tsx" themes={{ light: 'github-light', dark: 'github-dark' }} defaultColor={false} />
              </div>
            </div>
          </div>
        ))}
      </div>
    </section>

    <!-- API -->
    <section class="mb-12">
      <h2 class="text-2xl font-bold mb-6">API</h2>
      <ApiTable title="VirtualList" data={virtualListApi} />
    </section>

    <!-- Performance Tips -->
    <section class="mb-8">
      <h2 class="text-2xl font-bold mb-4">Performance Tips</h2>
      <ul class="list-disc list-inside space-y-2 text-base-content/80">
        <li>Use a fixed <code class="bg-base-content/20 px-1 rounded">itemHeight</code> when possible for best performance</li>
        <li>Memoize your <code class="bg-base-content/20 px-1 rounded">renderItem</code> function if it's expensive</li>
        <li>Increase <code class="bg-base-content/20 px-1 rounded">overscan</code> if you see flickering during fast scrolling</li>
        <li>Keep item components simple - avoid heavy computations in render</li>
      </ul>
    </section>
  </div>
</Layout>

<style>
  .code-panel {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.3s ease-out;
  }
  .example-card.open .code-panel {
    max-height: 2000px;
  }
</style>

<script>
  import '../../scripts/virtuallistDemos';

  document.querySelectorAll('.toggle-code').forEach(btn => {
    btn.addEventListener('click', () => {
      const card = btn.closest('.example-card');
      if (card) {
        card.classList.toggle('open');
        const panel = card.querySelector('.code-panel');
        const tooltip = btn.closest('.tooltip');
        if (card.classList.contains('open')) {
          panel?.setAttribute('aria-hidden', 'false');
          tooltip?.setAttribute('data-tip', 'Hide code');
        } else {
          panel?.setAttribute('aria-hidden', 'true');
          tooltip?.setAttribute('data-tip', 'Show code');
        }
      }
    });
  });
</script>
