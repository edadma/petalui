import Layout from '../../layouts/Layout.astro';
import ApiTable from '../../components/ApiTable.astro';
import { Code } from 'astro:components';

const radioGroupApi = [
  { property: 'children', description: 'Radio components', type: 'React.ReactNode', default: '-' },
  { property: 'value', description: 'Current selected value (controlled)', type: 'string | number', default: '-' },
  { property: 'defaultValue', description: 'Default selected value (uncontrolled)', type: 'string | number', default: '-' },
  { property: 'onChange', description: 'Callback when selection changes', type: '(value: string | number) => void', default: '-' },
  { property: 'name', description: 'Name for all radio inputs in the group', type: 'string', default: '-' },
  { property: 'className', description: 'Additional CSS classes', type: 'string', default: '-' },
];

const radioApi = [
  { property: 'value', description: 'Radio value (required when in Radio.Group)', type: 'string | number', default: '-' },
  { property: 'size', description: 'Radio button size', type: "'xs' | 'sm' | 'md' | 'lg' | 'xl'", default: "'md'" },
  { property: 'color', description: 'Radio button color variant', type: "'neutral' | 'primary' | 'secondary' | 'accent' | 'info' | 'success' | 'warning' | 'error'", default: '-' },
  { property: 'disabled', description: 'Disabled state', type: 'boolean', default: 'false' },
  { property: 'className', description: 'Additional CSS classes', type: 'string', default: '-' },
];

const examples = [
  {
    id: 'basic',
    title: 'Basic Usage',
    description: 'Use Radio.Group to manage radio selection.',
    code: `import React from 'react'
