export default App`,
  },
  {
    id: 'form',
    title: 'In Form',
    description: 'Radio group in a form with validation.',
    code: `import React from 'react'
import { Radio, Form, Button, Space } from 'asterui'

const App: React.FC = () => {
  const handleSubmit = (values: { plan?: string }) => {
    console.log(values)
