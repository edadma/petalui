)

const App: React.FC = () => (
  <Timeline vertical>
    <Timeline.Item
      start="2015"
      icon={<CheckIcon />}
      end="Apple Watch"
      endBox
    />
    <Timeline.Item
      start="2017"
      icon={<CheckIcon />}
      end="iPhone X"
      endBox
    />
    <Timeline.Item
      start="2020"
      icon={<CheckIcon />}
      end="Apple Silicon M1"
      endBox
    />
  </Timeline>
