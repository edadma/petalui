---
import Layout from '../../layouts/Layout.astro';
import ApiTable from '../../components/ApiTable.astro';
import { Code } from 'astro:components';

const timePickerApi = [
  { property: 'value', description: 'Controlled selected time', type: 'Date | null', default: '-' },
  { property: 'defaultValue', description: 'Default selected time (uncontrolled)', type: 'Date | null', default: '-' },
  { property: 'onChange', description: 'Callback when time is selected', type: '(date: Date | null) => void', default: '-' },
  { property: 'format', description: 'Time display format (12-hour or 24-hour)', type: "'12' | '24'", default: "'24'" },
  { property: 'placeholder', description: 'Input placeholder text', type: 'string', default: '"Select time"' },
  { property: 'disabled', description: 'Disable the time picker', type: 'boolean', default: 'false' },
  { property: 'size', description: 'Input size', type: "'xs' | 'sm' | 'md' | 'lg'", default: "'md'" },
  { property: 'showSeconds', description: 'Show seconds column in the time picker', type: 'boolean', default: 'false' },
  { property: 'allowClear', description: 'Show clear button when time is selected', type: 'boolean', default: 'true' },
  { property: 'open', description: 'Controlled open state of the dropdown', type: 'boolean', default: '-' },
  { property: 'onOpenChange', description: 'Callback when dropdown open state changes', type: '(open: boolean) => void', default: '-' },
  { property: 'hourStep', description: 'Interval between hours in the picker', type: 'number', default: '1' },
  { property: 'minuteStep', description: 'Interval between minutes in the picker', type: 'number', default: '1' },
  { property: 'secondStep', description: 'Interval between seconds in the picker', type: 'number', default: '1' },
  { property: 'status', description: 'Validation status', type: "'error' | 'warning'", default: '-' },
  { property: 'data-testid', description: 'Test ID prefix for child elements', type: 'string', default: '"timepicker"' },
  { property: 'className', description: 'Additional CSS classes', type: 'string', default: '-' },
];

const examples = [
  {
    id: 'basic',
    title: 'Basic TimePicker',
    description: 'Simple time picker with default 24-hour format.',
    code: `import { TimePicker } from 'asterui'

export default function App() {
  return <TimePicker placeholder="Select time" />
}`,
  },
  {
    id: '12-hour',
    title: '12-Hour Format',
    description: 'Time picker with 12-hour format and AM/PM selection.',
    code: `import { TimePicker } from 'asterui'

export default function App() {
  return <TimePicker format="12" placeholder="Select time" />
}`,
  },
  {
    id: 'seconds',
    title: 'With Seconds',
    description: 'Time picker that includes seconds selection.',
    code: `import { TimePicker } from 'asterui'

export default function App() {
  return <TimePicker showSeconds placeholder="Select time" />
}`,
  },
  {
    id: 'controlled',
    title: 'Controlled',
    description: 'Controlled time picker with state management.',
    code: `import { useState } from 'react'
import { TimePicker, Typography } from 'asterui'

const { Text } = Typography

export default function App() {
  const [time, setTime] = useState<Date | null>(null)

  return (
    <Space direction="vertical">
      <TimePicker value={time} onChange={setTime} />
      <Text size="sm" muted>
        Selected: {time ? time.toLocaleTimeString() : 'None'}
      </Text>
    </Space>
  )
}`,
  },
  {
    id: 'sizes',
    title: 'Different Sizes',
    description: 'Time picker in various sizes.',
    code: `import { TimePicker, Space } from 'asterui'

export default function App() {
  return (
    <Space direction="vertical">
      <TimePicker size="xs" placeholder="Extra small" />
      <TimePicker size="sm" placeholder="Small" />
      <TimePicker size="md" placeholder="Medium" />
      <TimePicker size="lg" placeholder="Large" />
    </Space>
  )
}`,
  },
  {
    id: 'disabled',
    title: 'Disabled',
    description: 'Disabled time picker with a default value.',
    code: `import { TimePicker } from 'asterui'

export default function App() {
  return <TimePicker disabled defaultValue={new Date()} />
}`,
  },
  {
    id: 'steps',
    title: 'Time Steps',
    description: 'Time picker with custom intervals (15-minute steps).',
    code: `import { TimePicker } from 'asterui'

export default function App() {
  return <TimePicker minuteStep={15} placeholder="Select time (15 min intervals)" />
}`,
  },
  {
    id: 'form',
    title: 'In Form',
    description: 'TimePicker integrated with Form component using Row/Col layout.',
    code: `import { TimePicker, Form, Button, Row, Col, notification } from 'asterui'

export default function App() {
  const handleSubmit = (values) => {
    notification.success({
      message: 'Form Submitted',
      description: \`Start: \${values.startTime?.toLocaleTimeString() || 'Not set'}, End: \${values.endTime?.toLocaleTimeString() || 'Not set'}\`,
    })
  }

  return (
    <Form onFinish={handleSubmit}>
      <Row gutter={16}>
        <Col span={12}>
          <Form.Item name="startTime" label="Start Time" rules={{ required: 'Please select start time' }}>
            <TimePicker placeholder="Start" />
          </Form.Item>
        </Col>
        <Col span={12}>
          <Form.Item name="endTime" label="End Time">
            <TimePicker placeholder="End" />
          </Form.Item>
        </Col>
      </Row>
      <Form.Item>
        <Button htmlType="submit" color="primary">Submit</Button>
      </Form.Item>
    </Form>
  )
}`,
  },
];
---

<Layout title="TimePicker - AsterUI">
  <div class="max-w-screen-xl mx-auto">
    <div class="mb-8">
      <nav class="text-sm breadcrumbs mb-4">
        <ul>
          <li><a href="/">Home</a></li>
          <li><a href="/components">Components</a></li>
          <li>TimePicker</li>
        </ul>
      </nav>
      <h1 class="text-4xl font-bold mb-2">TimePicker</h1>
      <p class="text-base-content/70 text-lg">Select time with an interactive picker interface.</p>
    </div>

    <section class="mb-8">
      <h2 class="text-2xl font-bold mb-4">Import</h2>
      <div class="border border-base-300 rounded-lg overflow-hidden [&_pre]:!m-0 [&_pre]:!rounded-none">
        <Code code="import { TimePicker } from 'asterui'" lang="tsx" themes={{ light: 'github-light', dark: 'github-dark' }} defaultColor={false} />
      </div>
    </section>

    <section class="mb-12">
      <h2 class="text-2xl font-bold mb-6">Examples</h2>
      <div class="columns-1 lg:columns-2 gap-6">
      {examples.map((example) => (
        <div class="example-card mb-6 border border-base-300 rounded-lg break-inside-avoid">
          <div class="p-4 bg-base-100 rounded-t-lg">
            <h3 class="text-lg font-semibold mb-1">{example.title}</h3>
            <p class="text-sm text-base-content/70 mb-4">{example.description}</p>
            <div class="demo-container" data-example={example.id}></div>
          </div>
          <div class="border-t border-base-300 flex justify-center bg-base-200 rounded-b-lg">
            <div class="tooltip tooltip-top" data-tip="Show code">
              <button class="toggle-code btn btn-ghost btn-sm font-mono">&lt;&#8201;&gt;</button>
            </div>
          </div>
          <div class="code-panel relative" aria-hidden="true">
            <button class="copy-btn absolute top-2 right-2 btn btn-xs btn-ghost z-10" data-code={example.code}>
              <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" /></svg>
            </button>
            <div class="[&_pre]:!p-4 [&_pre]:!rounded-none [&_pre]:!m-0 text-sm">
              <Code code={example.code} lang="tsx" themes={{ light: 'github-light', dark: 'github-dark' }} defaultColor={false} />
            </div>
          </div>
        </div>
      ))}
      </div>
    </section>

    <section class="mb-12">
      <h2 class="text-2xl font-bold mb-6">API</h2>
      <ApiTable title="TimePicker" data={timePickerApi} />
    </section>

    <section class="mb-8">
      <h2 class="text-2xl font-bold mb-4">Accessibility</h2>
      <ul class="list-disc list-inside space-y-2 text-base-content/80">
        <li>Input field has <code>aria-haspopup</code> and <code>aria-expanded</code> attributes</li>
        <li>Dropdown uses <code>role="dialog"</code> with proper labeling</li>
        <li>Time columns use <code>role="listbox"</code> with <code>aria-label</code></li>
        <li>Time options use <code>role="option"</code> with <code>aria-selected</code></li>
        <li>Full keyboard navigation: Arrow keys to navigate, Escape to close, Enter to confirm</li>
        <li>Clear button has <code>aria-label</code> for screen readers</li>
        <li>Disabled state properly communicated to assistive technology</li>
      </ul>
    </section>
  </div>
</Layout>

<style>
  .code-panel { max-height: 0; overflow: hidden; transition: max-height 0.3s ease-out; }
  .example-card.open .code-panel { max-height: 2000px; }
</style>

<script>
  import '../../scripts/timepickerDemos.tsx';
  document.querySelectorAll('.toggle-code').forEach(btn => {
    btn.addEventListener('click', () => {
      const card = btn.closest('.example-card');
      if (card) {
        card.classList.toggle('open');
        const panel = card.querySelector('.code-panel');
        const tooltip = btn.closest('.tooltip');
        if (card.classList.contains('open')) {
          panel?.setAttribute('aria-hidden', 'false');
          tooltip?.setAttribute('data-tip', 'Hide code');
        } else {
          panel?.setAttribute('aria-hidden', 'true');
          tooltip?.setAttribute('data-tip', 'Show code');
        }
      }
    });
  });
  document.querySelectorAll('.copy-btn').forEach(btn => {
    btn.addEventListener('click', async () => {
      const code = btn.getAttribute('data-code');
      if (code) {
        await navigator.clipboard.writeText(code);
        btn.classList.add('btn-success');
        setTimeout(() => btn.classList.remove('btn-success'), 1000);
      }
    });
  });
</script>
