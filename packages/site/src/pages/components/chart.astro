    title: 'Radial Bar Chart',
    description: 'Circular progress indicators.',
    code: `import React from 'react'
import { Chart } from 'asterui'

const App: React.FC = () => (
  <Chart
    type="radialBar"
    height={350}
    series={[76, 67, 61, 90]}
    options={{
      labels: ['Apples', 'Oranges', 'Bananas', 'Berries'],
      plotOptions: {
        radialBar: {
