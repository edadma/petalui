import Layout from '../../layouts/Layout.astro';
import ApiTable from '../../components/ApiTable.astro';
import { Code } from 'astro:components';

const chartApi = [
  { property: 'type', description: 'Chart type', type: "'line' | 'bar' | 'pie' | 'donut' | 'area' | 'radar' | 'radialBar'", default: "'line'" },
  { property: 'series', description: 'Data series', type: 'ApexAxisChartSeries | ApexNonAxisChartSeries', default: '[]' },
  { property: 'options', description: 'ApexCharts options', type: 'ApexOptions', default: '{}' },
  { property: 'height', description: 'Chart height', type: 'number | string', default: '350' },
  { property: 'width', description: 'Chart width', type: 'number | string', default: "'100%'" },
  { property: 'className', description: 'Additional CSS classes', type: 'string', default: '-' },
];

const examples = [
  {
    id: 'line',
    title: 'Line Chart',
    description: 'Simple line chart for time series data.',
    code: `import React from 'react'
import { Chart } from 'asterui'

const App: React.FC = () => (
  <Chart
    type="line"
    height={300}
    series={[
      {
        name: 'Sales',
        data: [30, 40, 35, 50, 49, 60, 70, 91, 125],
      },
    ]}
    options={{
      xaxis: {
        categories: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep'],
      },
    }}
  />
)

export default App`,
  },
  {
    id: 'multi-line',
    title: 'Multi-line Chart',
    description: 'Compare multiple data series.',
    code: `import React from 'react'
import { Chart } from 'asterui'

const App: React.FC = () => (
  <Chart
    type="line"
    height={300}
    series={[
      {
        name: 'Revenue',
        data: [30, 40, 45, 50, 49, 60, 70, 91],
      },
      {
        name: 'Expenses',
        data: [20, 35, 40, 35, 40, 55, 60, 75],
      },
    ]}
    options={{
      xaxis: {
        categories: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug'],
      },
      stroke: {
        curve: 'smooth',
      },
    }}
  />
)

export default App`,
  },
  {
    id: 'bar',
    title: 'Bar Chart',
    description: 'Categorical data visualization.',
    code: `import React from 'react'
import { Chart } from 'asterui'

const App: React.FC = () => (
  <Chart
    type="bar"
    height={300}
    series={[
      {
        name: 'Sales',
        data: [44, 55, 57, 56, 61, 58, 63, 60, 66],
      },
    ]}
    options={{
      xaxis: {
        categories: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep'],
      },
      plotOptions: {
        bar: {
          borderRadius: 4,
        },
      },
    }}
  />
)

export default App`,
  },
  {
    id: 'stacked-bar',
    title: 'Stacked Bar Chart',
    description: 'Show composition of values.',
    code: `import React from 'react'
import { Chart } from 'asterui'

const App: React.FC = () => (
  <Chart
    type="bar"
    height={300}
    series={[
      { name: 'Product A', data: [44, 55, 41, 67, 22, 43] },
      { name: 'Product B', data: [13, 23, 20, 8, 13, 27] },
      { name: 'Product C', data: [11, 17, 15, 15, 21, 14] },
    ]}
    options={{
      chart: { stacked: true },
      xaxis: { categories: ['Q1', 'Q2', 'Q3', 'Q4', 'Q5', 'Q6'] },
    }}
  />
)

export default App`,
  },
  {
    id: 'pie',
    title: 'Pie Chart',
    description: 'Show proportions of a whole.',
    code: `import React from 'react'
import { Chart } from 'asterui'

const App: React.FC = () => (
  <Chart
    type="pie"
    height={350}
    series={[44, 55, 13, 43, 22]}
    options={{
      labels: ['Team A', 'Team B', 'Team C', 'Team D', 'Team E'],
      legend: {
        position: 'bottom',
      },
    }}
  />
)

export default App`,
  },
  {
    id: 'donut',
    title: 'Donut Chart',
    description: 'Pie chart with center cutout for totals.',
    code: `import React from 'react'
import { Chart } from 'asterui'

const App: React.FC = () => (
  <Chart
    type="donut"
    height={350}
    series={[44, 55, 41, 17, 15]}
    options={{
      labels: ['Apple', 'Mango', 'Orange', 'Watermelon', 'Grapes'],
      legend: {
        position: 'bottom',
      },
      plotOptions: {
        pie: {
          donut: {
            labels: {
              show: true,
