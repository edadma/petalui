import Layout from '../../layouts/Layout.astro';
import ApiTable from '../../components/ApiTable.astro';
import { Code } from 'astro:components';

const flexApi = [
  { property: 'direction', description: 'Flex direction', type: "'row' | 'column' | 'row-reverse' | 'column-reverse'", default: "'row'" },
  { property: 'justify', description: 'Justify content along main axis', type: "'start' | 'end' | 'center' | 'between' | 'around' | 'evenly'", default: '-' },
  { property: 'align', description: 'Align items along cross axis', type: "'start' | 'end' | 'center' | 'baseline' | 'stretch'", default: '-' },
  { property: 'wrap', description: 'Whether to wrap items', type: "boolean | 'wrap' | 'nowrap' | 'wrap-reverse'", default: 'false' },
  { property: 'gap', description: 'Gap between items', type: "'xs' | 'sm' | 'md' | 'lg' | 'xl' | number", default: '-' },
  { property: 'flex', description: 'Flex shorthand for the container', type: "'1' | 'auto' | 'initial' | 'none'", default: '-' },
  { property: 'inline', description: 'Use inline-flex instead of flex', type: 'boolean', default: 'false' },
  { property: 'minHeight', description: 'Minimum height', type: "'screen' | 'full' | 'fit' | 'min' | 'max'", default: '-' },
  { property: 'minWidth', description: 'Minimum width', type: "'full' | 'fit' | 'min' | 'max'", default: '-' },
  { property: 'className', description: 'Additional CSS classes', type: 'string', default: '-' },
];

const examples = [
  {
    id: 'basic',
    title: 'Basic',
    description: 'Default horizontal flex layout.',
    code: `import React from 'react'
import { Flex, Button } from 'asterui'

const App: React.FC = () => (
  <Flex gap="sm">
    <Button type="primary">Button 1</Button>
    <Button type="secondary">Button 2</Button>
    <Button type="accent">Button 3</Button>
  </Flex>
)

export default App`,
  },
  {
    id: 'direction',
    title: 'Direction',
    description: 'Control flex direction with the direction prop.',
    code: `import React from 'react'
import { Flex, Button } from 'asterui'

const App: React.FC = () => (
  <Flex direction="column" gap="sm">
    <Button type="primary">First</Button>
    <Button type="secondary">Second</Button>
    <Button type="accent">Third</Button>
  </Flex>
)

export default App`,
  },
  {
    id: 'justify',
    title: 'Justify Content',
    description: 'Distribute items along the main axis.',
    code: `import React from 'react'
import { Flex, Button } from 'asterui'

const App: React.FC = () => (
  <Flex direction="column" gap="md">
    <Flex justify="start" gap="sm" className="bg-base-200 p-2 rounded">
