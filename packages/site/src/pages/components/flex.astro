  </Flex>
)

export default App`,
  },
  {
    id: 'gap',
    title: 'Gap Sizes',
    description: 'Control spacing between items.',
    code: `import React from 'react'
import { Flex, Badge } from 'asterui'

const App: React.FC = () => (
  <Flex direction="column" gap="lg">
    <Flex gap="xs">
      <Badge>XS</Badge>
      <Badge>Gap</Badge>
    </Flex>
    <Flex gap="sm">
      <Badge>SM</Badge>
      <Badge>Gap</Badge>
