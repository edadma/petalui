const App: React.FC = () => (
  <div className="flex gap-2 flex-wrap">
    <Tag color="#f50">Red</Tag>
    <Tag color="#2db7f5">Blue</Tag>
    <Tag color="#87d068">Green</Tag>
    <Tag color="#108ee9">Cyan</Tag>
