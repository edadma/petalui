      <CheckableTag
        checked={starred}
        onChange={setStarred}
        icon={<StarIcon className="w-4 h-4" />}
      >
        Star
      </CheckableTag>
      <CheckableTag
        checked={saved}
        onChange={setSaved}
        icon={<BookmarkIcon className="w-4 h-4" />}
      >
        Save
      </CheckableTag>
    </div>
  )
}

export default App`,
  },
  {
    id: 'use-cases',
    title: 'Use Cases',
    description: 'Practical examples of tag usage.',
    code: `import React from 'react'
