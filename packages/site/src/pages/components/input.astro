---
import Layout from '../../layouts/Layout.astro';
import ApiTable from '../../components/ApiTable.astro';
import { Code } from 'astro:components';

const inputApi = [
  {
    property: 'type',
    description: 'HTML input type',
    type: "'text' | 'password' | 'email' | 'number' | 'date' | 'datetime-local' | 'week' | 'month' | 'tel' | 'url' | 'search' | 'time'",
    default: "'text'",
  },
  {
    property: 'size',
    description: 'Input size',
    type: "'xs' | 'sm' | 'md' | 'lg' | 'xl'",
  },
  {
    property: 'color',
    description: 'Input color variant',
    type: "'neutral' | 'primary' | 'secondary' | 'accent' | 'info' | 'success' | 'warning' | 'error'",
  },
  {
    property: 'status',
    description: 'Validation status (sets aria-invalid)',
    type: "'error' | 'warning'",
  },
  {
    property: 'ghost',
    description: 'Ghost variant (transparent)',
    type: 'boolean',
    default: 'false',
  },
  {
    property: 'bordered',
    description: 'Show border (set to false to remove)',
    type: 'boolean',
    default: 'true',
  },
  {
    property: 'allowClear',
    description: 'Show clear button when input has value',
    type: 'boolean | { clearIcon?: ReactNode }',
    default: 'false',
  },
  {
    property: 'onClear',
    description: 'Callback when clear button is clicked',
    type: '() => void',
  },
  {
    property: 'prefix',
    description: 'Prefix icon or element (inside input)',
    type: 'React.ReactNode',
  },
  {
    property: 'suffix',
    description: 'Suffix icon or element (inside input)',
    type: 'React.ReactNode',
  },
  {
    property: 'addonBefore',
    description: 'Text/element before input (outside, using DaisyUI label)',
    type: 'React.ReactNode',
  },
  {
    property: 'addonAfter',
    description: 'Text/element after input (outside, using DaisyUI label)',
    type: 'React.ReactNode',
  },
  {
    property: 'floatingLabel',
    description: 'Floating label text (uses DaisyUI floating-label)',
    type: 'string',
  },
  {
    property: 'mask',
    description: 'Input mask pattern. Use # for digits, A for letters, * for alphanumeric',
    type: 'string',
  },
  {
    property: 'maskPlaceholder',
    description: 'Placeholder character shown in mask',
    type: 'string',
    default: "'_'",
  },
  {
    property: 'errorId',
    description: 'ID of error message element (for aria-describedby)',
    type: 'string',
  },
  {
    property: 'disabled',
    description: 'Disabled state',
    type: 'boolean',
    default: 'false',
  },
  {
    property: 'placeholder',
    description: 'Placeholder text',
    type: 'string',
  },
  {
    property: 'value',
    description: 'Input value',
    type: 'string',
  },
  {
    property: 'onChange',
    description: 'Change event handler',
    type: '(e: React.ChangeEvent<HTMLInputElement>) => void',
  },
  {
    property: 'className',
    description: 'Additional CSS classes',
    type: 'string',
  },
];

const examples = [
  {
    id: 'basic',
    title: 'Basic Input',
    description: 'Simple text input field.',
    code: `import React from 'react'
import { Input } from 'asterui'

const App: React.FC = () => (
  <Input placeholder="Enter text..." />
)

export default App`,
  },
  {
    id: 'sizes',
    title: 'Sizes',
    description: 'Five sizes: xs, sm, md (default), lg, and xl.',
    code: `import React from 'react'
import { Input, Space } from 'asterui'

const App: React.FC = () => (
  <Space direction="vertical" size="sm">
    <Input size="xs" placeholder="Extra small" />
    <Input size="sm" placeholder="Small" />
    <Input size="md" placeholder="Medium (default)" />
    <Input size="lg" placeholder="Large" />
    <Input size="xl" placeholder="Extra large" />
  </Space>
)

export default App`,
  },
  {
    id: 'colors',
    title: 'Colors',
    description: 'Different color variants for visual emphasis.',
    code: `import React from 'react'
import { Input, Space } from 'asterui'

const App: React.FC = () => (
  <Space direction="vertical" size="sm">
    <Input color="primary" placeholder="Primary" />
    <Input color="secondary" placeholder="Secondary" />
    <Input color="accent" placeholder="Accent" />
    <Input color="info" placeholder="Info" />
    <Input color="success" placeholder="Success" />
    <Input color="warning" placeholder="Warning" />
    <Input color="error" placeholder="Error" />
  </Space>
)

export default App`,
  },
  {
    id: 'types',
    title: 'Input Types',
    description: 'Different HTML input types.',
    code: `import React from 'react'
import { Input, Space } from 'asterui'

const App: React.FC = () => (
  <Space direction="vertical" size="sm">
    <Input type="text" placeholder="Text input" />
    <Input type="email" placeholder="Email input" />
    <Input type="password" placeholder="Password input" />
    <Input type="number" placeholder="Number input" />
    <Input type="tel" placeholder="Telephone input" />
    <Input type="url" placeholder="URL input" />
    <Input type="search" placeholder="Search input" />
  </Space>
)

export default App`,
  },
  {
    id: 'variants',
    title: 'Variants',
    description: 'Bordered and ghost styles.',
    code: `import React from 'react'
import { Input, Space } from 'asterui'

const App: React.FC = () => (
  <Space direction="vertical" size="sm">
    <Input placeholder="Default bordered" />
    <Input bordered={false} placeholder="Without border" />
    <Input ghost placeholder="Ghost variant" />
  </Space>
)

export default App`,
  },
  {
    id: 'mask',
    title: 'Input Mask',
    description: 'Formatted input with masking pattern.',
    code: `import React from 'react'
import { Input, Space } from 'asterui'

const App: React.FC = () => (
  <Space direction="vertical" size="sm">
    <Input mask="(###) ###-####" placeholder="Phone number" />
    <Input mask="####-####-####-####" placeholder="Credit card" />
    <Input mask="##/##/####" placeholder="Date (MM/DD/YYYY)" />
    <Input mask="AA-####" placeholder="License plate" />
  </Space>
)

export default App`,
  },
  {
    id: 'controlled',
    title: 'Controlled Input',
    description: 'Input with controlled state.',
    code: `import React, { useState } from 'react'
import { Input, Space } from 'asterui'

const App: React.FC = () => {
  const [value, setValue] = useState('')

  return (
    <Space direction="vertical" size="sm">
      <Input
        value={value}
        onChange={(e) => setValue(e.target.value)}
        placeholder="Type something..."
      />
      <div className="text-sm text-base-content/70">
        Value: {value || '(empty)'}
      </div>
    </Space>
  )
}

export default App`,
  },
  {
    id: 'disabled',
    title: 'Disabled',
    description: 'Disabled input state.',
    code: `import React from 'react'
import { Input, Space } from 'asterui'

const App: React.FC = () => (
  <Space direction="vertical" size="sm">
    <Input placeholder="Normal input" />
    <Input placeholder="Disabled input" disabled />
    <Input value="Disabled with value" disabled />
  </Space>
)

export default App`,
  },
  {
    id: 'allowClear',
    title: 'Allow Clear',
    description: 'Input with clear button.',
    code: `import React, { useState } from 'react'
import { Input, Space } from 'asterui'

const App: React.FC = () => {
  const [value, setValue] = useState('Clear me!')

  return (
    <Space direction="vertical" size="sm">
      <Input
        value={value}
        onChange={(e) => setValue(e.target.value)}
        allowClear
        placeholder="Type then clear..."
      />
    </Space>
  )
}

export default App`,
  },
  {
    id: 'prefix-suffix',
    title: 'Prefix & Suffix',
    description: 'Input with prefix and suffix icons.',
    code: `import React from 'react'
import { Input, Space } from 'asterui'
import { MagnifyingGlassIcon, UserIcon } from '@heroicons/react/24/outline'

const App: React.FC = () => (
  <Space direction="vertical" size="sm">
    <Input prefix={<MagnifyingGlassIcon className="w-4 h-4" />} placeholder="Search..." />
    <Input prefix={<UserIcon className="w-4 h-4" />} placeholder="Username" />
    <Input suffix="@gmail.com" placeholder="Email" />
  </Space>
)

export default App`,
  },
  {
    id: 'status',
    title: 'Validation Status',
    description: 'Input with validation status for form feedback.',
    code: `import React from 'react'
import { Input, Space } from 'asterui'

const App: React.FC = () => (
  <Space direction="vertical" size="sm">
    <div>
      <Input status="error" placeholder="Error status" errorId="error-msg" />
      <p id="error-msg" className="text-error text-sm mt-1">This field is required</p>
    </div>
    <div>
      <Input status="warning" placeholder="Warning status" />
      <p className="text-warning text-sm mt-1">Please verify this value</p>
    </div>
  </Space>
)

export default App`,
  },
  {
    id: 'floating-label',
    title: 'Floating Label',
    description: 'Input with animated floating label that moves above when focused or filled.',
    code: `import React, { useState } from 'react'
import { Input, Space } from 'asterui'

const App: React.FC = () => {
  const [email, setEmail] = useState('')
  const [password, setPassword] = useState('')

  return (
    <Space direction="vertical" size="md">
      <Input
        floatingLabel="Email"
        type="email"
        value={email}
        onChange={(e) => setEmail(e.target.value)}
      />
      <Input
        floatingLabel="Password"
        type="password"
        value={password}
        onChange={(e) => setPassword(e.target.value)}
      />
    </Space>
  )
}

export default App`,
  },
  {
    id: 'addons',
    title: 'Addons',
    description: 'Input with text or elements before/after (outside the input field).',
    code: `import React from 'react'
import { Input, Space } from 'asterui'

const App: React.FC = () => (
  <Space direction="vertical" size="md">
    <Input addonBefore="https://" placeholder="your-site.com" />
    <Input addonAfter=".com" placeholder="username" />
    <Input addonBefore="$" addonAfter=".00" placeholder="0" />
  </Space>
)

export default App`,
  },
];
---

<Layout title="Input - AsterUI">
  <div class="max-w-screen-xl mx-auto">
    <!-- Header -->
    <div class="mb-8">
      <nav class="text-sm breadcrumbs mb-4">
        <ul>
          <li><a href="/">Home</a></li>
          <li><a href="/components">Components</a></li>
          <li>Input</li>
        </ul>
      </nav>
      <h1 class="text-4xl font-bold mb-2">Input</h1>
      <p class="text-base-content/70 text-lg">
        Text input field for user data entry with validation states and customization options.
      </p>
    </div>

    <!-- Import -->
    <section class="mb-8">
      <h2 class="text-2xl font-bold mb-4">Import</h2>
      <div class="border border-base-300 rounded-lg overflow-hidden [&_pre]:!m-0 [&_pre]:!rounded-none">
        <Code code="import { Input } from 'asterui'" lang="tsx" themes={{ light: 'github-light', dark: 'github-dark' }} defaultColor={false} />
      </div>
    </section>

    <!-- Examples -->
    <section class="mb-12">
      <h2 class="text-2xl font-bold mb-6">Examples</h2>

      <div class="columns-1 lg:columns-2 gap-6">
      {examples.map((example, i) => (
        <div class="example-card mb-6 border border-base-300 rounded-lg break-inside-avoid">
          <div class="p-4 bg-base-100 rounded-t-lg">
            <h3 class="text-lg font-semibold mb-1">{example.title}</h3>
            <p class="text-sm text-base-content/70 mb-4">{example.description}</p>
            <div class="demo-container" data-example={example.id}></div>
          </div>
          <div class="border-t border-base-300 flex justify-center bg-base-200 rounded-b-lg">
            <div class="tooltip tooltip-top" data-tip="Show code">
              <button class="toggle-code btn btn-ghost btn-sm font-mono">
                &lt;&#8201;&gt;
              </button>
            </div>
          </div>
          <div class="code-panel relative" aria-hidden="true">
              <button class="copy-btn absolute top-2 right-2 btn btn-xs btn-ghost z-10" data-code={example.code}>
                <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
                </svg>
              </button>
              <div class="[&_pre]:!p-4 [&_pre]:!rounded-none [&_pre]:!m-0 text-sm">
                <Code code={example.code} lang="tsx" themes={{ light: 'github-light', dark: 'github-dark' }} defaultColor={false} />
              </div>
          </div>
        </div>
      ))}
      </div>
    </section>

    <!-- API -->
    <section class="mb-12">
      <h2 class="text-2xl font-bold mb-6">API</h2>
      <ApiTable title="Input" data={inputApi} />
    </section>

    <!-- Accessibility -->
    <section class="mb-8">
      <h2 class="text-2xl font-bold mb-4">Accessibility</h2>
      <ul class="list-disc list-inside space-y-2 text-base-content/80">
        <li>Uses native <code class="bg-base-200 px-1 rounded">&lt;input&gt;</code> element for proper keyboard support</li>
        <li>Disabled state is properly communicated to assistive technologies</li>
        <li>Clear button has <code class="bg-base-200 px-1 rounded">aria-label</code> for screen readers</li>
        <li>Use <code class="bg-base-200 px-1 rounded">status="error"</code> to set <code class="bg-base-200 px-1 rounded">aria-invalid</code> automatically</li>
        <li>Use <code class="bg-base-200 px-1 rounded">errorId</code> to link input to error message via <code class="bg-base-200 px-1 rounded">aria-describedby</code></li>
        <li>Focus states are clearly visible for keyboard navigation</li>
      </ul>
    </section>
  </div>
</Layout>

<style>
  .code-panel {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.3s ease-out;
  }
  .example-card.open .code-panel {
    max-height: 2000px;
  }
</style>

<script>
  import '../../scripts/inputDemos';

  // Toggle code visibility
  document.querySelectorAll('.toggle-code').forEach(btn => {
    btn.addEventListener('click', () => {
      const card = btn.closest('.example-card');
      if (card) {
        card.classList.toggle('open');
        const panel = card.querySelector('.code-panel');
        const tooltip = btn.closest('.tooltip');
        if (card.classList.contains('open')) {
          panel?.setAttribute('aria-hidden', 'false');
          tooltip?.setAttribute('data-tip', 'Hide code');
        } else {
          panel?.setAttribute('aria-hidden', 'true');
          tooltip?.setAttribute('data-tip', 'Show code');
        }
      }
    });
  });
</script>
